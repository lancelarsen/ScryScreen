<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             xmlns:controls="using:ScryScreen.App.Controls"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.DiceRollerView"
             x:DataType="vm:DiceRollerViewModel">

  <Border Background="Transparent"
          BorderThickness="0"
          CornerRadius="10"
        Padding="10,10,10,4">
      <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
      <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
      <!-- Clear (compact circle button) -->
      <Button Width="28" Height="28"
        Classes="circleSmall"
        ToolTip.Tip="Clear"
        Command="{Binding ClearCommand}">
        <i:Icon Value="mdi-broom" FontSize="18"
          Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
      </Button>

      <Border Width="1" Height="24" Background="{DynamicResource ScryBorder}" Opacity="0.7" Margin="2,0" />

        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d20"
                Command="{Binding RollSingleDieCommand}" CommandParameter="20">
          <i:Icon Value="mdi-dice-d20-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d12"
                Command="{Binding RollSingleDieCommand}" CommandParameter="12">
          <i:Icon Value="mdi-dice-d12-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d10"
                Command="{Binding RollSingleDieCommand}" CommandParameter="10">
          <i:Icon Value="mdi-dice-d10-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d8"
                Command="{Binding RollSingleDieCommand}" CommandParameter="8">
          <i:Icon Value="mdi-dice-d8-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d6"
                Command="{Binding RollSingleDieCommand}" CommandParameter="6">
          <i:Icon Value="mdi-dice-d6-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d4"
                Command="{Binding RollSingleDieCommand}" CommandParameter="4">
          <i:Icon Value="mdi-dice-d4-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>

        <!-- d100 / percentile (compact circle button) -->
        <Button Width="28" Height="28"
                Classes="circleSmall"
          Foreground="{DynamicResource ScryTextMuted}"
          BorderBrush="{DynamicResource ScryTextMuted}"
                BorderThickness="2"
                ToolTip.Tip="Roll d100 (percentile)"
                Command="{Binding RollSingleDieCommand}" CommandParameter="100">
          <TextBlock Text="%" FontSize="14" FontWeight="Bold"
                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     Margin="0,1,0,0" />
        </Button>

        <Border Width="1" Height="24" Background="{DynamicResource ScryBorder}" Opacity="0.7" Margin="2,0" />

        <!-- Roll direction -->
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionRight}"
          ToolTip.Tip="Roll from left to right"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Right">
          <i:Icon Value="mdi-arrow-right" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionLeft}"
          ToolTip.Tip="Roll from right to left"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Left">
          <i:Icon Value="mdi-arrow-left" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionDown}"
          ToolTip.Tip="Roll from top to bottom"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Down">
          <i:Icon Value="mdi-arrow-down" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionUp}"
          ToolTip.Tip="Roll from bottom to top"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Up">
          <i:Icon Value="mdi-arrow-up" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionRandom}"
          ToolTip.Tip="Random roll direction"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Random">
          <i:Icon Value="mdi-shuffle-variant" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
      </StackPanel>

      <!-- Dice configuration (shown via gear toggle in MainWindow) -->
      <Border Grid.Row="1"
              IsVisible="{Binding ShowDiceConfiguration}"
              Background="#0A0F18"
              BorderBrush="{DynamicResource ScryBorder}"
              BorderThickness="1"
              CornerRadius="10"
              Padding="12">
        <Grid RowDefinitions="Auto,*" RowSpacing="10">
          <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="10" VerticalAlignment="Center">
            <TextBlock Grid.Column="0"
                       Text="Dice Configuration"
                       Foreground="{DynamicResource ScryTextMuted}"
                       FontWeight="SemiBold" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
              <Button Width="28" Height="28"
                      Classes="circleSmall"
                      ToolTip.Tip="Reset all dice scales to 1.0"
                      Command="{Binding ResetDiceConfigurationCommand}">
                <i:Icon Value="mdi-restore" FontSize="18"
                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
              </Button>

              <ToggleButton Width="28" Height="28"
                            Classes="circleSmall"
                            IsChecked="{Binding ShowDebugInfo, Mode=TwoWay}"
                            ToolTip.Tip="Show debug info">
                <i:Icon Value="mdi-bug-outline" FontSize="18"
                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
              </ToggleButton>
            </StackPanel>
          </Grid>

          <ItemsControl Grid.Row="1" ItemsSource="{Binding DiceVisualConfigs}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel Spacing="10" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
              <DataTemplate x:DataType="vm:DiceDieVisualConfigViewModel">
                <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" VerticalAlignment="Center">
                  <TextBlock Grid.Column="0" Text="{Binding DisplayName}" Foreground="{DynamicResource ScryTextMuted}" Width="44" VerticalAlignment="Center" />

                  <TextBlock Grid.Column="1" Text="Size" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                  <Slider Grid.Column="2"
                          Classes="portalTimeline"
                          Width="120"
                          Minimum="0.5"
                          Maximum="1.75"
                          Value="{Binding DieScale, Mode=TwoWay}" />
                  <TextBlock Grid.Column="3" Text="{Binding DieScale, StringFormat={}{0:0.00}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />

                  <TextBlock Grid.Column="4" Text="Numbers" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                  <Slider Grid.Column="5"
                          Classes="portalTimeline"
                          Width="120"
                          Minimum="0.5"
                          Maximum="2.0"
                          Value="{Binding NumberScale, Mode=TwoWay}" />
                  <TextBlock Grid.Column="6" Text="{Binding NumberScale, StringFormat={}{0:0.00}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
                </Grid>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </Grid>
      </Border>

      <!-- Roll row + History box share a common column layout so the history right edge lines up with the Roll button -->
      <Grid Grid.Row="2"
        RowDefinitions="Auto,Auto"
            ColumnDefinitions="Auto,Auto,Auto,*"
            ColumnSpacing="8"
            RowSpacing="10">
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Roll" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

        <TextBox Grid.Row="0" Grid.Column="1"
                 Width="320"
                 Height="36"
                 HorizontalAlignment="Left"
                 Background="#0A0F18"
                 BorderBrush="{DynamicResource ScryBorder}"
                 BorderThickness="1"
                 CornerRadius="8"
                 Padding="10,4"
                 VerticalContentAlignment="Center"
                 Text="{Binding Expression, Mode=TwoWay}"
                 Watermark="e.g. 2d6+3">
          <TextBox.KeyBindings>
            <KeyBinding Gesture="Enter" Command="{Binding RollCommand}" />
          </TextBox.KeyBindings>
        </TextBox>

        <Button Grid.Row="0" Grid.Column="2"
                Width="28"
                Height="28"
                Classes="circleSmall"
                Command="{Binding RollCommand}">
          <i:Icon Value="mdi-dice-multiple" FontSize="18"
                  Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>

        <!-- History box: this is the only outlined panel in the Dice Tray UI -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                Background="#0A0F18"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="10"
                Padding="10,4,10,8">
          <Grid RowDefinitions="Auto,*" RowSpacing="6">
            <TextBlock Grid.Row="0"
                       IsVisible="{Binding LastErrorText, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                       Text="{Binding LastErrorText}"
                       Foreground="#F87171"
                       FontSize="12"
                       TextWrapping="Wrap" />

            <ScrollViewer Grid.Row="1"
                          MaxHeight="126"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
              <ItemsControl ItemsSource="{Binding History}">
                <ItemsControl.ItemsPanel>
                  <ItemsPanelTemplate>
                    <StackPanel Spacing="6" />
                  </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <controls:BoldTotalsTextBlock RawText="{Binding}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" TextWrapping="Wrap" />
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </ScrollViewer>
          </Grid>
        </Border>
      </Grid>
    </Grid>
  </Border>
</UserControl>
