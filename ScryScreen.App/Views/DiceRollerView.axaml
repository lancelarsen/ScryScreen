<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             xmlns:controls="using:ScryScreen.App.Controls"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.DiceRollerView"
             x:DataType="vm:DiceRollerViewModel">

  <Border Background="#0A0F18"
          BorderBrush="{DynamicResource ScryBorder}"
          BorderThickness="1"
          CornerRadius="10"
          Padding="10">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">
      <controls:DiceTray3DHost x:Name="DiceTray" Height="180" />

      <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8" VerticalAlignment="Center">
        <TextBlock Text="Roll" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

        <TextBox Grid.Column="1"
                 Height="36"
                 Background="#0A0F18"
                 BorderBrush="{DynamicResource ScryBorder}"
                 BorderThickness="1"
                 CornerRadius="8"
                 Padding="10,4"
                 VerticalContentAlignment="Center"
                 Text="{Binding Expression, Mode=TwoWay}"
                 Watermark="e.g. 2d6+3" />

        <Button Grid.Column="2"
                Background="#0A0F18"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12,6"
                Command="{Binding RollCommand}">
          <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
            <i:Icon Value="mdi-dice-multiple" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
            <TextBlock Text="Roll" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
          </StackPanel>
        </Button>

        <Button Grid.Column="3"
                Background="#0A0F18"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12,6"
                Command="{Binding ClearCommand}">
          <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
            <i:Icon Value="mdi-broom" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
            <TextBlock Text="Clear" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>

      <TextBlock Grid.Row="2"
                 IsVisible="{Binding LastErrorText, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                 Text="{Binding LastErrorText}"
                 Foreground="#F87171"
                 FontSize="12"
                 TextWrapping="Wrap" />

      <ScrollViewer Grid.Row="3" MaxHeight="150" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding History}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,6" />
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Grid>
  </Border>
</UserControl>
