<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             xmlns:controls="using:ScryScreen.App.Controls"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.DiceRollerView"
             x:DataType="vm:DiceRollerViewModel">

  <Border Background="Transparent"
          BorderThickness="0"
          CornerRadius="10"
        Padding="10,10,10,4">
      <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
      <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
      <!-- Clear (compact circle button) -->
      <Button Width="28" Height="28"
        Classes="circleSmall"
        ToolTip.Tip="Clear"
        Command="{Binding ClearCommand}">
        <i:Icon Value="mdi-broom" FontSize="18"
          Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
      </Button>

      <!-- Clear after each roll (toggle) -->
      <ToggleButton Width="28" Height="28"
        Classes="circleSmall effectToggle"
        ToolTip.Tip="Clear tray dice before each roll"
        IsChecked="{Binding ClearAfterEachRoll, Mode=TwoWay}">
        <svg:Svg Path="/Assets/Icons/air_left.svg" Width="18" Height="18" />
      </ToggleButton>

      <Border Width="1" Height="24" Background="{DynamicResource ScryBorder}" Opacity="0.7" Margin="2,0" />

        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d20"
                Command="{Binding RollSingleDieCommand}" CommandParameter="20">
          <i:Icon Value="mdi-dice-d20-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>

        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d20 with advantage (2d20 keep highest)"
                Command="{Binding RollD20AdvantageCommand}">
          <Grid Width="28" Height="28">
            <i:Icon Value="mdi-dice-d20-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
            <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0"
                    Background="#0A0F18" CornerRadius="6" Padding="2,0">
              <TextBlock Text="A" FontSize="10" FontWeight="Bold"
                         Foreground="{DynamicResource ScrySuccess}" />
            </Border>
          </Grid>
        </Button>

        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d20 with disadvantage (2d20 keep lowest)"
                Command="{Binding RollD20DisadvantageCommand}">
          <Grid Width="28" Height="28">
            <i:Icon Value="mdi-dice-d20-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
            <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0"
                    Background="#0A0F18" CornerRadius="6" Padding="2,0">
              <TextBlock Text="D" FontSize="10" FontWeight="Bold"
                         Foreground="{DynamicResource ScryDanger}" />
            </Border>
          </Grid>
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d12"
                Command="{Binding RollSingleDieCommand}" CommandParameter="12">
          <i:Icon Value="mdi-dice-d12-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d10"
                Command="{Binding RollSingleDieCommand}" CommandParameter="10">
          <i:Icon Value="mdi-dice-d10-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d8"
                Command="{Binding RollSingleDieCommand}" CommandParameter="8">
          <i:Icon Value="mdi-dice-d8-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d6"
                Command="{Binding RollSingleDieCommand}" CommandParameter="6">
          <i:Icon Value="mdi-dice-d6-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="0"
                ToolTip.Tip="Roll d4"
                Command="{Binding RollSingleDieCommand}" CommandParameter="4">
          <i:Icon Value="mdi-dice-d4-outline" FontSize="28" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>

        <!-- d100 / percentile (compact circle button) -->
        <Button Width="28" Height="28"
                Classes="circleSmall"
          Foreground="{DynamicResource ScryTextMuted}"
          BorderBrush="{DynamicResource ScryTextMuted}"
                BorderThickness="2"
                ToolTip.Tip="Roll d100 (percentile)"
                Command="{Binding RollSingleDieCommand}" CommandParameter="100">
          <TextBlock Text="%" FontSize="14" FontWeight="Bold"
                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     Margin="0,1,0,0" />
        </Button>

        <Button Width="28" Height="28"
                Classes="circleSmall"
                Foreground="{DynamicResource ScryTextMuted}"
                BorderBrush="{DynamicResource ScryTextMuted}"
                BorderThickness="2"
                ToolTip.Tip="Roll d100A (reroll tens, keep lowest)"
                Command="{Binding RollD100AdvantageCommand}">
          <Grid Width="28" Height="28">
            <TextBlock Text="%" FontSize="14" FontWeight="Bold"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0,1,0,0" />
            <Border HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Background="#0A0F18" CornerRadius="6" Padding="2,0">
              <TextBlock Text="A" FontSize="10" FontWeight="Bold"
                         Foreground="{DynamicResource ScrySuccess}" />
            </Border>
          </Grid>
        </Button>

        <Button Width="28" Height="28"
                Classes="circleSmall"
                Foreground="{DynamicResource ScryTextMuted}"
                BorderBrush="{DynamicResource ScryTextMuted}"
                BorderThickness="2"
                ToolTip.Tip="Roll d100AA (reroll tens twice, keep lowest)"
                Command="{Binding RollD100Advantage2Command}">
          <Grid Width="28" Height="28">
            <TextBlock Text="%" FontSize="14" FontWeight="Bold"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0,1,0,0" />
            <Border HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Background="#0A0F18" CornerRadius="6" Padding="1,0">
              <TextBlock Text="AA" FontSize="9" FontWeight="Bold"
                         Foreground="{DynamicResource ScrySuccess}" />
            </Border>
          </Grid>
        </Button>

        <Button Width="28" Height="28"
                Classes="circleSmall"
                Foreground="{DynamicResource ScryTextMuted}"
                BorderBrush="{DynamicResource ScryTextMuted}"
                BorderThickness="2"
                ToolTip.Tip="Roll d100D (reroll tens, keep highest)"
                Command="{Binding RollD100DisadvantageCommand}">
          <Grid Width="28" Height="28">
            <TextBlock Text="%" FontSize="14" FontWeight="Bold"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0,1,0,0" />
            <Border HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Background="#0A0F18" CornerRadius="6" Padding="2,0">
              <TextBlock Text="D" FontSize="10" FontWeight="Bold"
                         Foreground="{DynamicResource ScryDanger}" />
            </Border>
          </Grid>
        </Button>

        <Button Width="28" Height="28"
                Classes="circleSmall"
                Foreground="{DynamicResource ScryTextMuted}"
                BorderBrush="{DynamicResource ScryTextMuted}"
                BorderThickness="2"
                ToolTip.Tip="Roll d100DD (reroll tens twice, keep highest)"
                Command="{Binding RollD100Disadvantage2Command}">
          <Grid Width="28" Height="28">
            <TextBlock Text="%" FontSize="14" FontWeight="Bold"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0,1,0,0" />
            <Border HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Background="#0A0F18" CornerRadius="6" Padding="1,0">
              <TextBlock Text="DD" FontSize="9" FontWeight="Bold"
                         Foreground="{DynamicResource ScryDanger}" />
            </Border>
          </Grid>
        </Button>

        <Border Width="1" Height="24" Background="{DynamicResource ScryBorder}" Opacity="0.7" Margin="2,0" />

        <!-- Roll direction -->
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionRight}"
          ToolTip.Tip="Roll from left to right"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Right">
          <i:Icon Value="mdi-arrow-right" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionLeft}"
          ToolTip.Tip="Roll from right to left"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Left">
          <i:Icon Value="mdi-arrow-left" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionDown}"
          ToolTip.Tip="Roll from top to bottom"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Down">
          <i:Icon Value="mdi-arrow-down" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionUp}"
          ToolTip.Tip="Roll from bottom to top"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Up">
          <i:Icon Value="mdi-arrow-up" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
        <Button Width="28" Height="28"
          Classes="circleSmall"
          Classes.active="{Binding IsRollDirectionRandom}"
          ToolTip.Tip="Random roll direction"
          Command="{Binding SetRollDirectionCommand}" CommandParameter="Random">
          <i:Icon Value="mdi-shuffle-variant" FontSize="18"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
      </StackPanel>

      <!-- Dice configuration (shown via gear toggle in MainWindow) -->
      <Border Grid.Row="1"
              IsVisible="{Binding ShowDiceConfiguration}"
              Background="#0A0F18"
              BorderBrush="{DynamicResource ScryBorder}"
              BorderThickness="1"
              CornerRadius="10"
              Padding="12">
        <Grid RowDefinitions="Auto,*" RowSpacing="10">
          <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="10" VerticalAlignment="Center">
            <TextBlock Grid.Column="0"
                       Text="Dice Configuration"
                       Foreground="{DynamicResource ScryTextMuted}"
                       FontWeight="SemiBold" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
              <Button Width="28" Height="28"
                      Classes="circleSmall"
                      ToolTip.Tip="Reset all dice scales to 1.0"
                      Command="{Binding ResetDiceConfigurationCommand}">
                <i:Icon Value="mdi-restore" FontSize="18"
                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
              </Button>

              <ToggleButton Width="28" Height="28"
                            Classes="circleSmall"
                            IsChecked="{Binding ShowDebugInfo, Mode=TwoWay}"
                            ToolTip.Tip="Show debug info">
                <i:Icon Value="mdi-bug-outline" FontSize="18"
                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
              </ToggleButton>
            </StackPanel>
          </Grid>

          <ItemsControl Grid.Row="1" ItemsSource="{Binding DiceVisualConfigs}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel Spacing="10" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
              <DataTemplate x:DataType="vm:DiceDieVisualConfigViewModel">
                <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" VerticalAlignment="Center">
                  <TextBlock Grid.Column="0" Text="{Binding DisplayName}" Foreground="{DynamicResource ScryTextMuted}" Width="44" VerticalAlignment="Center" />

                  <TextBlock Grid.Column="1" Text="Size" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                  <Slider Grid.Column="2"
                          Classes="portalTimeline"
                          Width="120"
                          Minimum="0.5"
                          Maximum="1.75"
                          Value="{Binding DieScale, Mode=TwoWay}" />
                  <TextBlock Grid.Column="3" Text="{Binding DieScale, StringFormat={}{0:0.00}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />

                  <TextBlock Grid.Column="4" Text="Numbers" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                  <Slider Grid.Column="5"
                          Classes="portalTimeline"
                          Width="120"
                          Minimum="0.5"
                          Maximum="2.0"
                          Value="{Binding NumberScale, Mode=TwoWay}" />
                  <TextBlock Grid.Column="6" Text="{Binding NumberScale, StringFormat={}{0:0.00}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
                </Grid>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </Grid>
      </Border>

      <!-- Roll input (left) + Custom buttons (right). History stays under the roll input even when the custom buttons wrap. -->
      <Grid Grid.Row="2" ColumnDefinitions="Auto,*" ColumnSpacing="12">
        <Grid Grid.Column="0" RowDefinitions="Auto,Auto" RowSpacing="10">
          <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="8">
            <TextBlock Grid.Column="0"
                       Text="Roll" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

            <TextBox Grid.Column="1"
                     Width="284"
                     Height="36"
                     HorizontalAlignment="Left"
                     Background="#0A0F18"
                     BorderBrush="{DynamicResource ScryBorder}"
                     BorderThickness="1"
                     CornerRadius="8"
                     Padding="10,4"
                     VerticalContentAlignment="Center"
                     Text="{Binding Expression, Mode=TwoWay}"
                     Watermark="e.g. 2d6+3">
              <TextBox.KeyBindings>
                <KeyBinding Gesture="Enter" Command="{Binding RollCommand}" />
              </TextBox.KeyBindings>
            </TextBox>

            <Button Grid.Column="2"
                    Width="28"
                    Height="28"
                    Classes="circleSmall"
                    Command="{Binding RollCommand}">
              <i:Icon Value="mdi-dice-multiple" FontSize="18"
                      Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
            </Button>

            <Button Grid.Column="3"
                    Width="28"
                    Height="28"
                    Classes="circleSmall"
                    ToolTip.Tip="Save this roll as a button"
                    Command="{Binding CreateCustomRollPresetCommand}">
              <i:Icon Value="mdi-plus" FontSize="18"
                      Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
            </Button>
          </Grid>

          <!-- History box: this is the only outlined panel in the Dice Tray UI -->
          <Border Grid.Row="1"
                  Background="#0A0F18"
                  BorderBrush="{DynamicResource ScryBorder}"
                  BorderThickness="1"
                  CornerRadius="10"
                  Padding="10,4,10,8">
            <Grid RowDefinitions="Auto,*" RowSpacing="6">
              <TextBlock Grid.Row="0"
                         IsVisible="{Binding LastErrorText, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                         Text="{Binding LastErrorText}"
                         Foreground="#F87171"
                         FontSize="12"
                         TextWrapping="Wrap" />

              <ScrollViewer Grid.Row="1"
                            MaxHeight="126"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding History}">
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <StackPanel Spacing="6" />
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <controls:BoldTotalsTextBlock RawText="{Binding}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" TextWrapping="Wrap" />
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </ScrollViewer>
            </Grid>
          </Border>
        </Grid>

        <ItemsControl Grid.Column="1"
                      IsVisible="{Binding HasCustomRollPresets}"
                      ItemsSource="{Binding CustomRollPresets}"
                      VerticalAlignment="Top">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>

          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:DiceRollPresetViewModel">
              <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,0,8,8" VerticalAlignment="Center">
                <Button Background="Transparent"
                        BorderBrush="{DynamicResource ScryBorder}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="8,4"
                        ToolTip.Tip="{Binding Expression}"
                        Command="{Binding $parent[UserControl].DataContext.RollCustomRollPresetCommand}"
                        CommandParameter="{Binding}">
                  <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                    <Border Width="18" Height="18"
                            CornerRadius="9"
                          BorderThickness="1"
                            BorderBrush="{DynamicResource ScryTextMuted}"
                            IsVisible="{Binding IsPercent}">
                      <TextBlock Text="%"
                           FontSize="11"
                                 FontWeight="Bold"
                                 Foreground="{DynamicResource ScryTextMuted}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                           Margin="0,0,0,0" />
                    </Border>

                    <i:Icon Value="{Binding IconKey}" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" IsVisible="{Binding !IsPercent}" />
                    <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                  </StackPanel>
                </Button>

                <Button Width="28" Height="28"
                        Classes="circleSmall"
                        ToolTip.Tip="Configure"
                        Click="OnPresetGearClick">
                  <i:Icon Value="mdi-cog" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                </Button>
              </StackPanel>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </Grid>
    </Grid>
  </Border>
</UserControl>
