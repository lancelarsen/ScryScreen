<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScryScreen.App.ViewModels"
    xmlns:i="https://github.com/projektanker/icons.avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScryScreen.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
    Title="ScryScreen â€” ScryMaster"
    Topmost="True"
    Background="{DynamicResource ScryBg0}">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="320,*,360" RowDefinitions="Auto,*" Background="{DynamicResource ScryBg0}">
        <Border Grid.ColumnSpan="3" Background="{DynamicResource ScryBg1}" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="0,0,0,1" Padding="16,12">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Spacing="2">
                    <TextBlock Text="ScryScreen" FontSize="18" FontWeight="SemiBold" />
                    <TextBlock Text="ScryMaster (v0.1)" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="10">
                    <Button Classes="primary" Content="Add Portal" Command="{Binding AddPortalCommand}" />
                    <Button Classes="subtle" Content="Identify" Command="{Binding IdentifyPortalsCommand}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Left: Portals -->
        <Border Grid.Row="1" Grid.Column="0" Background="{DynamicResource ScryPanel}" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="0,0,1,0" Padding="14">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Portals" FontSize="16" FontWeight="SemiBold" Margin="2,2,2,12" />

                <ListBox ItemsSource="{Binding Portals}" SelectedItem="{Binding SelectedPortal}" ItemContainerTheme="{DynamicResource ScryListBoxItemTheme}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Classes="card" Margin="0,0,12,12">
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="10">
                                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="2">
                                        <TextBlock Text="{Binding Title}" FontSize="15" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding CurrentAssignment}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />
                                    </StackPanel>

                                        <Button Grid.Row="0" Grid.Column="1"
                                            Classes="icon"
                                            i:Attached.Icon="mdi-close"
                                            ToolTip.Tip="Close portal"
                                            Command="{Binding ClosePortalCommand}" />

                                    <Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                        <TextBlock Grid.Column="0" Text="Screen" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                                        <ComboBox Grid.Column="1"
                                                  MinWidth="140"
                                                  HorizontalAlignment="Stretch"
                                                  ItemsSource="{Binding AvailableScreens}"
                                                  SelectedItem="{Binding SelectedScreen}" />
                                    </Grid>

                                    <WrapPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" ItemSpacing="10" LineSpacing="10">
                                        <ToggleButton Classes="icon"
                                                      IsChecked="{Binding IsVisible}"
                                                      ToolTip.Tip="Toggle portal visibility">
                                            <Grid>
                                                <i:Icon IsVisible="{Binding IsVisible}" Value="mdi-eye" FontSize="18" Foreground="{DynamicResource ScrySuccess}" />
                                                <i:Icon IsVisible="{Binding !IsVisible}" Value="mdi-eye-off" FontSize="18" Foreground="{DynamicResource ScryDanger}" />
                                            </Grid>
                                        </ToggleButton>
                                        <Button Classes="primary" Content="Show Sample" Command="{Binding ShowSampleCommand}" />
                                    </WrapPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Center: Content Browser (placeholder for M0) -->
        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource ScryBg0}" Padding="16">
            <TabControl>
                <TabItem Header="Media">
                    <Grid RowDefinitions="Auto,*" RowSpacing="12" Margin="0,12,0,0">
                        <WrapPanel Orientation="Horizontal" ItemSpacing="10" LineSpacing="10">
                            <Button Classes="subtle" Content="Import Folder" Click="OnImportMediaFolder" i:Attached.Icon="mdi-folder-plus" />
                            <TextBlock Text="{Binding Media.StatusText}" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                            <Button Classes="primary"
                                    Content="Send to Selected Portal"
                                    Command="{Binding SendSelectedMediaToSelectedPortalCommand}"
                                    ToolTip.Tip="Sends the selected image to the selected portal" />
                        </WrapPanel>

                        <Grid Grid.Row="1" ColumnDefinitions="280,*" ColumnSpacing="12">
                            <Border Classes="card" Padding="14">
                                <StackPanel Spacing="10">
                                    <TextBlock Text="Preview" FontSize="14" FontWeight="SemiBold" />
                                    <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="8" Padding="10">
                                        <Image Source="{Binding Media.SelectedItem.Thumbnail}" Stretch="Uniform" Height="220" />
                                    </Border>
                                    <TextBlock Text="{Binding Media.SelectedItem.DisplayName}" Foreground="{DynamicResource ScryTextMuted}" TextWrapping="Wrap" />
                                    <TextBlock Text="Selected Portal" FontSize="14" FontWeight="SemiBold" Margin="0,6,0,0" />
                                    <TextBlock Text="{Binding SelectedPortal.Title}" Foreground="{DynamicResource ScryTextMuted}" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Classes="card" Padding="14">
                                <StackPanel Spacing="10">
                                    <TextBlock Text="Images" FontSize="14" FontWeight="SemiBold" />
                                    <ListBox ItemsSource="{Binding Media.Items}"
                                             SelectedItem="{Binding Media.SelectedItem}"
                                             ItemContainerTheme="{DynamicResource ScryListBoxItemTheme}">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="8" Width="140" Height="140">
                                                    <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Apps">
                    <Border Classes="card" Margin="0,12,0,0">
                        <StackPanel Spacing="10">
                            <TextBlock Text="ScryPortalApps" FontSize="16" FontWeight="SemiBold" />
                            <TextBlock Text="Launch apps like Initiative Tracker and assign them to portals." Foreground="{DynamicResource ScryTextMuted}" />
                            <TextBlock Text="(App framework coming after Media MVP)" Foreground="{DynamicResource ScryTextMuted}" />
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Right: Inspector / Controls (placeholder for M0) -->
        <Border Grid.Row="1" Grid.Column="2" Background="{DynamicResource ScryPanel}" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1,0,0,0" Padding="16">
            <StackPanel Spacing="12">
                <TextBlock Text="Inspector / Controls" FontSize="16" FontWeight="SemiBold" />
                <Border Classes="card">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Selected Portal" FontWeight="SemiBold" />
                        <TextBlock Text="(Per-portal controls appear here next)" Foreground="{DynamicResource ScryTextMuted}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>

</Window>
