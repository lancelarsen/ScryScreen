<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScryScreen.App.ViewModels"
    xmlns:i="https://github.com/projektanker/icons.avalonia"
    xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScryScreen.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
    Title="ScryScreen â€” ScryMaster"
    Topmost="{Binding IsAlwaysOnTop}"
    Background="{DynamicResource ScryBg0}"
    WindowStartupLocation="Manual"
    SizeToContent="Height"
    SystemDecorations="None"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    CanResize="False">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Background="{DynamicResource ScryBg0}">
        <!-- Top bar: title + section toggles + close -->
        <Border Background="{DynamicResource ScryBg1}" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="12" VerticalAlignment="Center">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" ClipToBounds="True">
                      <Image Source="avares://ScryScreen.App/Assets/Images/scry_logo_text_300w.png"
                          Stretch="Uniform"
                           Height="44"
                           MaxHeight="44"
                           MaxWidth="260"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center">
                        <Image.RenderTransform>
                            <TranslateTransform Y="3" />
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <!-- Portals -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsPortalsSectionVisible}"
                                  ToolTip.Tip="Show/Hide Portals">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsPortalsSectionVisible}" Value="mdi-monitor" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsPortalsSectionVisible}" Value="mdi-monitor-off" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>

                    <!-- Media / Apps -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsLibrarySectionVisible}"
                                  ToolTip.Tip="Show/Hide Media &amp; Apps">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsLibrarySectionVisible}" Value="mdi-image-plus" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsLibrarySectionVisible}" Value="mdi-image-off" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>

                    <!-- Controls -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsControlsSectionVisible}"
                                  ToolTip.Tip="Show/Hide Controls">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsControlsSectionVisible}" Value="mdi-cog" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsControlsSectionVisible}" Value="mdi-cog-off" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsAlwaysOnTop}"
                                  ToolTip.Tip="Always on Top">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsAlwaysOnTop}" Value="mdi-pin" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsAlwaysOnTop}" Value="mdi-pin-outline" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>

                    <Button Classes="circle" i:Attached.Icon="mdi-close" ToolTip.Tip="Close ScryScreen" Click="OnCloseApp" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Top: Portals (expandable, compact) -->
        <Border Grid.Row="1"
                IsVisible="{Binding IsPortalsSectionVisible}"
                Background="{DynamicResource ScryBg0}"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="0,0,0,1"
                Padding="12,10">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <ScrollViewer Grid.Column="0"
                              MaxHeight="220"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Portals}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" ItemSpacing="12" LineSpacing="12" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:CompileBindings="False">
                                <Border Classes="card" Width="320" Padding="8,6">
                                    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="6">
                                        <!-- Controls row -->
                                        <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,Auto,*,Auto" ColumnSpacing="6" VerticalAlignment="Center">
                                            <!-- (1) Portal number badge -->
                                                <Border Width="36" Height="36"
                                                    CornerRadius="18"
                                                    Background="#0A0F18"
                                                    BorderBrush="{DynamicResource ScryBadgeMaroon}"
                                                    BorderThickness="2"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding PortalNumber}"
                                                       FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                            </Border>

                                            <!-- Visibility -->
                                            <ToggleButton Grid.Column="1"
                                                          Classes="circleSmall noAccent"
                                                          IsChecked="{Binding IsVisible}"
                                                          ToolTip.Tip="Toggle Portal Visibility">
                                                <Grid>
                                                    <i:Icon IsVisible="{Binding IsVisible}" Value="mdi-eye" FontSize="18" Foreground="{DynamicResource ScrySuccess}" />
                                                    <i:Icon IsVisible="{Binding !IsVisible}" Value="mdi-eye-off" FontSize="18" Foreground="{DynamicResource ScryDanger}" />
                                                </Grid>
                                            </ToggleButton>

                                            <!-- Clear content -->
                                            <Button Grid.Column="2"
                                                    Classes="circleSmall"
                                                    HorizontalAlignment="Right"
                                                    i:Attached.Icon="mdi-eraser"
                                                    ToolTip.Tip="Clear Portal Content"
                                                    Command="{Binding DataContext.ClearPortalContentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding .}" />

                                            <!-- Monitor dropdown (compact) -->
                                            <ComboBox Grid.Column="3"
                                                      MinWidth="110"
                                                      MaxWidth="120"
                                                      Height="36"
                                                      VerticalAlignment="Center"
                                                      FontSize="12"
                                                      HorizontalAlignment="Stretch"
                                                      ItemsSource="{Binding AvailableScreens}"
                                                      DisplayMemberBinding="{Binding MonitorName}"
                                                      SelectedItem="{Binding SelectedScreen}" />

                                            <!-- Close -->
                                            <Button Grid.Column="4"
                                                    Classes="circleSmall"
                                                    HorizontalAlignment="Right"
                                                    i:Attached.Icon="mdi-close"
                                                    ToolTip.Tip="Close Portal"
                                                    Command="{Binding ClosePortalCommand}" />
                                        </Grid>

                                        <!-- Assigned media preview (fallback only when no monitor preview is available) -->
                                        <Border Grid.Row="1"
                                                IsVisible="{Binding ShowTopAssignedPreview}"
                                                Background="#0A0F18"
                                                BorderBrush="{DynamicResource ScryBorder}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="6">
                                            <Image Source="{Binding AssignedPreview}" Stretch="Uniform" Height="80" />
                                        </Border>

                                        <!-- Monitor + media preview (matches portal crop/align) -->
                                        <Border Grid.Row="2"
                                                IsVisible="{Binding HasMonitorPreview}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="0,6,0,0">
                                            <Border Background="#0A0F18"
                                                    BorderBrush="{DynamicResource ScryBorder}"
                                                    BorderThickness="1"
                                                    CornerRadius="8"
                                                    Padding="6"
                                                    ToolTip.Tip="{Binding MonitorPreviewToolTip}">
                                                <Viewbox Width="120" Height="60" Stretch="Uniform">
                                                    <Grid Width="{Binding SelectedScreen.WidthPx}"
                                                          Height="{Binding SelectedScreen.HeightPx}">
                                                        <!-- Screen fill + clip host (no border; border is drawn as overlay) -->
                                                        <Border Background="#05070B"
                                                                CornerRadius="40"
                                                                ClipToBounds="True">
                                                            <Canvas>
                                                                <!-- Media preview (cropped/letterboxed by clipping) -->
                                                                <Border IsVisible="{Binding HasMediaPreview}"
                                                                        Width="{Binding PreviewImageWidth}"
                                                                        Height="{Binding PreviewImageHeight}"
                                                                        Background="#16263B"
                                                                        Canvas.Left="{Binding PreviewImageLeft}"
                                                                        Canvas.Top="{Binding PreviewImageTop}">
                                                                    <Image Source="{Binding AssignedPreview}" Stretch="Fill" />
                                                                </Border>
                                                            </Canvas>
                                                        </Border>

                                                        <!-- Drawn screen outline overlay (does not affect layout) -->
                                                        <Rectangle Fill="Transparent"
                                                                   Stroke="#3A557D"
                                                                   StrokeThickness="10"
                                                                   RadiusX="40"
                                                                   RadiusY="40"
                                                                   IsHitTestVisible="False" />
                                                    </Grid>
                                                </Viewbox>
                                            </Border>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Portal actions (moved from header) -->
                <StackPanel Grid.Column="1" Spacing="10" VerticalAlignment="Top">
                    <Button Classes="circle" ToolTip.Tip="Add Portal" Command="{Binding AddPortalCommand}">
                        <svg:Svg Path="/Assets/Icons/add_to_queue.svg"
                                 Width="22"
                                 Height="22" />
                    </Button>

                    <Button Classes="circle" ToolTip.Tip="Show Portal Numbers" Command="{Binding IdentifyPortalsCommand}">
                        <svg:Svg Path="/Assets/Icons/filter_1.svg"
                                 Width="22"
                                 Height="22" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Middle: Content Browser -->
        <Border Grid.Row="2" IsVisible="{Binding IsLibrarySectionVisible}" Background="{DynamicResource ScryBg0}" Padding="12,10">
            <TabControl Classes="tabsTight" Padding="0" Margin="0">
                <TabItem Header="Media">
                    <Grid RowDefinitions="*" Margin="0,8,0,0">
                        <Grid ColumnDefinitions="*">
                            <Border Classes="card" Padding="14">
                                <Grid RowDefinitions="Auto,*" RowSpacing="10">
                                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="10" VerticalAlignment="Center">
                                        <Button Grid.Column="0"
                                                Classes="circleSmall"
                                                Click="OnImportMediaFolder"
                                                i:Attached.Icon="mdi-folder-plus"
                                                ToolTip.Tip="Add Folder" />
                                        <TextBlock Grid.Column="1" Text="{Binding Media.ImagesHeader}" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" />

                                        <!-- View mode: grouped vs flat -->
                                        <ToggleButton Grid.Column="2"
                                                      Classes="circleSmall"
                                                      ToolTip.Tip="Grouped by Folder"
                                                      IsChecked="{Binding Media.IsGroupedView, Mode=TwoWay}">
                                            <i:Icon Value="mdi-folder-multiple-image" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                        </ToggleButton>

                                        <ToggleButton Grid.Column="3"
                                                      Classes="circleSmall"
                                                      ToolTip.Tip="Flat View"
                                                      IsChecked="{Binding Media.IsFlatView, Mode=TwoWay}">
                                            <i:Icon Value="mdi-view-grid" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                        </ToggleButton>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                            <Grid>
                                                <!-- Grouped view (by directory) -->
                                                <ItemsControl ItemsSource="{Binding Media.Groups}" IsVisible="{Binding Media.IsGroupedView}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate x:DataType="vm:MediaFolderGroupViewModel">
                                                            <StackPanel Spacing="8" Margin="0,0,0,12">
                                                                <TextBlock Text="{Binding DisplayHeader}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />

                                                                <ItemsControl ItemsSource="{Binding Items}">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>

                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate x:DataType="vm:MediaItemViewModel" x:CompileBindings="False">
                                                                            <Button Background="Transparent"
                                                                                    BorderThickness="0"
                                                                                    Padding="0"
                                                                                    Command="{Binding DataContext.SelectMediaItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                    CommandParameter="{Binding .}">
                                                                                <ToolTip.Tip>
                                                                                    <StackPanel Spacing="4">
                                                                                        <TextBlock Text="{Binding DisplayName}" TextWrapping="NoWrap" />
                                                                                        <TextBlock Text="{Binding PixelSizeText}" IsVisible="{Binding HasPixelSize}" TextWrapping="NoWrap" />
                                                                                        <TextBlock Text="{Binding FileSizeText}" IsVisible="{Binding HasFileSize}" TextWrapping="NoWrap" />
                                                                                    </StackPanel>
                                                                                </ToolTip.Tip>
                                                                                <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="8" Width="140" Height="140">
                                                                                    <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                                                                </Border>
                                                                            </Button>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!-- Flat view (no directory separation) -->
                                                <ItemsControl ItemsSource="{Binding Media.Items}" IsVisible="{Binding Media.IsFlatView}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>

                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate x:DataType="vm:MediaItemViewModel" x:CompileBindings="False">
                                                            <Button Background="Transparent"
                                                                    BorderThickness="0"
                                                                    Padding="0"
                                                                    Command="{Binding DataContext.SelectMediaItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding .}">
                                                                <ToolTip.Tip>
                                                                    <StackPanel Spacing="4">
                                                                        <TextBlock Text="{Binding DisplayName}" TextWrapping="NoWrap" />
                                                                        <TextBlock Text="{Binding PixelSizeText}" IsVisible="{Binding HasPixelSize}" TextWrapping="NoWrap" />
                                                                        <TextBlock Text="{Binding FileSizeText}" IsVisible="{Binding HasFileSize}" TextWrapping="NoWrap" />
                                                                    </StackPanel>
                                                                </ToolTip.Tip>
                                                                <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="8" Width="140" Height="140">
                                                                    <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                                                </Border>
                                                            </Button>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </ScrollViewer>

                                        <!-- Empty state helper text -->
                                        <Border IsVisible="{Binding Media.HasNoMedia}"
                                                Background="#0A0F18"
                                                BorderBrush="{DynamicResource ScryBorder}"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                Padding="16"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                MaxWidth="560">
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="No Media Imported" FontWeight="SemiBold" />
                                                <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="8" RowDefinitions="Auto">
                                                    <TextBlock Grid.Column="0"
                                                               Text="Click"
                                                               Foreground="{DynamicResource ScryTextMuted}"
                                                               VerticalAlignment="Center" />

                                                        <Button Grid.Column="1"
                                                            Classes="circleSmall"
                                                            Click="OnImportMediaFolder"
                                                            i:Attached.Icon="mdi-folder-plus"
                                                            VerticalAlignment="Center"
                                                            ToolTip.Tip="Add Folder" />

                                                    <TextBlock Grid.Column="2"
                                                               Text="to add a directory with your images and videos."
                                                               Foreground="{DynamicResource ScryTextMuted}"
                                                               VerticalAlignment="Center"
                                                               TextWrapping="Wrap" />
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Apps">
                    <Border Classes="card" Margin="0,12,0,0">
                        <StackPanel Spacing="10">
                            <TextBlock Text="ScryPortalApps" FontSize="16" FontWeight="SemiBold" />
                            <TextBlock Text="Launch apps like Initiative Tracker and assign them to portals." Foreground="{DynamicResource ScryTextMuted}" />
                            <TextBlock Text="(App framework coming after Media MVP)" Foreground="{DynamicResource ScryTextMuted}" />
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Bottom: Inspector / Controls -->
        <Border Grid.Row="3"
                IsVisible="{Binding IsControlsSectionVisible}"
                Background="{DynamicResource ScryBg0}"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="0,1,0,0"
                Padding="12,10">
            <Border Classes="card" Padding="10">
                <Grid ColumnDefinitions="Auto,Auto,Auto,*" ColumnSpacing="12" RowDefinitions="Auto">
                    <!-- Selected image (left) -->
                    <Border Background="#0A0F18"
                            BorderBrush="{DynamicResource ScryBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="6"
                            Width="170"
                            Height="100">
                        <Image Source="{Binding Media.SelectedItem.Thumbnail}" Stretch="Uniform" />
                    </Border>

                    <!-- Assign to portals (middle) -->
                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock Text="Assign to Portals" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" Margin="0,0,0,6" />
                        <ItemsControl ItemsSource="{Binding Portals}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:PortalRowViewModel" x:CompileBindings="False">
                                    <ToggleButton Classes="circleSmall"
                                                  Margin="0,0,8,8"
                                                  Content="{Binding PortalNumber}"
                                                  ToolTip.Tip="Show Image on this Portal"
                                                  IsChecked="{Binding IsSelectedForCurrentMedia}"
                                                  Command="{Binding DataContext.ToggleSelectedMediaForPortalCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding .}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Alignment (right) -->
                    <StackPanel Grid.Column="2" Spacing="4" VerticalAlignment="Top">
                        <TextBlock Text="Alignment" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" Margin="0,0,0,6" />

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ToggleButton Classes="circleSmall"
                                          IsChecked="{Binding IsFillHeight, Mode=OneWay}"
                                          Command="{Binding SetScaleFillHeightCommand}"
                                          ToolTip.Tip="Fill Height (Crops Left/Right)">
                                <svg:Svg Path="/Assets/Icons/fit_height.svg" Width="18" Height="18" />
                            </ToggleButton>

                            <ToggleButton Classes="circleSmall"
                                          IsChecked="{Binding IsFillWidth, Mode=OneWay}"
                                          Command="{Binding SetScaleFillWidthCommand}"
                                          ToolTip.Tip="Fill Width (Crops Top/Bottom)">
                                <svg:Svg Path="/Assets/Icons/fit_width.svg" Width="18" Height="18" />
                            </ToggleButton>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <!-- For Fill Width (W): vertical align (Top/Center/Bottom) -->
                            <ToggleButton Classes="circleSmall"
                                          IsVisible="{Binding IsFillWidth}"
                                          IsChecked="{Binding IsAlignStart, Mode=OneWay}"
                                          Command="{Binding SetAlignStartCommand}"
                                          ToolTip.Tip="Top">
                                <svg:Svg Path="/Assets/Icons/align_top.svg" Width="18" Height="18" />
                            </ToggleButton>
                            <ToggleButton Classes="circleSmall"
                                          IsVisible="{Binding IsFillWidth}"
                                          IsChecked="{Binding IsAlignCenter, Mode=OneWay}"
                                          Command="{Binding SetAlignCenterCommand}"
                                          ToolTip.Tip="Center">
                                <svg:Svg Path="/Assets/Icons/align_v_center.svg" Width="18" Height="18" />
                            </ToggleButton>
                            <ToggleButton Classes="circleSmall"
                                          IsVisible="{Binding IsFillWidth}"
                                          IsChecked="{Binding IsAlignEnd, Mode=OneWay}"
                                          Command="{Binding SetAlignEndCommand}"
                                          ToolTip.Tip="Bottom">
                                <svg:Svg Path="/Assets/Icons/align_bottom.svg" Width="18" Height="18" />
                            </ToggleButton>

                            <!-- For Fill Height (H): horizontal align (Left/Center/Right) -->
                            <ToggleButton Classes="circleSmall"
                                          IsVisible="{Binding IsFillHeight}"
                                          IsChecked="{Binding IsAlignStart, Mode=OneWay}"
                                          Command="{Binding SetAlignStartCommand}"
                                          ToolTip.Tip="Left">
                                <svg:Svg Path="/Assets/Icons/align_left.svg" Width="18" Height="18" />
                            </ToggleButton>
                            <ToggleButton Classes="circleSmall"
                                          IsVisible="{Binding IsFillHeight}"
                                          IsChecked="{Binding IsAlignCenter, Mode=OneWay}"
                                          Command="{Binding SetAlignCenterCommand}"
                                          ToolTip.Tip="Center">
                                <svg:Svg Path="/Assets/Icons/align_h_center.svg" Width="18" Height="18" />
                            </ToggleButton>
                            <ToggleButton Classes="circleSmall"
                                          IsVisible="{Binding IsFillHeight}"
                                          IsChecked="{Binding IsAlignEnd, Mode=OneWay}"
                                          Command="{Binding SetAlignEndCommand}"
                                          ToolTip.Tip="Right">
                                <svg:Svg Path="/Assets/Icons/align_right.svg" Width="18" Height="18" />
                            </ToggleButton>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>

</Window>
