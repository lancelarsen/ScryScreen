<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScryScreen.App.ViewModels"
    xmlns:i="https://github.com/projektanker/icons.avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScryScreen.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
    Title="ScryScreen â€” ScryMaster"
    Topmost="{Binding IsAlwaysOnTop}"
    Background="{DynamicResource ScryBg0}"
    WindowStartupLocation="Manual"
    SizeToContent="Height"
    SystemDecorations="None"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    CanResize="False">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Background="{DynamicResource ScryBg0}">
        <!-- Top bar: title + section toggles + close -->
        <Border Background="{DynamicResource ScryBg1}" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="12" VerticalAlignment="Center">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="ScryScreen" FontSize="18" FontWeight="SemiBold" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <!-- Portals -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsPortalsSectionVisible}"
                                  ToolTip.Tip="Show/Hide Portals">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsPortalsSectionVisible}" Value="mdi-monitor" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsPortalsSectionVisible}" Value="mdi-monitor-off" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>

                    <!-- Media / Apps -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsLibrarySectionVisible}"
                                  ToolTip.Tip="Show/Hide Media &amp; Apps">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsLibrarySectionVisible}" Value="mdi-image-plus" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsLibrarySectionVisible}" Value="mdi-image-off" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>

                    <!-- Controls -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsControlsSectionVisible}"
                                  ToolTip.Tip="Show/Hide Controls">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsControlsSectionVisible}" Value="mdi-cog" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsControlsSectionVisible}" Value="mdi-cog-off" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsAlwaysOnTop}"
                                  ToolTip.Tip="Always on top">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsAlwaysOnTop}" Value="mdi-pin" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsAlwaysOnTop}" Value="mdi-pin-outline" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>

                    <Button Classes="circle" i:Attached.Icon="mdi-close" ToolTip.Tip="Close ScryScreen" Click="OnCloseApp" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Top: Portals (expandable, compact) -->
        <Border Grid.Row="1"
                IsVisible="{Binding IsPortalsSectionVisible}"
                Background="{DynamicResource ScryBg0}"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="0,0,0,1"
                Padding="12,10">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <ScrollViewer Grid.Column="0"
                              MaxHeight="220"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Portals}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" ItemSpacing="12" LineSpacing="12" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="card" Width="320" Padding="8,6">
                                    <Grid RowDefinitions="Auto,Auto" RowSpacing="6">
                                        <!-- Controls row -->
                                        <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,*,Auto" ColumnSpacing="6" VerticalAlignment="Center">
                                            <!-- (1) Portal number badge -->
                                            <Border Width="24" Height="24"
                                                    CornerRadius="12"
                                                    Background="#0A0F18"
                                                    BorderBrush="{DynamicResource ScryBorder}"
                                                    BorderThickness="1"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding PortalNumber}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                            </Border>

                                            <!-- Visibility -->
                                            <ToggleButton Grid.Column="1"
                                                          Classes="icon"
                                                          Width="30"
                                                          Height="30"
                                                          IsChecked="{Binding IsVisible}"
                                                          ToolTip.Tip="Toggle portal visibility">
                                                <Grid>
                                                    <i:Icon IsVisible="{Binding IsVisible}" Value="mdi-eye" FontSize="18" Foreground="{DynamicResource ScrySuccess}" />
                                                    <i:Icon IsVisible="{Binding !IsVisible}" Value="mdi-eye-off" FontSize="18" Foreground="{DynamicResource ScryDanger}" />
                                                </Grid>
                                            </ToggleButton>

                                            <!-- Monitor dropdown (compact) -->
                                            <ComboBox Grid.Column="2"
                                                      Width="140"
                                                      MinHeight="28"
                                                      FontSize="12"
                                                      HorizontalAlignment="Right"
                                                      ItemsSource="{Binding AvailableScreens}"
                                                      SelectedItem="{Binding SelectedScreen}" />

                                            <!-- Close -->
                                            <Button Grid.Column="3"
                                                    Classes="icon"
                                                    Width="30"
                                                    Height="30"
                                                    HorizontalAlignment="Right"
                                                    i:Attached.Icon="mdi-close"
                                                    ToolTip.Tip="Close portal"
                                                    Command="{Binding ClosePortalCommand}" />
                                        </Grid>

                                        <!-- Assigned media preview (matches Media preview source/orientation) -->
                                        <Border Grid.Row="1"
                                                IsVisible="{Binding HasAssignedPreview}"
                                                Background="#0A0F18"
                                                BorderBrush="{DynamicResource ScryBorder}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="6">
                                            <Image Source="{Binding AssignedPreview}" Stretch="Uniform" Height="80" />
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Portal actions (moved from header) -->
                <StackPanel Grid.Column="1" Spacing="10" VerticalAlignment="Top">
                    <Button Classes="circle" i:Attached.Icon="mdi-plus" ToolTip.Tip="Add Portal" Command="{Binding AddPortalCommand}" />
                    <Button Classes="circle" i:Attached.Icon="mdi-eye" ToolTip.Tip="Identify Portals" Command="{Binding IdentifyPortalsCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Middle: Content Browser -->
        <Border Grid.Row="2" IsVisible="{Binding IsLibrarySectionVisible}" Background="{DynamicResource ScryBg0}" Padding="16">
            <TabControl>
                <TabItem Header="Media">
                    <Grid RowDefinitions="*" Margin="0,12,0,0">
                        <Grid ColumnDefinitions="240,*" ColumnSpacing="12">
                            <Border Classes="card" Padding="14">
                                <StackPanel Spacing="10">
                                    <TextBlock Text="Preview" FontSize="14" FontWeight="SemiBold" />
                                    <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="8" Padding="10">
                                        <Image Source="{Binding Media.SelectedItem.Thumbnail}" Stretch="Uniform" Height="180" />
                                    </Border>

                                    <ItemsControl ItemsSource="{Binding Portals}" Margin="0,4,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel ItemSpacing="8" LineSpacing="8" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:PortalRowViewModel" x:CompileBindings="False">
                                                <ToggleButton Classes="circleSmall"
                                                              Content="{Binding PortalNumber}"
                                                              ToolTip.Tip="Toggle this image on this portal"
                                                              IsChecked="{Binding IsSelectedForCurrentMedia}"
                                                              Command="{Binding DataContext.ToggleSelectedMediaForPortalCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                              CommandParameter="{Binding .}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Classes="card" Padding="14">
                                <Grid RowDefinitions="Auto,*" RowSpacing="10">
                                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="10" VerticalAlignment="Center">
                                        <Button Grid.Column="0" Classes="subtle" Content="Add Folder" Click="OnImportMediaFolder" i:Attached.Icon="mdi-folder-plus" />
                                        <TextBlock Grid.Column="1" Text="{Binding Media.ImagesHeader}" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" />
                                    </Grid>

                                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding Media.Groups}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="vm:MediaFolderGroupViewModel">
                                                    <StackPanel Spacing="8" Margin="0,0,0,12">
                                                        <TextBlock Text="{Binding DisplayHeader}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />

                                                        <ItemsControl ItemsSource="{Binding Items}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>

                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate x:DataType="vm:MediaItemViewModel" x:CompileBindings="False">
                                                                    <Button Background="Transparent"
                                                                            BorderThickness="0"
                                                                            Padding="0"
                                                                            Command="{Binding DataContext.Media.SelectItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                            CommandParameter="{Binding .}">
                                                                        <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="8" Width="140" Height="140">
                                                                            <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                                                        </Border>
                                                                    </Button>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Apps">
                    <Border Classes="card" Margin="0,12,0,0">
                        <StackPanel Spacing="10">
                            <TextBlock Text="ScryPortalApps" FontSize="16" FontWeight="SemiBold" />
                            <TextBlock Text="Launch apps like Initiative Tracker and assign them to portals." Foreground="{DynamicResource ScryTextMuted}" />
                            <TextBlock Text="(App framework coming after Media MVP)" Foreground="{DynamicResource ScryTextMuted}" />
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Bottom: Inspector / Controls -->
        <Border Grid.Row="3"
                IsVisible="{Binding IsControlsSectionVisible}"
                Background="{DynamicResource ScryPanel}"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="0,1,0,0"
                Padding="12,10">
            <Border Classes="card">
                <StackPanel Spacing="8">
                    <TextBlock Text="Inspector / Controls" FontWeight="SemiBold" />
                    <TextBlock Text="(Per-portal controls appear here next)" Foreground="{DynamicResource ScryTextMuted}" />
                </StackPanel>
            </Border>
        </Border>
    </Grid>

</Window>
