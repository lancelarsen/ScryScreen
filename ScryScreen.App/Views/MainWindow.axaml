<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScryScreen.App.ViewModels"
    xmlns:controls="using:ScryScreen.App.Controls"
    xmlns:views="using:ScryScreen.App.Views"
    xmlns:i="https://github.com/projektanker/icons.avalonia"
    xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
    xmlns:beh="using:ScryScreen.App.Behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScryScreen.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/scryscreen.ico"
    Title="ScryScreen"
    Topmost="{Binding IsAlwaysOnTop}"
    Background="{DynamicResource ScryBg0}"
    WindowStartupLocation="Manual"
    SizeToContent="Height"
    SystemDecorations="None"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    CanResize="False">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Background="{DynamicResource ScryBg0}">
        <!-- Top bar: title + section toggles + close -->
        <Border Background="{DynamicResource ScryBg1}" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="12" VerticalAlignment="Center">
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" ClipToBounds="True">
                                            <Image Source="avares://ScryScreen.App/Assets/Images/scry_logo_text_300w.png"
                          Stretch="Uniform"
                           Height="44"
                           MaxHeight="44"
                           MaxWidth="260"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center">
                        <Image.RenderTransform>
                            <TranslateTransform Y="3" />
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <!-- Portals -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsPortalsSectionVisible}"
                                  ToolTip.Tip="Show/Hide Portals">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsPortalsSectionVisible}" Value="mdi-monitor" FontSize="20" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                            <i:Icon IsVisible="{Binding !IsPortalsSectionVisible}" Value="mdi-monitor-off" FontSize="20" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                        </Grid>
                    </ToggleButton>

                    <!-- Media / Apps -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsLibrarySectionVisible}"
                                  ToolTip.Tip="Show/Hide Media &amp; Apps">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsLibrarySectionVisible}" Value="mdi-image-plus" FontSize="20" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                            <i:Icon IsVisible="{Binding !IsLibrarySectionVisible}" Value="mdi-image-off" FontSize="20" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                        </Grid>
                    </ToggleButton>

                    <!-- Controls -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsControlsSectionVisible}"
                                  ToolTip.Tip="Show/Hide Controls">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsControlsSectionVisible}" Value="mdi-cog" FontSize="20" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                            <i:Icon IsVisible="{Binding !IsControlsSectionVisible}" Value="mdi-cog-off" FontSize="20" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                        </Grid>
                    </ToggleButton>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsAlwaysOnTop}"
                                  ToolTip.Tip="Always on Top">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsAlwaysOnTop}" Value="mdi-pin" FontSize="20" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                            <i:Icon IsVisible="{Binding !IsAlwaysOnTop}" Value="mdi-pin-outline" FontSize="20" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                        </Grid>
                    </ToggleButton>

                    <Button Classes="circle" ToolTip.Tip="About ScryScreen" Click="OnShowAbout">
                        <i:Icon Value="mdi-information-outline" FontSize="20"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                    </Button>

                    <Button Classes="circle" ToolTip.Tip="Close ScryScreen" Click="OnCloseApp">
                        <i:Icon Value="mdi-close" FontSize="20"
                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Top: Portals (expandable, compact) -->
        <Border Grid.Row="1"
                IsVisible="{Binding IsPortalsSectionVisible}"
                Background="{DynamicResource ScryBg0}"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="0,0,0,1"
            Padding="12,10,12,8">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <ScrollViewer Grid.Column="0"
                              MaxHeight="220"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Portals}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" ItemSpacing="12" LineSpacing="12" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:CompileBindings="False">
                                <!-- <Border Classes="card" Width="320" Padding="8,6,8,4"> -->
                                <Border Classes="card" Width="320" Padding="8,6,8,4">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="3">
                                        <!-- Controls row -->
                                        <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,Auto,*,Auto" ColumnSpacing="8" VerticalAlignment="Center">
                                            <!-- (1) Portal number badge -->
                                            <Border Grid.Column="0"
                                                    Width="36"
                                                    Height="36"
                                                    CornerRadius="18"
                                                    Background="#0A0F18"
                                                    BorderBrush="{DynamicResource ScryBadgeMaroon}"
                                                    BorderThickness="2">
                                                <TextBlock Text="{Binding PortalNumber}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                            </Border>

                                            <!-- Visibility -->
                                            <ToggleButton Grid.Column="1"
                                                          Classes="circleSmall noAccent"
                                                          IsChecked="{Binding IsVisible}"
                                                          ToolTip.Tip="Toggle Portal Visibility">
                                                <Grid>
                                                    <i:Icon IsVisible="{Binding IsVisible}" Value="mdi-eye" FontSize="18" Foreground="{DynamicResource ScrySuccess}" />
                                                    <i:Icon IsVisible="{Binding !IsVisible}" Value="mdi-eye-off" FontSize="18" Foreground="{DynamicResource ScryDanger}" />
                                                </Grid>
                                            </ToggleButton>

                                            <!-- Clear content -->
                                            <Button Grid.Column="2"
                                                    Classes="circleSmall"
                                                    HorizontalAlignment="Right"
                                                    i:Attached.Icon="mdi-eraser"
                                                    ToolTip.Tip="Clear Portal Content"
                                                    Command="{Binding DataContext.ClearPortalContentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding .}" />

                                            <!-- Monitor dropdown (compact) -->
                                            <ComboBox Grid.Column="3"
                                                      MinWidth="110"
                                                      MaxWidth="120"
                                                      Height="36"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Stretch"
                                                      ItemsSource="{Binding AvailableScreens}"
                                                      DisplayMemberBinding="{Binding MonitorName}"
                                                      SelectedItem="{Binding SelectedScreen}" />

                                            <!-- Close -->
                                            <Button Grid.Column="4"
                                                    Classes="circleSmall"
                                                    HorizontalAlignment="Right"
                                                    i:Attached.Icon="mdi-close"
                                                    ToolTip.Tip="Close Portal"
                                                    Command="{Binding ClosePortalCommand}" />
                                        </Grid>
                                        <!-- Assigned media preview (fallback only when no monitor preview is available) -->
                                        <Grid Grid.Row="1"
                                              IsVisible="{Binding ShowTopAssignedPreview}"
                                              Margin="0,1,0,0">
                                            <Grid RowDefinitions="100,Auto" ColumnDefinitions="60,*,60" ColumnSpacing="0" ClipToBounds="True">
                                                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="8" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                    <StackPanel Orientation="Horizontal" Spacing="4" IsVisible="{Binding IsSelectedForInitiative}">
                                                        <Button Classes="circleSmall"
                                                                Width="28" Height="28" CornerRadius="14"
                                                                Command="{Binding DataContext.InitiativeTracker.PreviousTurnCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                ToolTip.Tip="Previous Turn">
                                                            <i:Icon Value="mdi-chevron-left" FontSize="16"
                                                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                        </Button>
                                                        <Button Classes="circleSmall"
                                                                Width="28" Height="28" CornerRadius="14"
                                                                Command="{Binding DataContext.InitiativeTracker.NextTurnCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                ToolTip.Tip="Next Turn">
                                                            <i:Icon Value="mdi-chevron-right" FontSize="16"
                                                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                        </Button>
                                                    </StackPanel>

                                                    <StackPanel Orientation="Horizontal" Spacing="4" IsVisible="{Binding IsSelectedForHourglass}">
                                                        <Grid Width="28" Height="28">
                                                            <Button Classes="circleSmall"
                                                                    Width="28" Height="28" CornerRadius="14"
                                                                    Command="{Binding DataContext.Hourglass.StartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    ToolTip.Tip="Play"
                                                                    IsVisible="{Binding !DataContext.Hourglass.IsRunning, RelativeSource={RelativeSource AncestorType=Window}}">
                                                                <i:Icon Value="mdi-play" FontSize="16"
                                                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                            </Button>
                                                            <Button Classes="circleSmall active"
                                                                    Width="28" Height="28" CornerRadius="14"
                                                                    Command="{Binding DataContext.Hourglass.StopCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    ToolTip.Tip="Pause"
                                                                    IsVisible="{Binding DataContext.Hourglass.IsRunning, RelativeSource={RelativeSource AncestorType=Window}}">
                                                                <i:Icon Value="mdi-pause" FontSize="16"
                                                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                            </Button>
                                                        </Grid>

                                                        <Button Classes="circleSmall"
                                                                Width="28" Height="28" CornerRadius="14"
                                                                Command="{Binding DataContext.Hourglass.ResetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                ToolTip.Tip="Reset">
                                                            <i:Icon Value="mdi-restore" FontSize="16"
                                                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                        </Button>

                                                        <ToggleButton Classes="circleSmall soundToggle"
                                                                      Width="28" Height="28" CornerRadius="14"
                                                                      IsChecked="{Binding DataContext.Hourglass.PlaySoundsEnabled, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                                                                      ToolTip.Tip="Play Sounds">
                                                            <i:Icon Value="mdi-volume-high" FontSize="16"
                                                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                                        </ToggleButton>
                                                    </StackPanel>
                                                </StackPanel>

                                                <Border Grid.Row="0" Grid.Column="1"
                                                        Background="#0A0F18"
                                                        BorderBrush="{DynamicResource ScryBorder}"
                                                        BorderThickness="1"
                                                    CornerRadius="10"
                                                        Padding="6"
                                                        Width="170"
                                                        Height="100"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        ClipToBounds="True">
                                                    <Grid>
                                                        <controls:QuakeShakeDecorator
                                                            QuakeEnabled="{Binding OverlayEffects.QuakeEnabled}"
                                                            QuakeIntensity="{Binding OverlayEffects.QuakeIntensity}"
                                                            QuakeTrigger="{Binding OverlayEffects.QuakeTrigger}">
                                                            <Grid>
                                                                <Image Source="avares://ScryScreen.App/Assets/Images/Gem Transparent.png"
                                                                       IsVisible="{Binding !HasMediaPreview}"
                                                                       Width="40"
                                                                       Height="40"
                                                                       Opacity="0.8"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center" />

                                                                    <Image Source="{Binding AssignedPreview}"
                                                                            IsVisible="{Binding HasMediaPreview}"
                                                                            Stretch="UniformToFill"
                                                                            StretchDirection="Both"
                                                                            HorizontalAlignment="Stretch"
                                                                            VerticalAlignment="Stretch" />

                                                                        <controls:VlcVideoHost IsVisible="{Binding ShowMonitorLiveVideo}"
                                                                                   MediaPlayer="{Binding PreviewVideoPlayer}" />

                                                                <!-- Overlay effects preview (matches portal overlay) -->
                                                                <controls:OverlayEffectsLayer
                                                                    RainEnabled="{Binding OverlayEffects.RainEnabled}"
                                                                    RainIntensity="{Binding OverlayEffects.RainIntensity}"
                                                                    SnowEnabled="{Binding OverlayEffects.SnowEnabled}"
                                                                    SnowIntensity="{Binding OverlayEffects.SnowIntensity}"
                                                                    AshEnabled="{Binding OverlayEffects.AshEnabled}"
                                                                    AshIntensity="{Binding OverlayEffects.AshIntensity}"
                                                                    FireEnabled="{Binding OverlayEffects.FireEnabled}"
                                                                    FireIntensity="{Binding OverlayEffects.FireIntensity}"
                                                                    SandEnabled="{Binding OverlayEffects.SandEnabled}"
                                                                    SandIntensity="{Binding OverlayEffects.SandIntensity}"
                                                                    FogEnabled="{Binding OverlayEffects.FogEnabled}"
                                                                    FogIntensity="{Binding OverlayEffects.FogIntensity}"
                                                                    SmokeEnabled="{Binding OverlayEffects.SmokeEnabled}"
                                                                    SmokeIntensity="{Binding OverlayEffects.SmokeIntensity}"
                                                                    LightningEnabled="{Binding OverlayEffects.LightningEnabled}"
                                                                    LightningIntensity="{Binding OverlayEffects.LightningIntensity}"
                                                                    LightningTrigger="{Binding OverlayEffects.LightningTrigger}"
                                                                    IsHitTestVisible="False" />
                                                            </Grid>
                                                        </controls:QuakeShakeDecorator>

                                                        <!-- Hourglass indicator overlay (static; no sand) -->
                                                        <Grid IsVisible="{Binding IsSelectedForHourglass}"
                                                              Width="44"
                                                              Height="68"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              IsHitTestVisible="False">
                                                            <controls:HourglassBackdropVisual Fill="Transparent">
                                                                <controls:HourglassBackdropVisual.Stroke>
                                                                    <Pen Brush="#B0000000" Thickness="4" />
                                                                </controls:HourglassBackdropVisual.Stroke>
                                                            </controls:HourglassBackdropVisual>

                                                            <controls:HourglassBackdropVisual Fill="Transparent">
                                                                <controls:HourglassBackdropVisual.Stroke>
                                                                    <Pen Brush="{DynamicResource ScryAccent}" Thickness="2" />
                                                                </controls:HourglassBackdropVisual.Stroke>
                                                            </controls:HourglassBackdropVisual>
                                                        </Grid>
                                                    </Grid>
                                                </Border>

                                                <!-- Hourglass timer readout (right of image) -->
                                                <StackPanel Grid.Row="0"
                                                            Grid.Column="2"
                                                            Spacing="2"
                                                            VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        Width="60"
                                                            IsVisible="{Binding IsSelectedForHourglass}">
                                                    <TextBlock Text="{Binding DataContext.Hourglass.RemainingText, RelativeSource={RelativeSource AncestorType=Window}}"
                                                               Foreground="{DynamicResource ScryAccent}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                           HorizontalAlignment="Center"
                                                           TextAlignment="Center" />
                                                    <TextBlock Text="{Binding DataContext.Hourglass.DurationText, RelativeSource={RelativeSource AncestorType=Window}, StringFormat=({0})}"
                                                               Foreground="{DynamicResource ScryTextMuted}"
                                                               FontSize="12"
                                                           HorizontalAlignment="Center"
                                                           TextAlignment="Center" />
                                                </StackPanel>

                                                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Spacing="2" Margin="0,6,0,0">
                                                    <!-- Initiative details -->
                                                    <StackPanel Spacing="2" IsVisible="{Binding IsSelectedForInitiative}">
                                                        <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                            <TextBlock Grid.Column="0" Text="Prev:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                            <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.PrevTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                        </Grid>
                                                        <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                            <TextBlock Grid.Column="0" Text="Up:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                            <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.UpTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                        </Grid>
                                                        <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                            <TextBlock Grid.Column="0" Text="Next:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                            <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.NextTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                        </Grid>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>

                                        <!-- Monitor + media preview (matches portal crop/align) -->
                                        <Grid Grid.Row="2"
                                              IsVisible="{Binding HasMonitorPreview}"
                                              Margin="0,2,0,0"
                                              ToolTip.Tip="{Binding MonitorPreviewToolTip}">
                                                <Grid RowDefinitions="100,Auto" ColumnDefinitions="60,*,60" ColumnSpacing="0">
                                                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="8" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                        <StackPanel Orientation="Horizontal" Spacing="4" IsVisible="{Binding IsSelectedForInitiative}">
                                                            <Button Classes="circleSmall"
                                                                    Width="28" Height="28" CornerRadius="14"
                                                                    Command="{Binding DataContext.InitiativeTracker.PreviousTurnCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    ToolTip.Tip="Previous Turn">
                                                                <i:Icon Value="mdi-chevron-left" FontSize="16"
                                                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                            </Button>
                                                            <Button Classes="circleSmall"
                                                                    Width="28" Height="28" CornerRadius="14"
                                                                    Command="{Binding DataContext.InitiativeTracker.NextTurnCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    ToolTip.Tip="Next Turn">
                                                                <i:Icon Value="mdi-chevron-right" FontSize="16"
                                                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                            </Button>
                                                        </StackPanel>

                                                        <StackPanel Orientation="Horizontal" Spacing="4" IsVisible="{Binding IsSelectedForHourglass}">
                                                            <Grid Width="28" Height="28">
                                                                <Button Classes="circleSmall"
                                                                        Width="28" Height="28" CornerRadius="14"
                                                                        Command="{Binding DataContext.Hourglass.StartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                        ToolTip.Tip="Play"
                                                                        IsVisible="{Binding !DataContext.Hourglass.IsRunning, RelativeSource={RelativeSource AncestorType=Window}}">
                                                                    <i:Icon Value="mdi-play" FontSize="16"
                                                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                                </Button>
                                                                <Button Classes="circleSmall active"
                                                                        Width="28" Height="28" CornerRadius="14"
                                                                        Command="{Binding DataContext.Hourglass.StopCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                        ToolTip.Tip="Pause"
                                                                        IsVisible="{Binding DataContext.Hourglass.IsRunning, RelativeSource={RelativeSource AncestorType=Window}}">
                                                                    <i:Icon Value="mdi-pause" FontSize="16"
                                                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                                </Button>
                                                            </Grid>

                                                            <Button Classes="circleSmall"
                                                                    Width="28" Height="28" CornerRadius="14"
                                                                    Command="{Binding DataContext.Hourglass.ResetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    ToolTip.Tip="Reset">
                                                                <i:Icon Value="mdi-restore" FontSize="16"
                                                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                            </Button>

                                                                <ToggleButton Classes="circleSmall soundToggle"
                                                                          Width="28" Height="28" CornerRadius="14"
                                                                          IsChecked="{Binding DataContext.Hourglass.PlaySoundsEnabled, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                                                                          ToolTip.Tip="Play Sounds">
                                                                <i:Icon Value="mdi-volume-high" FontSize="16"
                                                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                                            </ToggleButton>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <Border Grid.Row="0" Grid.Column="1"
                                                            Background="#0A0F18"
                                                            BorderBrush="{DynamicResource ScryBorder}"
                                                            BorderThickness="1"
                                                            CornerRadius="10"
                                                            Padding="6"
                                                            Width="170"
                                                            Height="100"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            ClipToBounds="True">
                                                    <Grid>
                                                    <Image Source="avares://ScryScreen.App/Assets/Images/Gem Transparent.png"
                                                           IsVisible="{Binding !HasMediaPreview}"
                                                           Width="40"
                                                           Height="40"
                                                           Opacity="0.8"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />

                                                    <!-- Monitor preview (same crop/align as the portal display) -->
                                                    <controls:QuakeShakeDecorator
                                                        IsVisible="{Binding HasMonitorRenderablePreview}"
                                                        QuakeEnabled="{Binding OverlayEffects.QuakeEnabled}"
                                                        QuakeIntensity="{Binding OverlayEffects.QuakeIntensity}"
                                                        QuakeTrigger="{Binding OverlayEffects.QuakeTrigger}">
                                                        <Grid Width="{Binding MonitorPreviewScreenWidth}"
                                                              Height="{Binding MonitorPreviewScreenHeight}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center">
                                                            <!-- Screen fill + clip host (no border; border is drawn as overlay) -->
                                                            <Border Background="#05070B"
                                                                    CornerRadius="0"
                                                                    ClipToBounds="True"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Width="{Binding MonitorPreviewScreenWidth}"
                                                                    Height="{Binding MonitorPreviewScreenHeight}">
                                                                <Canvas>
                                                                    <!-- Image preview (cropped/letterboxed by clipping) -->
                                                                    <Border IsVisible="{Binding ShowMonitorSnapshot}"
                                                                            Width="{Binding PreviewImageWidth}"
                                                                            Height="{Binding PreviewImageHeight}"
                                                                            Background="#16263B"
                                                                            Canvas.Left="{Binding PreviewImageLeft}"
                                                                            Canvas.Top="{Binding PreviewImageTop}">
                                                                        <Image Source="{Binding AssignedPreview}" Stretch="Fill" />
                                                                    </Border>

                                                                    <!-- Video preview (live; synced to portal playback) -->
                                                                    <!-- Live video preview temporarily disabled (use snapshots only) -->

                                                                    <!-- Video preview (live; synced to portal playback) -->
                                                                    <controls:VlcVideoHost IsVisible="{Binding ShowMonitorLiveVideo}"
                                                                                           Width="{Binding PreviewImageWidth}"
                                                                                           Height="{Binding PreviewImageHeight}"
                                                                                           Canvas.Left="{Binding PreviewImageLeft}"
                                                                                           Canvas.Top="{Binding PreviewImageTop}"
                                                                                           MediaPlayer="{Binding PreviewVideoPlayer}" />

                                                                    <!-- Overlay effects preview (matches portal overlay) -->
                                                                    <controls:OverlayEffectsLayer
                                                                        Width="{Binding MonitorPreviewScreenWidth}"
                                                                        Height="{Binding MonitorPreviewScreenHeight}"
                                                                        Canvas.Left="0"
                                                                        Canvas.Top="0"
                                                                        RainEnabled="{Binding OverlayEffects.RainEnabled}"
                                                                        RainIntensity="{Binding OverlayEffects.RainIntensity}"
                                                                        SnowEnabled="{Binding OverlayEffects.SnowEnabled}"
                                                                        SnowIntensity="{Binding OverlayEffects.SnowIntensity}"
                                                                        AshEnabled="{Binding OverlayEffects.AshEnabled}"
                                                                        AshIntensity="{Binding OverlayEffects.AshIntensity}"
                                                                        FireEnabled="{Binding OverlayEffects.FireEnabled}"
                                                                        FireIntensity="{Binding OverlayEffects.FireIntensity}"
                                                                        SandEnabled="{Binding OverlayEffects.SandEnabled}"
                                                                        SandIntensity="{Binding OverlayEffects.SandIntensity}"
                                                                        FogEnabled="{Binding OverlayEffects.FogEnabled}"
                                                                        FogIntensity="{Binding OverlayEffects.FogIntensity}"
                                                                        SmokeEnabled="{Binding OverlayEffects.SmokeEnabled}"
                                                                        SmokeIntensity="{Binding OverlayEffects.SmokeIntensity}"
                                                                        LightningEnabled="{Binding OverlayEffects.LightningEnabled}"
                                                                        LightningIntensity="{Binding OverlayEffects.LightningIntensity}"
                                                                        LightningTrigger="{Binding OverlayEffects.LightningTrigger}"
                                                                        IsHitTestVisible="False" />
                                                                </Canvas>
                                                            </Border>
                                                        </Grid>
                                                    </controls:QuakeShakeDecorator>

                                                    <!-- Hourglass indicator overlay (static; no sand) -->
                                    <Grid IsVisible="{Binding IsSelectedForHourglass}"
                                          Width="44"
                                          Height="68"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          IsHitTestVisible="False">
                                        <controls:HourglassBackdropVisual Fill="Transparent">
                                            <controls:HourglassBackdropVisual.Stroke>
                                                <Pen Brush="#B0000000" Thickness="4" />
                                            </controls:HourglassBackdropVisual.Stroke>
                                        </controls:HourglassBackdropVisual>

                                        <controls:HourglassBackdropVisual Fill="Transparent">
                                            <controls:HourglassBackdropVisual.Stroke>
                                                <Pen Brush="{DynamicResource ScryAccent}" Thickness="2" />
                                            </controls:HourglassBackdropVisual.Stroke>
                                        </controls:HourglassBackdropVisual>
                                    </Grid>
                                                    </Grid>
                                                    </Border>

                                                    <!-- Hourglass timer readout (right of image) -->
                                                    <StackPanel Grid.Row="0"
                                                                Grid.Column="2"
                                                                Spacing="2"
                                                                VerticalAlignment="Center"
                                                            HorizontalAlignment="Center"
                                                            Width="60"
                                                                IsVisible="{Binding IsSelectedForHourglass}">
                                                        <TextBlock Text="{Binding DataContext.Hourglass.RemainingText, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                   Foreground="{DynamicResource ScryAccent}"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                               HorizontalAlignment="Center"
                                                               TextAlignment="Center" />
                                                        <TextBlock Text="{Binding DataContext.Hourglass.DurationText, RelativeSource={RelativeSource AncestorType=Window}, StringFormat=({0})}"
                                                                   Foreground="{DynamicResource ScryTextMuted}"
                                                                   FontSize="12"
                                                               HorizontalAlignment="Center"
                                                               TextAlignment="Center" />
                                                    </StackPanel>

                                                    <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Spacing="2" Margin="0,6,0,0">
                                                        <!-- Initiative details -->
                                                        <StackPanel Spacing="2" IsVisible="{Binding IsSelectedForInitiative}">
                                                            <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                                <TextBlock Grid.Column="0" Text="Prev:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                                <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.PrevTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                            </Grid>
                                                            <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                                <TextBlock Grid.Column="0" Text="Up:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                                <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.UpTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                            </Grid>
                                                            <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                                <TextBlock Grid.Column="0" Text="Next:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                                <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.NextTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                            </Grid>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                        </Grid>

                                        <!-- Video timeline + controls (single outlined area) -->
                                        <Border Grid.Row="3"
                                                IsVisible="{Binding IsVideoAssigned}"
                                                Background="#0A0F18"
                                                BorderBrush="{DynamicResource ScryBorder}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                            Padding="8,6"
                                            Margin="0,6,0,0">
                                            <StackPanel Spacing="6">
                                                <!-- Time bar: short, with times on same line -->
                                                <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding VideoTimeText}"
                                                               Foreground="{DynamicResource ScryTextMuted}"
                                                               FontSize="10"
                                                               MinWidth="38"
                                                               HorizontalAlignment="Right"
                                                               TextAlignment="Right"
                                                               Margin="0,6,6,0"
                                                               VerticalAlignment="Center" />

                                                    <Slider Grid.Column="1"
                                                            Classes="portalTimeline"
                                                            Width="160"
                                                            Minimum="0"
                                                            Maximum="1"
                                                            Value="{Binding VideoPosition, Mode=TwoWay}"
                                                            IsEnabled="{Binding HasVideoTimeline}" />

                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding VideoDurationText}"
                                                               Foreground="{DynamicResource ScryTextMuted}"
                                                               FontSize="10"
                                                               MinWidth="38"
                                                               HorizontalAlignment="Left"
                                                               TextAlignment="Left"
                                                               Margin="6,6,0,0"
                                                               VerticalAlignment="Center" />
                                                </Grid>

                                                <!-- Controls: directly under time bar -->
                                                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                                    <Grid Width="36" Height="36">
                                                        <Button Classes="circleSmall"
                                                                ToolTip.Tip="Play/Pause"
                                                                Command="{Binding ToggleVideoPlayPauseCommand}"
                                                                IsVisible="{Binding !IsVideoPlaying}">
                                                            <i:Icon Value="mdi-play" FontSize="18"
                                                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                        </Button>
                                                        <Button Classes="circleSmall active"
                                                                ToolTip.Tip="Play/Pause"
                                                                Command="{Binding ToggleVideoPlayPauseCommand}"
                                                                IsVisible="{Binding IsVideoPlaying}">
                                                            <i:Icon Value="mdi-pause" FontSize="18"
                                                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                        </Button>
                                                    </Grid>

                                                    <Button Classes="circleSmall"
                                                            ToolTip.Tip="Restart"
                                                            Command="{Binding RestartVideoCommand}">
                                                        <i:Icon Value="mdi-restart" FontSize="18"
                                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                    </Button>

                                                    <ToggleButton Classes="circleSmall effectToggle"
                                                                  IsChecked="{Binding IsVideoLoop, Mode=TwoWay}"
                                                                  ToolTip.Tip="Loop">
                                                        <i:Icon Value="mdi-repeat" FontSize="18"
                                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                                    </ToggleButton>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Portal actions (moved from header) -->
                <StackPanel Grid.Column="1" Spacing="10" VerticalAlignment="Top">
                    <Button Classes="circle" ToolTip.Tip="Add Portal" Command="{Binding AddPortalCommand}">
                        <svg:Svg Path="/Assets/Icons/add_to_queue.svg"
                                 Width="22"
                                 Height="22" />
                    </Button>

                    <Button Classes="circle" ToolTip.Tip="Show Portal Numbers" Command="{Binding IdentifyPortalsCommand}">
                        <svg:Svg Path="/Assets/Icons/filter_1.svg"
                                 Width="22"
                                 Height="22" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Middle: Content Browser -->
        <Border Grid.Row="2" IsVisible="{Binding IsLibrarySectionVisible}" Background="{DynamicResource ScryBg0}" Padding="12,10">
            <Grid RowDefinitions="*" Margin="0">
                <Grid ColumnDefinitions="*">
                    <Border Classes="card" Padding="14">
                        <Grid RowDefinitions="Auto,*" RowSpacing="10">
                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="10" VerticalAlignment="Center" MinHeight="36">
                                <!-- Tabs: Images / Video / Audio / Apps -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Spacing="18">
                                    <Button Classes="tabLink" Command="{Binding ShowImagesTabCommand}" Margin="0">
                                        <Grid RowDefinitions="Auto,Auto">
                                            <Grid Grid.Row="0">
                                                <TextBlock Text="{Binding Media.ImagesTabHeader}" Foreground="{DynamicResource ScryText}" IsVisible="{Binding IsImagesTabSelected}" TextWrapping="NoWrap" />
                                                <TextBlock Text="{Binding Media.ImagesTabHeader}" Foreground="{DynamicResource ScryTextMuted}" IsVisible="{Binding !IsImagesTabSelected}" TextWrapping="NoWrap" />
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                                <Border Height="2" Background="Transparent" />
                                                <Border Height="2" Background="{DynamicResource ScryAccent}" IsVisible="{Binding IsImagesTabSelected}" />
                                            </Grid>
                                        </Grid>
                                    </Button>

                                    <Button Classes="tabLink" Command="{Binding ShowVideoTabCommand}" Margin="0">
                                        <Grid RowDefinitions="Auto,Auto">
                                            <Grid Grid.Row="0">
                                                <TextBlock Text="{Binding Media.VideoTabHeader}" Foreground="{DynamicResource ScryText}" IsVisible="{Binding IsVideoTabSelected}" TextWrapping="NoWrap" />
                                                <TextBlock Text="{Binding Media.VideoTabHeader}" Foreground="{DynamicResource ScryTextMuted}" IsVisible="{Binding !IsVideoTabSelected}" TextWrapping="NoWrap" />
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                                <Border Height="2" Background="Transparent" />
                                                <Border Height="2" Background="{DynamicResource ScryAccent}" IsVisible="{Binding IsVideoTabSelected}" />
                                            </Grid>
                                        </Grid>
                                    </Button>

                                    <Button Classes="tabLink" Command="{Binding ShowAudioTabCommand}" Margin="0">
                                        <Grid RowDefinitions="Auto,Auto">
                                            <Grid Grid.Row="0">
                                                <TextBlock Text="{Binding Media.AudioTabHeader}" Foreground="{DynamicResource ScryText}" IsVisible="{Binding IsAudioTabSelected}" TextWrapping="NoWrap" />
                                                <TextBlock Text="{Binding Media.AudioTabHeader}" Foreground="{DynamicResource ScryTextMuted}" IsVisible="{Binding !IsAudioTabSelected}" TextWrapping="NoWrap" />
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                                <Border Height="2" Background="Transparent" />
                                                <Border Height="2" Background="{DynamicResource ScryAccent}" IsVisible="{Binding IsAudioTabSelected}" />
                                            </Grid>
                                        </Grid>
                                    </Button>

                                    <Button Classes="tabLink" Command="{Binding ShowAppsTabCommand}" Margin="0">
                                        <Grid RowDefinitions="Auto,Auto">
                                            <Grid Grid.Row="0">
                                                <TextBlock Text="{Binding AppsTabHeader}" Foreground="{DynamicResource ScryText}" IsVisible="{Binding IsAppsTabSelected}" TextWrapping="NoWrap" />
                                                <TextBlock Text="{Binding AppsTabHeader}" Foreground="{DynamicResource ScryTextMuted}" IsVisible="{Binding !IsAppsTabSelected}" TextWrapping="NoWrap" />
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                                <Border Height="2" Background="Transparent" />
                                                <Border Height="2" Background="{DynamicResource ScryAccent}" IsVisible="{Binding IsAppsTabSelected}" />
                                            </Grid>
                                        </Grid>
                                    </Button>
                                </StackPanel>

                                <!-- spacer -->
                                <Border Grid.Column="1" />

                                <!-- Add folder (Media only) - placed before view toggles -->
                                <Button Grid.Column="2"
                                        Classes="circleSmall"
                                        Click="OnImportMediaFolder"
                                    IsVisible="{Binding IsAnyMediaTabSelected}"
                                        i:Attached.Icon="mdi-folder-plus"
                                        ToolTip.Tip="Add Folder" />

                                <!-- View mode: grouped vs flat (Media only) -->
                                <ToggleButton Grid.Column="3"
                                              IsVisible="{Binding IsImagesOrVideoTabSelected}"
                                              Classes="circleSmall effectToggle"
                                              ToolTip.Tip="View by Folder"
                                              IsChecked="{Binding Media.IsGroupedView, Mode=TwoWay}">
                                    <i:Icon Value="mdi-folder-multiple-image" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>

                                <ToggleButton Grid.Column="4"
                                              IsVisible="{Binding IsImagesOrVideoTabSelected}"
                                              Classes="circleSmall effectToggle"
                                              ToolTip.Tip="View Tiles"
                                              IsChecked="{Binding Media.IsFlatView, Mode=TwoWay}">
                                    <i:Icon Value="mdi-view-grid" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                            </Grid>

                            <Grid Grid.Row="1">
                                <!-- Images/Video content (tiles) -->
                                <Grid IsVisible="{Binding IsImagesOrVideoTabSelected}">
                                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                        <Grid>
                                            <!-- Grouped view (by directory) -->
                                            <ItemsControl ItemsSource="{Binding Media.Groups}" IsVisible="{Binding Media.IsGroupedView}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:MediaFolderGroupViewModel">
                                                        <StackPanel Spacing="8" Margin="0,0,0,12">
                                                            <TextBlock Text="{Binding DisplayHeader}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />

                                                            <ItemsControl ItemsSource="{Binding Items}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>

                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate x:DataType="vm:MediaItemViewModel" x:CompileBindings="False">
                                                                        <Button Background="Transparent"
                                                                                BorderThickness="0"
                                                                                Padding="0"
                                                                                Command="{Binding DataContext.SelectMediaItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                CommandParameter="{Binding .}">
                                                                            <ToolTip.Tip>
                                                                                <StackPanel Spacing="4">
                                                                                    <TextBlock Text="{Binding DisplayName}" TextWrapping="NoWrap" />
                                                                                    <TextBlock Text="{Binding PixelSizeText}" IsVisible="{Binding HasPixelSize}" TextWrapping="NoWrap" />
                                                                                    <TextBlock Text="{Binding FileSizeText}" IsVisible="{Binding HasFileSize}" TextWrapping="NoWrap" />
                                                                                </StackPanel>
                                                                            </ToolTip.Tip>
                                                                                <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="8" Width="140" Height="140">
                                                                                    <Grid>
                                                                                        <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                                                                        <Border IsVisible="{Binding IsVideo}"
                                                                                                Background="#88000000"
                                                                                                CornerRadius="999"
                                                                                                HorizontalAlignment="Center"
                                                                                                VerticalAlignment="Center"
                                                                                                Padding="8">
                                                                                            <i:Icon Value="mdi-play" FontSize="20" Foreground="White" />
                                                                                        </Border>
                                                                                    </Grid>
                                                                                </Border>
                                                                        </Button>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Flat view (no directory separation) -->
                                            <ItemsControl ItemsSource="{Binding Media.Items}" IsVisible="{Binding Media.IsFlatView}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:MediaItemViewModel" x:CompileBindings="False">
                                                        <Button Background="Transparent"
                                                                BorderThickness="0"
                                                                Padding="0"
                                                                Command="{Binding DataContext.SelectMediaItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding .}">
                                                            <ToolTip.Tip>
                                                                <StackPanel Spacing="4">
                                                                    <TextBlock Text="{Binding DisplayName}" TextWrapping="NoWrap" />
                                                                    <TextBlock Text="{Binding PixelSizeText}" IsVisible="{Binding HasPixelSize}" TextWrapping="NoWrap" />
                                                                    <TextBlock Text="{Binding FileSizeText}" IsVisible="{Binding HasFileSize}" TextWrapping="NoWrap" />
                                                                </StackPanel>
                                                            </ToolTip.Tip>
                                                            <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="8" Width="140" Height="140">
                                                                <Grid>
                                                                    <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                                                    <Border IsVisible="{Binding IsVideo}"
                                                                            Background="#88000000"
                                                                            CornerRadius="999"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Padding="8">
                                                                        <i:Icon Value="mdi-play" FontSize="20" Foreground="White" />
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </ScrollViewer>

                                    <!-- Empty state helper text -->
                                            <Border IsVisible="{Binding Media.HasNoItemsInSelectedCategory}"
                                            Background="#0A0F18"
                                            BorderBrush="{DynamicResource ScryBorder}"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="16"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            MaxWidth="560">
                                        <StackPanel Spacing="8">
                                                <TextBlock Text="No Items Imported" FontWeight="SemiBold" />
                                            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="8" RowDefinitions="Auto">
                                                <TextBlock Grid.Column="0"
                                                           Text="Click"
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           VerticalAlignment="Center" />

                                                <Button Grid.Column="1"
                                                        Classes="circleSmall"
                                                        Click="OnImportMediaFolder"
                                                        i:Attached.Icon="mdi-folder-plus"
                                                        VerticalAlignment="Center"
                                                        ToolTip.Tip="Add Folder" />

                                                <TextBlock Grid.Column="2"
                                                           Text="to add a directory with your images, videos, and audio."
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           VerticalAlignment="Center"
                                                           TextWrapping="Wrap" />
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Audio content (tiles) -->
                                <Grid IsVisible="{Binding IsAudioTabSelected}">
                                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding Media.Items}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="vm:MediaItemViewModel" x:CompileBindings="False">
                                                    <Border Background="#0A0F18"
                                                            BorderBrush="{DynamicResource ScryBorder}"
                                                            BorderThickness="1"
                                                            CornerRadius="10"
                                                            Padding="8"
                                                            Width="140"
                                                            Height="140">
                                                        <Grid RowDefinitions="*,Auto" RowSpacing="6">
                                                            <!-- watermark icon (behind everything, incl. name/time) -->
                                                            <i:Icon Grid.RowSpan="2"
                                                                    Value="mdi-music"
                                                                    FontSize="110"
                                                                    Foreground="{DynamicResource ScryAccent}"
                                                                    Opacity="0.50"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    IsHitTestVisible="False" />

                                                            <!-- controls -->
                                                            <StackPanel Orientation="Horizontal"
                                                                        Spacing="10"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Margin="0,10,0,0">
                                                                <Button Classes="circleSmall"
                                                                        Padding="0"
                                                                        HorizontalContentAlignment="Center"
                                                                        VerticalContentAlignment="Center"
                                                                        ToolTip.Tip="Play/Stop"
                                                                        Classes.active="{Binding IsAudioPlaying}"
                                                                        Command="{Binding DataContext.ToggleAudioPlayCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                        CommandParameter="{Binding .}">
                                                                    <Grid>
                                                                        <i:Icon Value="mdi-play" FontSize="18"
                                                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                                                IsVisible="{Binding !IsAudioPlaying}" />
                                                                        <i:Icon Value="mdi-stop" FontSize="18" Foreground="{DynamicResource ScryDanger}" IsVisible="{Binding IsAudioPlaying}" />
                                                                    </Grid>
                                                                </Button>

                                                                <ToggleButton Classes="circleSmall soundToggle"
                                                                              Padding="0"
                                                                              HorizontalContentAlignment="Center"
                                                                              VerticalContentAlignment="Center"
                                                                              ToolTip.Tip="Loop"
                                                                              IsChecked="{Binding IsAudioLoopEnabled, Mode=OneWay}"
                                                                              Command="{Binding DataContext.ToggleAudioLoopCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                              CommandParameter="{Binding .}">
                                                                    <i:Icon Value="mdi-repeat" FontSize="18"
                                                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                                                </ToggleButton>
                                                            </StackPanel>

                                                            <!-- text -->
                                                            <StackPanel Grid.Row="1" Spacing="2">
                                                                <TextBlock Text="{Binding DisplayNameNoExtension}" FontSize="12" TextTrimming="CharacterEllipsis" />
                                                                <TextBlock Text="{Binding AudioTimeText}" FontSize="12" Foreground="{DynamicResource ScryTextMuted}" TextWrapping="NoWrap" />
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <Border IsVisible="{Binding Media.HasNoItemsInSelectedCategory}"
                                            Background="#0A0F18"
                                            BorderBrush="{DynamicResource ScryBorder}"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="16"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            MaxWidth="560">
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="No Audio Imported" FontWeight="SemiBold" />
                                            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="8" RowDefinitions="Auto">
                                                <TextBlock Grid.Column="0"
                                                           Text="Click"
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           VerticalAlignment="Center" />

                                                <Button Grid.Column="1"
                                                        Classes="circleSmall"
                                                        Click="OnImportMediaFolder"
                                                        i:Attached.Icon="mdi-folder-plus"
                                                        VerticalAlignment="Center"
                                                        ToolTip.Tip="Add Folder" />

                                                <TextBlock Grid.Column="2"
                                                           Text="to add a directory with your images, videos, and audio."
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           VerticalAlignment="Center"
                                                           TextWrapping="Wrap" />
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Apps content -->
                                <Grid IsVisible="{Binding IsAppsTabSelected}">
                                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                                  VerticalScrollBarVisibility="Auto">
                                        <ItemsControl>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" ItemSpacing="12" LineSpacing="12" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <Button Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="0"
                                                    Command="{Binding SelectInitiativeTrackerAppCommand}"
                                                    ToolTip.Tip="Track the player and monster turn order for your game!">
                                                <Border Classes="appsTile"
                                                    Classes.selected="{Binding IsInitiativeTrackerAppSelected}"
                                                    Width="140"
                                                    Height="140">
                                                    <Grid>
                                                        <!-- watermark icon -->
                                                        <i:Icon Value="mdi-sword-cross"
                                                                FontSize="110"
                                                                Foreground="{DynamicResource ScryTextMuted}"
                                                                Opacity="0.12"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center" />

                                                        <!-- centered title -->
                                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="2">
                                                            <TextBlock Text="Initiative"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold"
                                                                       HorizontalAlignment="Center"
                                                                       TextAlignment="Center" />
                                                            <TextBlock Text="Tracker"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold"
                                                                       HorizontalAlignment="Center"
                                                                       TextAlignment="Center" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </Button>

                                            <Button Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="0"
                                                    Command="{Binding SelectHourglassAppCommand}"
                                                    ToolTip.Tip="Show a dramatic hourglass countdown overlay on portals.">
                                                <Border Classes="appsTile"
                                                        Classes.selected="{Binding IsHourglassAppSelected}"
                                                        Width="140"
                                                        Height="140">
                                                    <Grid>
                                                        <!-- watermark icon -->
                                                        <svg:Svg Path="/Assets/Icons/hourglass.svg"
                                                                 Width="120"
                                                                 Height="120"
                                                                 Margin="0,8,0,0"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center" />

                                                        <!-- centered title -->
                                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="2">
                                                            <TextBlock Text="Hourglass"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold"
                                                                       HorizontalAlignment="Center"
                                                                       TextAlignment="Center" />
                                                            <TextBlock Text="Timer"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold"
                                                                       HorizontalAlignment="Center"
                                                                       TextAlignment="Center" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </Button>

                                            <Button Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="0"
                                                    Command="{Binding SelectMapMasterAppCommand}"
                                                    ToolTip.Tip="Reveal a map to players using a movable blackout mask.">
                                                <Border Classes="appsTile"
                                                        Classes.selected="{Binding IsMapMasterAppSelected}"
                                                        Width="140"
                                                        Height="140">
                                                    <Grid>
                                                        <!-- watermark icon -->
                                                        <i:Icon Value="mdi-map" FontSize="110"
                                                                Foreground="{DynamicResource ScryTextMuted}"
                                                                Opacity="0.12"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center" />

                                                        <!-- centered title -->
                                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="2">
                                                            <TextBlock Text="Map" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" TextAlignment="Center" />
                                                            <TextBlock Text="Master" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" TextAlignment="Center" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </Button>

                                            <Button Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="0"
                                                    Command="{Binding SelectDiceRollerAppCommand}"
                                                    ToolTip.Tip="Roll dice and show results on selected portals.">
                                                <Border Classes="appsTile"
                                                        Classes.selected="{Binding IsDiceRollerAppSelected}"
                                                        Width="140"
                                                        Height="140">
                                                    <Grid>
                                                        <!-- watermark icon -->
                                                        <i:Icon Value="mdi-dice-multiple" FontSize="110"
                                                                Foreground="{DynamicResource ScryTextMuted}"
                                                                Opacity="0.12"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center" />

                                                        <!-- centered title -->
                                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="2">
                                                            <TextBlock Text="Dice" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" TextAlignment="Center" />
                                                            <TextBlock Text="Tray" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" TextAlignment="Center" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </Button>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Bottom: Inspector / Controls -->
        <Border Grid.Row="3"
                IsVisible="{Binding IsControlsSectionVisible}"
                Background="{DynamicResource ScryBg0}"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="0,1,0,0"
                Padding="12,10">
            <Grid>
                <!-- Media controls (default) -->
                <Border Classes="card" Padding="10" IsVisible="{Binding IsImagesOrVideoTabSelected}">
                    <Grid ColumnDefinitions="Auto,Auto,Auto,*" ColumnSpacing="12" RowDefinitions="Auto">
                        <!-- Selected image (left) -->
                        <Border Background="#0A0F18"
                                BorderBrush="{DynamicResource ScryBorder}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="6"
                                Width="170"
                                Height="100">
                            <Image Source="{Binding Media.SelectedItem.Thumbnail}" Stretch="Uniform" />
                        </Border>

                        <!-- Assign to portals (middle) -->
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Assign to Portals" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" Margin="0,0,0,6" />
                            <ItemsControl ItemsSource="{Binding Portals}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:PortalRowViewModel" x:CompileBindings="False">
                                        <ToggleButton Classes="circleSmall"
                                                      Margin="0,0,8,8"
                                                      Content="{Binding PortalNumber}"
                                                      ToolTip.Tip="Show Image on this Portal"
                                                      IsChecked="{Binding IsSelectedForCurrentMedia}"
                                                      Command="{Binding DataContext.ToggleSelectedMediaForPortalCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding .}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Alignment (right) -->
                        <StackPanel Grid.Column="2" Spacing="4" VerticalAlignment="Top">
                            <TextBlock Text="Alignment" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" Margin="0,0,0,6" />

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <ToggleButton Classes="circleSmall"
                                              IsChecked="{Binding IsFillHeight, Mode=OneWay}"
                                              Command="{Binding SetScaleFillHeightCommand}"
                                              ToolTip.Tip="Fill Height (Crops Left/Right)">
                                    <svg:Svg Path="/Assets/Icons/fit_height.svg" Width="18" Height="18" />
                                </ToggleButton>

                                <ToggleButton Classes="circleSmall"
                                              IsChecked="{Binding IsFillWidth, Mode=OneWay}"
                                              Command="{Binding SetScaleFillWidthCommand}"
                                              ToolTip.Tip="Fill Width (Crops Top/Bottom)">
                                    <svg:Svg Path="/Assets/Icons/fit_width.svg" Width="18" Height="18" />
                                </ToggleButton>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <!-- For Fill Width (W): vertical align (Top/Center/Bottom) -->
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillWidth}"
                                              IsChecked="{Binding IsAlignStart, Mode=OneWay}"
                                              Command="{Binding SetAlignStartCommand}"
                                              ToolTip.Tip="Top">
                                    <svg:Svg Path="/Assets/Icons/align_top.svg" Width="18" Height="18" />
                                </ToggleButton>
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillWidth}"
                                              IsChecked="{Binding IsAlignCenter, Mode=OneWay}"
                                              Command="{Binding SetAlignCenterCommand}"
                                              ToolTip.Tip="Center">
                                    <svg:Svg Path="/Assets/Icons/align_v_center.svg" Width="18" Height="18" />
                                </ToggleButton>
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillWidth}"
                                              IsChecked="{Binding IsAlignEnd, Mode=OneWay}"
                                              Command="{Binding SetAlignEndCommand}"
                                              ToolTip.Tip="Bottom">
                                    <svg:Svg Path="/Assets/Icons/align_bottom.svg" Width="18" Height="18" />
                                </ToggleButton>

                                <!-- For Fill Height (H): horizontal align (Left/Center/Right) -->
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillHeight}"
                                              IsChecked="{Binding IsAlignStart, Mode=OneWay}"
                                              Command="{Binding SetAlignStartCommand}"
                                              ToolTip.Tip="Left">
                                    <svg:Svg Path="/Assets/Icons/align_left.svg" Width="18" Height="18" />
                                </ToggleButton>
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillHeight}"
                                              IsChecked="{Binding IsAlignCenter, Mode=OneWay}"
                                              Command="{Binding SetAlignCenterCommand}"
                                              ToolTip.Tip="Center">
                                    <svg:Svg Path="/Assets/Icons/align_h_center.svg" Width="18" Height="18" />
                                </ToggleButton>
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillHeight}"
                                              IsChecked="{Binding IsAlignEnd, Mode=OneWay}"
                                              Command="{Binding SetAlignEndCommand}"
                                              ToolTip.Tip="Right">
                                    <svg:Svg Path="/Assets/Icons/align_right.svg" Width="18" Height="18" />
                                </ToggleButton>
                            </StackPanel>

                            <!-- Video options -->
                            <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding IsSelectedMediaVideo}" Margin="0,6,0,0">
                                <ToggleButton Classes="circleSmall effectToggle"
                                              IsChecked="{Binding IsVideoLoop, Mode=TwoWay}"
                                              ToolTip.Tip="Loop">
                                    <i:Icon Value="mdi-repeat" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                            </StackPanel>
                        </StackPanel>

                        <!-- Effects (right fill) -->
                        <StackPanel Grid.Column="3"
                                Spacing="6"
                                VerticalAlignment="Top"
                            IsVisible="{Binding IsImagesOrVideoTabSelected}">
                            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="8" Margin="0,0,0,6">
                                <TextBlock Grid.Column="0" Text="Effects" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />

                                <Button Grid.Column="1"
                                        Background="#0A0F18"
                                        BorderBrush="{DynamicResource ScryBorder}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="10,6"
                                        Click="OnLoadEffectsConfig"
                                        >
                                    <ToolTip.Tip>
                                        <ToolTip MaxWidth="320">
                                            <TextBlock Text="Load Effect Settings" TextWrapping="Wrap" />
                                        </ToolTip>
                                    </ToolTip.Tip>
                                    <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                        <i:Icon Value="mdi-folder-open" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
                                        <TextBlock Text="Load" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="2"
                                        Background="#0A0F18"
                                        BorderBrush="{DynamicResource ScryBorder}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="10,6"
                                        Click="OnSaveEffectsConfig"
                                        >
                                    <ToolTip.Tip>
                                        <ToolTip MaxWidth="320">
                                            <TextBlock Text="Save Effect Settings" TextWrapping="Wrap" />
                                        </ToolTip>
                                    </ToolTip.Tip>
                                    <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                        <i:Icon Value="mdi-content-save" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
                                        <TextBlock Text="Save" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <ToggleButton Grid.Column="3"
                                              Classes="circleSmall"
                                              IsChecked="{Binding AutoSaveEffectsEnabled, Mode=TwoWay}"
                                              Checked="OnAutoSaveEffectsChecked"
                                              Unchecked="OnAutoSaveEffectsUnchecked"
                                              ToolTip.Tip="Auto-Save to Last Save File">
                                    <i:Icon Value="mdi-content-save-cog" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>

                                <ToggleButton Grid.Column="4"
                                          Classes="circleSmall effectToggle"
                                              IsChecked="{Binding ShowEffectSliderBounds, Mode=TwoWay}"
                                              ToolTip.Tip="Show Slider Min/Max Fields">
                                    <i:Icon Value="mdi-cog" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                            </Grid>

                            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10" RowDefinitions="Auto" HorizontalAlignment="Left">
                            <!-- Column 1: Rain / Lightning / Fog -->
                            <StackPanel Grid.Column="0" Spacing="6">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                          IsChecked="{Binding Effects.RainEnabled, Mode=TwoWay}"
                                          ToolTip.Tip="Rain">
                                    <i:Icon Value="mdi-weather-rainy" FontSize="18"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.RainMin, Mode=TwoWay}" />
                                <Slider Classes="portalTimeline"
                                    Width="80"
                                    Minimum="{Binding Effects.RainMin}"
                                    Maximum="{Binding Effects.RainMax}"
                                    Value="{Binding Effects.RainIntensity, Mode=TwoWay}"
                                    PointerReleased="OnEffectsSliderPointerReleased"
                                    VerticalAlignment="Center" />
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.RainMax, Mode=TwoWay}" />
                                <ToggleButton Classes="circleSmall soundToggle"
                                              Width="28"
                                              Height="28"
                                              CornerRadius="14"
                                              IsChecked="{Binding Effects.RainSoundEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Rain Sound">
                                    <i:Icon Value="mdi-volume-high" FontSize="16"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                          IsChecked="{Binding Effects.LightningEnabled, Mode=TwoWay}"
                                          ToolTip.Tip="Lightning">
                                    <i:Icon Value="mdi-weather-lightning" FontSize="18"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.LightningMin, Mode=TwoWay}" />
                                <Slider Classes="portalTimeline"
                                    Width="80"
                                    Minimum="{Binding Effects.LightningMin}"
                                    Maximum="{Binding Effects.LightningMax}"
                                    Value="{Binding Effects.LightningIntensity, Mode=TwoWay}"
                                    PointerReleased="OnEffectsSliderPointerReleased"
                                    VerticalAlignment="Center" />
                                <Button Classes="circleSmall noAccent"
                                        Width="28"
                                        Height="28"
                                        CornerRadius="14"
                                        IsEnabled="{Binding !IsLightningTriggerCooldown}"
                                        Command="{Binding TriggerLightningCommand}"
                                        ToolTip.Tip="Trigger Lightning Flash">
                                    <i:Icon Value="mdi-flash" FontSize="16"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                </Button>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.LightningMax, Mode=TwoWay}" />
                                <ToggleButton Classes="circleSmall soundToggle"
                                              Width="28"
                                              Height="28"
                                              CornerRadius="14"
                                              IsChecked="{Binding Effects.LightningSoundEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Lightning Sound">
                                    <i:Icon Value="mdi-volume-high" FontSize="16"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                          IsChecked="{Binding Effects.FogEnabled, Mode=TwoWay}"
                                          ToolTip.Tip="Fog">
                                    <i:Icon Value="mdi-weather-fog" FontSize="18"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.FogMin, Mode=TwoWay}" />
                                <Slider Classes="portalTimeline"
                                    Width="80"
                                    Minimum="{Binding Effects.FogMin}"
                                    Maximum="{Binding Effects.FogMax}"
                                    Value="{Binding Effects.FogIntensity, Mode=TwoWay}"
                                    PointerReleased="OnEffectsSliderPointerReleased"
                                    VerticalAlignment="Center" />
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.FogMax, Mode=TwoWay}" />
                                </StackPanel>

                            </StackPanel>

                            <!-- Column 2: Snow / Sand Storm / Smoke -->
                            <StackPanel Grid.Column="1" Spacing="6">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                          IsChecked="{Binding Effects.SnowEnabled, Mode=TwoWay}"
                                          ToolTip.Tip="Snow">
                                    <i:Icon Value="mdi-weather-snowy" FontSize="18"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.SnowMin, Mode=TwoWay}" />
                                <Slider Classes="portalTimeline"
                                    Width="80"
                                    Minimum="{Binding Effects.SnowMin}"
                                    Maximum="{Binding Effects.SnowMax}"
                                    Value="{Binding Effects.SnowIntensity, Mode=TwoWay}"
                                    PointerReleased="OnEffectsSliderPointerReleased"
                                    VerticalAlignment="Center" />
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.SnowMax, Mode=TwoWay}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                          IsChecked="{Binding Effects.SandEnabled, Mode=TwoWay}"
                                          ToolTip.Tip="Sand Storm">
                                    <i:Icon Value="mdi-weather-dust" FontSize="18"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.SandMin, Mode=TwoWay}" />
                                <Slider Classes="portalTimeline"
                                    Width="80"
                                    Minimum="{Binding Effects.SandMin}"
                                    Maximum="{Binding Effects.SandMax}"
                                    Value="{Binding Effects.SandIntensity, Mode=TwoWay}"
                                    PointerReleased="OnEffectsSliderPointerReleased"
                                    VerticalAlignment="Center" />
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.SandMax, Mode=TwoWay}" />
                                <ToggleButton Classes="circleSmall soundToggle"
                                              Width="28"
                                              Height="28"
                                              CornerRadius="14"
                                              IsChecked="{Binding Effects.SandSoundEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Sand Sound">
                                    <i:Icon Value="mdi-volume-high" FontSize="16"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                          IsChecked="{Binding Effects.SmokeEnabled, Mode=TwoWay}"
                                          ToolTip.Tip="Smoke">
                                    <i:Icon Value="mdi-smoke" FontSize="18"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.SmokeMin, Mode=TwoWay}" />
                                <Slider Classes="portalTimeline"
                                    Width="80"
                                    Minimum="{Binding Effects.SmokeMin}"
                                    Maximum="{Binding Effects.SmokeMax}"
                                    Value="{Binding Effects.SmokeIntensity, Mode=TwoWay}"
                                    PointerReleased="OnEffectsSliderPointerReleased"
                                    VerticalAlignment="Center" />
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.SmokeMax, Mode=TwoWay}" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Column 3: Ash Rain / Quake -->
                            <StackPanel Grid.Column="2" Spacing="6">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                          IsChecked="{Binding Effects.AshEnabled, Mode=TwoWay}"
                                          ToolTip.Tip="Ash Rain">
                                    <i:Icon Value="mdi-weather-snowy" FontSize="18"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.AshMin, Mode=TwoWay}" />
                                <Slider Classes="portalTimeline"
                                    Width="80"
                                    Minimum="{Binding Effects.AshMin}"
                                    Maximum="{Binding Effects.AshMax}"
                                    Value="{Binding Effects.AshIntensity, Mode=TwoWay}"
                                    PointerReleased="OnEffectsSliderPointerReleased"
                                    VerticalAlignment="Center" />
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.AshMax, Mode=TwoWay}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                          IsChecked="{Binding Effects.QuakeEnabled, Mode=TwoWay}"
                                          ToolTip.Tip="Quake">
                                    <i:Icon Value="mdi-vibrate" FontSize="18"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.QuakeMin, Mode=TwoWay}" />
                                <Slider Classes="portalTimeline"
                                    Width="80"
                                    Minimum="{Binding Effects.QuakeMin}"
                                    Maximum="{Binding Effects.QuakeMax}"
                                    Value="{Binding Effects.QuakeIntensity, Mode=TwoWay}"
                                    PointerReleased="OnEffectsSliderPointerReleased"
                                    VerticalAlignment="Center" />
                                <Button Classes="circleSmall noAccent"
                                        Width="28"
                                        Height="28"
                                        CornerRadius="14"
                                        IsEnabled="{Binding !IsQuakeTriggerCooldown}"
                                        Command="{Binding TriggerQuakeCommand}"
                                        ToolTip.Tip="Trigger Quake">
                                    <i:Icon Value="mdi-vibrate" FontSize="16"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                </Button>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.QuakeMax, Mode=TwoWay}" />
                                <ToggleButton Classes="circleSmall soundToggle"
                                              Width="28"
                                              Height="28"
                                              CornerRadius="14"
                                              IsChecked="{Binding Effects.QuakeSoundEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Quake Sound">
                                    <i:Icon Value="mdi-volume-high" FontSize="16"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                          IsChecked="{Binding Effects.FireEnabled, Mode=TwoWay}"
                                          ToolTip.Tip="Fire">
                                    <i:Icon Value="mdi-fire" FontSize="18"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.FireMin, Mode=TwoWay}" />
                                <Slider Classes="portalTimeline"
                                    Width="80"
                                    Minimum="{Binding Effects.FireMin}"
                                    Maximum="{Binding Effects.FireMax}"
                                    Value="{Binding Effects.FireIntensity, Mode=TwoWay}"
                                    PointerReleased="OnEffectsSliderPointerReleased"
                                    VerticalAlignment="Center" />
                                <TextBox Classes="sliderBound"
                                         IsVisible="{Binding ShowEffectSliderBounds}"
                                         Text="{Binding Effects.FireMax, Mode=TwoWay}" />
                                <ToggleButton Classes="circleSmall soundToggle"
                                              Width="28"
                                              Height="28"
                                              CornerRadius="14"
                                              IsChecked="{Binding Effects.FireSoundEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Fire Sound">
                                    <i:Icon Value="mdi-volume-high" FontSize="16"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                </StackPanel>
                            </StackPanel>

                            <!-- Column 4: Effects volume -->
                            <StackPanel Grid.Column="3" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Top">
                                <i:Icon Value="mdi-volume-high" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" HorizontalAlignment="Center" />
                                <Slider Classes="effectVolume"
                                        Orientation="Vertical"
                                    Height="85"
                                        Minimum="0"
                                        Maximum="2"
                                        Value="{Binding Effects.EffectsVolume, Mode=TwoWay}"
                                        PointerReleased="OnEffectsSliderPointerReleased"
                                        ToolTip.Tip="Effects volume" />
                            </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Apps controls (Initiative Tracker) -->
                <Border Classes="card" Padding="10" IsVisible="{Binding IsInitiativeControlsVisible}">
                    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="10">
                        <Grid ColumnDefinitions="Auto,Auto,*,Auto" ColumnSpacing="12" VerticalAlignment="Center">
                            <TextBlock Text="Assign to Portals" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />

                            <ItemsControl Grid.Column="1" ItemsSource="{Binding Portals}" HorizontalAlignment="Left">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel ItemSpacing="8" LineSpacing="8" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:PortalRowViewModel" x:CompileBindings="False">
                                        <ToggleButton Classes="circleSmall"
                                                      Content="{Binding PortalNumber}"
                                                      ToolTip.Tip="Show Initiative Tracker on this Portal"
                                                      IsChecked="{Binding IsSelectedForInitiative, Mode=OneWay}"
                                                      Command="{Binding DataContext.ToggleInitiativeForPortalCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding .}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                                <Button Classes="circleSmall"
                                        Command="{Binding InitiativeTracker.SortCommand}"
                                        ToolTip.Tip="Sort by Initiative">
                                    <i:Icon Value="mdi-sort" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                </Button>

                                <Button Classes="circleSmall"
                                        Click="OnLoadInitiativeConfig"
                                        ToolTip.Tip="Load Custom Initiative Settings">
                                    <i:Icon Value="mdi-folder-open" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                </Button>

                                <Button Classes="circleSmall"
                                        Click="OnSaveInitiativeConfig"
                                        ToolTip.Tip="Save Custom Initiative Settings">
                                    <i:Icon Value="mdi-content-save" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                </Button>

                                <ToggleButton Classes="circleSmall"
                                              IsChecked="{Binding AutoSaveInitiativeEnabled, Mode=TwoWay}"
                                              Checked="OnAutoSaveInitiativeChecked"
                                              Unchecked="OnAutoSaveInitiativeUnchecked"
                                              ToolTip.Tip="Auto-Save Custom Initiative Settings to Last Save File">
                                    <i:Icon Value="mdi-content-save-cog" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>

                                <ComboBox Width="180"
                                          Height="36"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding InitiativeTracker.GameTypeOptions}"
                                          SelectedItem="{Binding InitiativeTracker.SelectedGameType, Mode=TwoWay}"
                                          ToolTip.Tip="Game Type">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource ScryTextMuted}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <Grid Grid.Column="3" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" VerticalAlignment="Center">
                                <TextBlock Grid.Column="0" Text="Turn" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.PreviousTurnCommand}" ToolTip.Tip="Previous Turn">
                                        <i:Icon Value="mdi-chevron-left" FontSize="18"
                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                    </Button>
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.NextTurnCommand}" ToolTip.Tip="Next Turn">
                                        <i:Icon Value="mdi-chevron-right" FontSize="18"
                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                    </Button>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="Round" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

                                <TextBlock Grid.Column="3"
                                           Text="{Binding InitiativeTracker.Round}"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource ScryAccent}" />

                                <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.IncrementRoundCommand}" ToolTip.Tip="Increment Round">
                                        <i:Icon Value="mdi-plus" FontSize="18"
                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                    </Button>
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.DecrementRoundCommand}" ToolTip.Tip="Decrement Round">
                                        <i:Icon Value="mdi-minus" FontSize="18"
                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                    </Button>
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.ResetRoundCommand}" ToolTip.Tip="Reset Round">
                                        <i:Icon Value="mdi-restore" FontSize="18"
                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                    </Button>
                                </StackPanel>

                                <TextBlock Grid.Column="5" Text="Overlay" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

                                <Grid Grid.Column="6" ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="6" VerticalAlignment="Center">
                                    <TextBlock Text="0%" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
                                    <Slider Grid.Column="1"
                                        Classes="portalTimeline"
                                        Width="96"
                                        Minimum="0"
                                        Maximum="1"
                                        Value="{Binding InitiativeTracker.OverlayOpacity, Mode=TwoWay}" />
                                    <TextBlock Grid.Column="2" Text="100%" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
                                </Grid>

                                <TextBlock Grid.Column="7" Text="Font" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

                                <ComboBox Grid.Column="8"
                                          MinWidth="96"
                                          MaxWidth="110"
                                          Height="36"
                                          VerticalAlignment="Center"
                                          FontSize="12"
                                          ItemsSource="{Binding InitiativeTracker.PortalFontSizes}"
                                          SelectedItem="{Binding InitiativeTracker.PortalFontSize, Mode=TwoWay}" />

                                <!-- Gear far right: Initiative conditions configuration -->
                                <ToggleButton Grid.Column="9"
                                              Classes="circleSmall effectToggle"
                                              IsChecked="{Binding InitiativeTracker.ShowConditionsConfiguration, Mode=TwoWay}"
                                              ToolTip.Tip="Show Conditions Configuration">
                                    <i:Icon Value="mdi-cog" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                            </Grid>
                        </Grid>

                        <Border Grid.Row="1" Height="1" Background="{DynamicResource ScryBorder}" Opacity="0.6" />

                        <views:InitiativeTrackerView Grid.Row="2" DataContext="{Binding InitiativeTracker}" />
                    </Grid>
                </Border>

                <!-- Apps controls (Hourglass) -->
                <Border Classes="card" Padding="10" IsVisible="{Binding IsHourglassControlsVisible}">
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="10">
                        <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="12" VerticalAlignment="Center">
                            <TextBlock Text="Assign to Portals" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />

                            <ItemsControl Grid.Column="1" ItemsSource="{Binding Portals}" HorizontalAlignment="Left">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel ItemSpacing="8" LineSpacing="8" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:PortalRowViewModel" x:CompileBindings="False">
                                        <ToggleButton Classes="circleSmall"
                                                      Content="{Binding PortalNumber}"
                                                      ToolTip.Tip="Show Hourglass on this Portal"
                                                      IsChecked="{Binding IsSelectedForHourglass, Mode=OneWay}"
                                                      Command="{Binding DataContext.ToggleHourglassForPortalCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding .}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Hourglass controls (same row as Assign to Portals, like Initiative Tracker) -->
                                <Grid Grid.Column="2"
                                    ColumnDefinitions="Auto,Auto,*,Auto,Auto,Auto,Auto,Auto"
                                  ColumnSpacing="10"
                                  VerticalAlignment="Center">

                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                    <TextBlock Text="Duration" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

                                    <TextBox Width="22"
                                             Height="28"
                                             Padding="0,2"
                                             Background="#0A0F18"
                                             BorderBrush="{DynamicResource ScryBorder}"
                                             BorderThickness="1"
                                             CornerRadius="8"
                                             VerticalContentAlignment="Center"
                                             TextAlignment="Center"
                                             FontSize="12"
                                             Text="{Binding Hourglass.DurationMinutesText, Mode=TwoWay}"
                                             beh:NumericTextBoxBehavior.IsNumericOnly="True"
                                             beh:SelectAllOnFocusBehavior.IsEnabled="True"
                                             Watermark="m" />
                                    <TextBlock Text=":" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                                    <TextBox Width="22"
                                             Height="28"
                                             Padding="0,2"
                                             Background="#0A0F18"
                                             BorderBrush="{DynamicResource ScryBorder}"
                                             BorderThickness="1"
                                             CornerRadius="8"
                                             VerticalContentAlignment="Center"
                                             TextAlignment="Center"
                                             FontSize="12"
                                             Text="{Binding Hourglass.DurationSecondsText, Mode=TwoWay}"
                                             beh:NumericTextBoxBehavior.IsNumericOnly="True"
                                             beh:SelectAllOnFocusBehavior.IsEnabled="True"
                                             Watermark="s" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                    <TextBlock Text="Remaining" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding Hourglass.RemainingText}"
                                               Foreground="{DynamicResource ScryAccent}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                </StackPanel>

                                <!-- Spacer: push play/reset/overlay/gear to the far right -->
                                <Border Grid.Column="2" />

                                <!-- Single play/pause button (swap visibility) -->
                                <Grid Grid.Column="3" Width="28" Height="28" VerticalAlignment="Center">
                                    <Button Classes="circleSmall"
                                            ToolTip.Tip="Play"
                                            Command="{Binding Hourglass.StartCommand}"
                                            IsVisible="{Binding !Hourglass.IsRunning}">
                                        <i:Icon Value="mdi-play" FontSize="18"
                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                    </Button>
                                    <Button Classes="circleSmall active"
                                            ToolTip.Tip="Pause"
                                            Command="{Binding Hourglass.StopCommand}"
                                            IsVisible="{Binding Hourglass.IsRunning}">
                                        <i:Icon Value="mdi-pause" FontSize="18"
                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                    </Button>
                                </Grid>

                                <Button Grid.Column="4"
                                        Classes="circleSmall"
                                        ToolTip.Tip="Reset"
                                        Command="{Binding Hourglass.ResetCommand}">
                                    <i:Icon Value="mdi-restore" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                </Button>

                                <ToggleButton Grid.Column="5"
                                          Classes="circleSmall soundToggle"
                                              IsChecked="{Binding Hourglass.PlaySoundsEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Play Sounds">
                                    <i:Icon Value="mdi-volume-high" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>

                                <!-- Opacity (between reset and gear) -->
                                <Grid Grid.Column="6" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="6" VerticalAlignment="Center">
                                    <TextBlock Grid.Column="0" Text="Overlay" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="1" Text="0%" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
                                    <Slider Grid.Column="2"
                                            Classes="portalTimeline"
                                            Width="96"
                                            Minimum="0"
                                            Maximum="1"
                                            Value="{Binding Hourglass.OverlayOpacity, Mode=TwoWay}" />
                                    <TextBlock Grid.Column="3" Text="100%" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
                                </Grid>

                                <!-- Gear far right, icon-sized like other controls -->
                                <ToggleButton Grid.Column="7"
                                          Classes="circleSmall effectToggle"
                                              IsChecked="{Binding Hourglass.ShowSandPhysics, Mode=TwoWay}"
                                              ToolTip.Tip="Show Sand Physics">
                                    <i:Icon Value="mdi-cog" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                            </Grid>
                        </Grid>

                        <views:HourglassView Grid.Row="1" DataContext="{Binding Hourglass}" />
                    </Grid>
                </Border>

                    <!-- Apps controls (Map Master) -->
                    <Border Classes="card" Padding="10" IsVisible="{Binding IsMapMasterControlsVisible}">
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="10">
                            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="12" VerticalAlignment="Center">
                                <TextBlock Text="Assign to Portals" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />

                                <ItemsControl Grid.Column="1" ItemsSource="{Binding Portals}" HorizontalAlignment="Left">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel ItemSpacing="8" LineSpacing="8" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:PortalRowViewModel" x:CompileBindings="False">
                                            <ToggleButton Classes="circleSmall"
                                                          Content="{Binding PortalNumber}"
                                                          ToolTip.Tip="Show Map Master on this Portal"
                                                          IsChecked="{Binding IsSelectedForMapMaster, Mode=OneWay}"
                                                          Command="{Binding DataContext.ToggleMapMasterForPortalCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding .}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Grid.Column="2"
                                           Text="Use the sliders below to reveal the map."
                                           Foreground="{DynamicResource ScryTextMuted}"
                                           FontSize="12"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <views:MapMasterView Grid.Row="1" DataContext="{Binding MapMaster}" />
                        </Grid>
                    </Border>

                    <!-- Apps controls (Dice Tray) -->
                    <Border Classes="card" Padding="10" IsVisible="{Binding IsDiceRollerControlsVisible}">
                        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="12" VerticalAlignment="Center">
                                <TextBlock Text="Assign to Portals" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />

                                <ItemsControl Grid.Column="1" ItemsSource="{Binding Portals}" HorizontalAlignment="Left">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel ItemSpacing="8" LineSpacing="8" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:PortalRowViewModel" x:CompileBindings="False">
                                            <ToggleButton Classes="circleSmall"
                                                          Content="{Binding PortalNumber}"
                                                          ToolTip.Tip="Show Dice Tray on this Portal"
                                                          IsChecked="{Binding IsSelectedForDiceRoller, Mode=OneWay}"
                                                          Command="{Binding DataContext.ToggleDiceRollerForPortalCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding .}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <Grid Grid.Column="2" VerticalAlignment="Center">
                                    <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="12" HorizontalAlignment="Right">
                                        <!-- Opacity (hourglass-style) -->
                                        <Grid Grid.Column="0" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="6" VerticalAlignment="Center">
                                            <TextBlock Grid.Column="0" Text="Overlay" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1" Text="0%" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
                                            <Slider Grid.Column="2"
                                                    Classes="portalTimeline"
                                                    Width="96"
                                                    Minimum="0"
                                                    Maximum="1"
                                                    Value="{Binding DiceRoller.OverlayOpacity, Mode=TwoWay}" />
                                            <TextBlock Grid.Column="3" Text="100%" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />

                                            <TextBlock Grid.Column="4" Text="Font" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" Margin="8,0,0,0" />

                                            <ComboBox Grid.Column="5"
                                                     MinWidth="96"
                                                     MaxWidth="110"
                                                     Height="36"
                                                     VerticalAlignment="Center"
                                                     FontSize="12"
                                                     ItemsSource="{Binding DiceRoller.ResultFontSizes}"
                                                     SelectedItem="{Binding DiceRoller.ResultFontSize, Mode=TwoWay}" />

                                            <ToggleButton Grid.Column="6"
                                                          Classes="circleSmall noAccent"
                                                          IsChecked="{Binding DiceRoller.ResultsVisible, Mode=TwoWay}"
                                                          ToolTip.Tip="Show roll text">
                                                <Grid>
                                                    <i:Icon Value="mdi-eye" FontSize="18"
                                                            IsVisible="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                                                            Foreground="{DynamicResource ScrySuccess}" />
                                                    <i:Icon Value="mdi-eye-off" FontSize="18"
                                                            IsVisible="{Binding !IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                                                            Foreground="{DynamicResource ScryDanger}" />
                                                </Grid>
                                            </ToggleButton>
                                        </Grid>

                                        <!-- Gear: Dice configuration -->
                                        <ToggleButton Grid.Column="1"
                                                      Classes="circleSmall effectToggle"
                                                      IsChecked="{Binding DiceRoller.ShowDiceConfiguration, Mode=TwoWay}"
                                                      ToolTip.Tip="Show Dice Configuration">
                                            <i:Icon Value="mdi-cog" FontSize="18"
                                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                        </ToggleButton>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <Border Grid.Row="1" Height="1" Background="{DynamicResource ScryBorder}" Opacity="0.6" />

                            <views:DiceRollerView Grid.Row="2" DataContext="{Binding DiceRoller}" />
                        </Grid>
                    </Border>
                        </Grid>
                </Border>

                <!-- Warm-up hidden Dice Tray WebView2 so first visible use doesn't flash/load as much -->
                <Canvas Grid.Row="0" Grid.RowSpan="4" ClipToBounds="True" IsHitTestVisible="False">
                    <controls:DiceTray3DHost Width="1" Height="1" Canvas.Left="-2000" Canvas.Top="-2000" />
                </Canvas>
        </Grid>

</Window>
