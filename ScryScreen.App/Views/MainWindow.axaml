<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScryScreen.App.ViewModels"
    xmlns:controls="using:ScryScreen.App.Controls"
    xmlns:views="using:ScryScreen.App.Views"
    xmlns:i="https://github.com/projektanker/icons.avalonia"
    xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScryScreen.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
    Title="ScryScreen â€” ScryMaster"
    Topmost="{Binding IsAlwaysOnTop}"
    Background="{DynamicResource ScryBg0}"
    WindowStartupLocation="Manual"
    SizeToContent="Height"
    SystemDecorations="None"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    CanResize="False">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Background="{DynamicResource ScryBg0}">
        <!-- Top bar: title + section toggles + close -->
        <Border Background="{DynamicResource ScryBg1}" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="12" VerticalAlignment="Center">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" ClipToBounds="True">
                      <Image Source="avares://ScryScreen.App/Assets/Images/scry_logo_text_300w.png"
                          Stretch="Uniform"
                           Height="44"
                           MaxHeight="44"
                           MaxWidth="260"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center">
                        <Image.RenderTransform>
                            <TranslateTransform Y="3" />
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <!-- Portals -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsPortalsSectionVisible}"
                                  ToolTip.Tip="Show/Hide Portals">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsPortalsSectionVisible}" Value="mdi-monitor" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsPortalsSectionVisible}" Value="mdi-monitor-off" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>

                    <!-- Media / Apps -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsLibrarySectionVisible}"
                                  ToolTip.Tip="Show/Hide Media &amp; Apps">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsLibrarySectionVisible}" Value="mdi-image-plus" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsLibrarySectionVisible}" Value="mdi-image-off" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>

                    <!-- Controls -->
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsControlsSectionVisible}"
                                  ToolTip.Tip="Show/Hide Controls">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsControlsSectionVisible}" Value="mdi-cog" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsControlsSectionVisible}" Value="mdi-cog-off" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <ToggleButton Classes="circle"
                                  IsChecked="{Binding IsAlwaysOnTop}"
                                  ToolTip.Tip="Always on Top">
                        <Grid>
                            <i:Icon IsVisible="{Binding IsAlwaysOnTop}" Value="mdi-pin" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                            <i:Icon IsVisible="{Binding !IsAlwaysOnTop}" Value="mdi-pin-outline" FontSize="20" Foreground="{DynamicResource ScryTextMuted}" />
                        </Grid>
                    </ToggleButton>

                    <Button Classes="circle" i:Attached.Icon="mdi-close" ToolTip.Tip="Close ScryScreen" Click="OnCloseApp" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Top: Portals (expandable, compact) -->
        <Border Grid.Row="1"
                IsVisible="{Binding IsPortalsSectionVisible}"
                Background="{DynamicResource ScryBg0}"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="0,0,0,1"
            Padding="12,10,12,8">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <ScrollViewer Grid.Column="0"
                              MaxHeight="220"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Portals}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" ItemSpacing="12" LineSpacing="12" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:CompileBindings="False">
                                <!-- <Border Classes="card" Width="320" Padding="8,6,8,4"> -->
                                <Border Classes="card" Width="320" Padding="8,6,8,4">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="3">
                                        <!-- Controls row -->
                                        <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,Auto,*,Auto" ColumnSpacing="6" VerticalAlignment="Center">
                                            <!-- (1) Portal number badge -->
                                                <Border Width="36" Height="36"
                                                    CornerRadius="18"
                                                    Background="#0A0F18"
                                                    BorderBrush="{DynamicResource ScryBadgeMaroon}"
                                                    BorderThickness="2"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding PortalNumber}"
                                                       FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                            </Border>

                                            <!-- Visibility -->
                                            <ToggleButton Grid.Column="1"
                                                          Classes="circleSmall noAccent"
                                                          IsChecked="{Binding IsVisible}"
                                                          ToolTip.Tip="Toggle Portal Visibility">
                                                <Grid>
                                                    <i:Icon IsVisible="{Binding IsVisible}" Value="mdi-eye" FontSize="18" Foreground="{DynamicResource ScrySuccess}" />
                                                    <i:Icon IsVisible="{Binding !IsVisible}" Value="mdi-eye-off" FontSize="18" Foreground="{DynamicResource ScryDanger}" />
                                                </Grid>
                                            </ToggleButton>

                                            <!-- Clear content -->
                                            <Button Grid.Column="2"
                                                    Classes="circleSmall"
                                                    HorizontalAlignment="Right"
                                                    i:Attached.Icon="mdi-eraser"
                                                    ToolTip.Tip="Clear Portal Content"
                                                    Command="{Binding DataContext.ClearPortalContentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding .}" />

                                            <!-- Monitor dropdown (compact) -->
                                            <ComboBox Grid.Column="3"
                                                      MinWidth="110"
                                                      MaxWidth="120"
                                                      Height="36"
                                                      VerticalAlignment="Center"
                                                      FontSize="12"
                                                      HorizontalAlignment="Stretch"
                                                      ItemsSource="{Binding AvailableScreens}"
                                                      DisplayMemberBinding="{Binding MonitorName}"
                                                      SelectedItem="{Binding SelectedScreen}" />

                                            <!-- Close -->
                                            <Button Grid.Column="4"
                                                    Classes="circleSmall"
                                                    HorizontalAlignment="Right"
                                                    i:Attached.Icon="mdi-close"
                                                    ToolTip.Tip="Close Portal"
                                                    Command="{Binding ClosePortalCommand}" />
                                        </Grid>

                                        <!-- Assigned media preview (fallback only when no monitor preview is available) -->
                                        <Grid Grid.Row="1"
                                              IsVisible="{Binding ShowTopAssignedPreview}"
                                              Margin="0,1,0,0">
                                            <Grid RowDefinitions="100,Auto" ColumnDefinitions="60,*,60" ColumnSpacing="0" ClipToBounds="True">
                                                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" VerticalAlignment="Center" HorizontalAlignment="Left" IsVisible="{Binding IsSelectedForInitiative}">
                                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                                        <Button Classes="circleSmall"
                                                                Width="28" Height="28" CornerRadius="14"
                                                                Command="{Binding DataContext.InitiativeTracker.PreviousTurnCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                ToolTip.Tip="Previous Turn">
                                                            <i:Icon Value="mdi-chevron-left" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
                                                        </Button>
                                                        <Button Classes="circleSmall"
                                                                Width="28" Height="28" CornerRadius="14"
                                                                Command="{Binding DataContext.InitiativeTracker.NextTurnCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                ToolTip.Tip="Next Turn">
                                                            <i:Icon Value="mdi-chevron-right" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
                                                        </Button>
                                                    </StackPanel>
                                                </StackPanel>

                                                <Border Grid.Row="0" Grid.Column="1"
                                                        Background="#0A0F18"
                                                        BorderBrush="{DynamicResource ScryBorder}"
                                                        BorderThickness="1"
                                                    CornerRadius="10"
                                                        Padding="6"
                                                        Width="170"
                                                        Height="100"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        ClipToBounds="True">
                                                    <Grid>
                                                        <Image Source="avares://ScryScreen.App/Assets/Images/Gem Transparent.png"
                                                               IsVisible="{Binding !HasMediaPreview}"
                                                               Width="40"
                                                               Height="40"
                                                               Opacity="0.8"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center" />

                                                            <Image Source="{Binding AssignedPreview}"
                                                                    IsVisible="{Binding HasMediaPreview}"
                                                                    Stretch="UniformToFill"
                                                                    StretchDirection="Both"
                                                                    HorizontalAlignment="Stretch"
                                                                    VerticalAlignment="Stretch" />

                                                        <controls:VlcVideoHost IsVisible="{Binding ShowMonitorLiveVideo}"
                                                                               MediaPlayer="{Binding PreviewVideoPlayer}" />
                                                    </Grid>
                                                </Border>

                                                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Spacing="2" Margin="0,6,0,0" IsVisible="{Binding IsSelectedForInitiative}">
                                                    <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                        <TextBlock Grid.Column="0" Text="Prev:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                        <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.PrevTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                    </Grid>
                                                    <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                        <TextBlock Grid.Column="0" Text="Up:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                        <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.UpTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                    </Grid>
                                                    <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                        <TextBlock Grid.Column="0" Text="Next:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                        <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.NextTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>

                                        <!-- Monitor + media preview (matches portal crop/align) -->
                                        <Grid Grid.Row="2"
                                              IsVisible="{Binding HasMonitorPreview}"
                                              Margin="0,2,0,0"
                                              ToolTip.Tip="{Binding MonitorPreviewToolTip}">
                                                <Grid RowDefinitions="100,Auto" ColumnDefinitions="60,*,60" ColumnSpacing="0">
                                                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" VerticalAlignment="Center" HorizontalAlignment="Left" IsVisible="{Binding IsSelectedForInitiative}">
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <Button Classes="circleSmall"
                                                                    Width="28" Height="28" CornerRadius="14"
                                                                    Command="{Binding DataContext.InitiativeTracker.PreviousTurnCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    ToolTip.Tip="Previous Turn">
                                                                <i:Icon Value="mdi-chevron-left" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
                                                            </Button>
                                                            <Button Classes="circleSmall"
                                                                    Width="28" Height="28" CornerRadius="14"
                                                                    Command="{Binding DataContext.InitiativeTracker.NextTurnCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    ToolTip.Tip="Next Turn">
                                                                <i:Icon Value="mdi-chevron-right" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
                                                            </Button>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <Border Grid.Row="0" Grid.Column="1"
                                                            Background="#0A0F18"
                                                            BorderBrush="{DynamicResource ScryBorder}"
                                                            BorderThickness="1"
                                                            CornerRadius="10"
                                                            Padding="6"
                                                            Width="170"
                                                            Height="100"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            ClipToBounds="True">
                                                    <Grid>
                                                    <Image Source="avares://ScryScreen.App/Assets/Images/Gem Transparent.png"
                                                           IsVisible="{Binding !HasMediaPreview}"
                                                           Width="40"
                                                           Height="40"
                                                           Opacity="0.8"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />

                                                    <!-- Scale-to-fill monitor preview inside the fixed 170x100 tile preview box -->
                                                    <Viewbox IsVisible="{Binding HasMonitorRenderablePreview}"
                                                             Stretch="UniformToFill"
                                                             StretchDirection="Both"
                                                             HorizontalAlignment="Stretch"
                                                             VerticalAlignment="Stretch">
                                                        <Grid Width="{Binding MonitorPreviewScreenWidth}"
                                                              Height="{Binding MonitorPreviewScreenHeight}">
                                                            <!-- Screen fill + clip host (no border; border is drawn as overlay) -->
                                                            <Border Background="#05070B"
                                                                    CornerRadius="0"
                                                                    ClipToBounds="True"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Width="{Binding MonitorPreviewScreenWidth}"
                                                                    Height="{Binding MonitorPreviewScreenHeight}">
                                                                <Canvas>
                                                                    <!-- Image preview (cropped/letterboxed by clipping) -->
                                                                    <Border IsVisible="{Binding ShowMonitorSnapshot}"
                                                                            Width="{Binding PreviewImageWidth}"
                                                                            Height="{Binding PreviewImageHeight}"
                                                                            Background="#16263B"
                                                                            Canvas.Left="{Binding PreviewImageLeft}"
                                                                            Canvas.Top="{Binding PreviewImageTop}">
                                                                        <Image Source="{Binding AssignedPreview}" Stretch="Fill" />
                                                                    </Border>

                                                                    <!-- Video preview (live; synced to portal playback) -->
                                                                    <controls:VlcVideoHost IsVisible="{Binding ShowMonitorLiveVideo}"
                                                                                           Width="{Binding PreviewImageWidth}"
                                                                                           Height="{Binding PreviewImageHeight}"
                                                                                           Canvas.Left="{Binding PreviewImageLeft}"
                                                                                           Canvas.Top="{Binding PreviewImageTop}"
                                                                                           MediaPlayer="{Binding PreviewVideoPlayer}" />
                                                                </Canvas>
                                                            </Border>
                                                        </Grid>
                                                    </Viewbox>
                                                    </Grid>
                                                    </Border>

                                                    <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Spacing="2" Margin="0,6,0,0" IsVisible="{Binding IsSelectedForInitiative}">
                                                        <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                            <TextBlock Grid.Column="0" Text="Prev:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                            <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.PrevTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                        </Grid>
                                                        <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                            <TextBlock Grid.Column="0" Text="Up:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                            <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.UpTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                        </Grid>
                                                        <Grid ColumnDefinitions="48,*" ColumnSpacing="8">
                                                            <TextBlock Grid.Column="0" Text="Next:" FontWeight="Bold" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" HorizontalAlignment="Right" />
                                                            <TextBlock Grid.Column="1" Text="{Binding DataContext.InitiativeTracker.NextTurnDetailsText, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="11" TextWrapping="Wrap" />
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                        </Grid>

                                        <!-- Video timeline + controls (single outlined area) -->
                                        <Border Grid.Row="3"
                                                IsVisible="{Binding IsVideoAssigned}"
                                                Background="#0A0F18"
                                                BorderBrush="{DynamicResource ScryBorder}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                            Padding="8,6"
                                            Margin="0,6,0,0">
                                            <StackPanel Spacing="6">
                                                <!-- Time bar: short, with times on same line -->
                                                <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding VideoTimeText}"
                                                               Foreground="{DynamicResource ScryTextMuted}"
                                                               FontSize="10"
                                                               MinWidth="38"
                                                               HorizontalAlignment="Right"
                                                               TextAlignment="Right"
                                                               Margin="0,6,6,0"
                                                               VerticalAlignment="Center" />

                                                    <Slider Grid.Column="1"
                                                            Classes="portalTimeline"
                                                            Width="160"
                                                            Minimum="0"
                                                            Maximum="1"
                                                            Value="{Binding VideoPosition, Mode=TwoWay}"
                                                            IsEnabled="{Binding HasVideoTimeline}" />

                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding VideoDurationText}"
                                                               Foreground="{DynamicResource ScryTextMuted}"
                                                               FontSize="10"
                                                               MinWidth="38"
                                                               HorizontalAlignment="Left"
                                                               TextAlignment="Left"
                                                               Margin="6,6,0,0"
                                                               VerticalAlignment="Center" />
                                                </Grid>

                                                <!-- Controls: directly under time bar -->
                                                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                                    <Button Classes="circleSmall"
                                                            ToolTip.Tip="Play/Pause"
                                                            Command="{Binding ToggleVideoPlayPauseCommand}">
                                                        <Grid>
                                                            <i:Icon IsVisible="{Binding !IsVideoPlaying}" Value="mdi-play" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                                            <i:Icon IsVisible="{Binding IsVideoPlaying}" Value="mdi-pause" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                                        </Grid>
                                                    </Button>

                                                    <Button Classes="circleSmall"
                                                            ToolTip.Tip="Restart"
                                                            Command="{Binding RestartVideoCommand}">
                                                        <i:Icon Value="mdi-restart" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                                    </Button>

                                                    <ToggleButton Classes="circleSmall"
                                                                  IsChecked="{Binding IsVideoLoop, Mode=TwoWay}"
                                                                  ToolTip.Tip="Loop">
                                                        <i:Icon Value="mdi-repeat" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                                    </ToggleButton>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Portal actions (moved from header) -->
                <StackPanel Grid.Column="1" Spacing="10" VerticalAlignment="Top">
                    <Button Classes="circle" ToolTip.Tip="Add Portal" Command="{Binding AddPortalCommand}">
                        <svg:Svg Path="/Assets/Icons/add_to_queue.svg"
                                 Width="22"
                                 Height="22" />
                    </Button>

                    <Button Classes="circle" ToolTip.Tip="Show Portal Numbers" Command="{Binding IdentifyPortalsCommand}">
                        <svg:Svg Path="/Assets/Icons/filter_1.svg"
                                 Width="22"
                                 Height="22" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Middle: Content Browser -->
        <Border Grid.Row="2" IsVisible="{Binding IsLibrarySectionVisible}" Background="{DynamicResource ScryBg0}" Padding="12,10">
            <Grid RowDefinitions="*" Margin="0">
                <Grid ColumnDefinitions="*">
                    <Border Classes="card" Padding="14">
                        <Grid RowDefinitions="Auto,*" RowSpacing="10">
                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="10" VerticalAlignment="Center" MinHeight="36">
                                <!-- Tabs: Apps / Media -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Classes="tabLink" Command="{Binding ShowAppsTabCommand}">
                                        <Grid RowDefinitions="Auto,Auto">
                                            <Grid Grid.Row="0">
                                                <TextBlock Text="Apps" Foreground="{DynamicResource ScryText}" IsVisible="{Binding IsAppsTabSelected}" TextWrapping="NoWrap" />
                                                <TextBlock Text="Apps" Foreground="{DynamicResource ScryTextMuted}" IsVisible="{Binding !IsAppsTabSelected}" TextWrapping="NoWrap" />
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                                <Border Height="2" Background="Transparent" />
                                                <Border Height="2" Background="{DynamicResource ScryAccent}" IsVisible="{Binding IsAppsTabSelected}" />
                                            </Grid>
                                        </Grid>
                                    </Button>

                                    <Button Classes="tabLink" Command="{Binding ShowMediaTabCommand}" Margin="0">
                                        <Grid RowDefinitions="Auto,Auto">
                                            <Grid Grid.Row="0">
                                                <TextBlock Text="{Binding Media.MediaTabHeader}" Foreground="{DynamicResource ScryText}" IsVisible="{Binding IsMediaTabSelected}" TextWrapping="NoWrap" />
                                                <TextBlock Text="{Binding Media.MediaTabHeader}" Foreground="{DynamicResource ScryTextMuted}" IsVisible="{Binding !IsMediaTabSelected}" TextWrapping="NoWrap" />
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                                <Border Height="2" Background="Transparent" />
                                                <Border Height="2" Background="{DynamicResource ScryAccent}" IsVisible="{Binding IsMediaTabSelected}" />
                                            </Grid>
                                        </Grid>
                                    </Button>
                                </StackPanel>

                                <!-- spacer -->
                                <Border Grid.Column="1" />

                                <!-- Add folder (Media only) - placed before view toggles -->
                                <Button Grid.Column="2"
                                        Classes="circleSmall"
                                        Click="OnImportMediaFolder"
                                        IsVisible="{Binding IsMediaTabSelected}"
                                        i:Attached.Icon="mdi-folder-plus"
                                        ToolTip.Tip="Add Folder" />

                                <!-- View mode: grouped vs flat (Media only) -->
                                <ToggleButton Grid.Column="3"
                                              IsVisible="{Binding IsMediaTabSelected}"
                                              Classes="circleSmall"
                                              ToolTip.Tip="View by Folder"
                                              IsChecked="{Binding Media.IsGroupedView, Mode=TwoWay}">
                                    <i:Icon Value="mdi-folder-multiple-image" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                </ToggleButton>

                                <ToggleButton Grid.Column="4"
                                              IsVisible="{Binding IsMediaTabSelected}"
                                              Classes="circleSmall"
                                              ToolTip.Tip="View Tiles"
                                              IsChecked="{Binding Media.IsFlatView, Mode=TwoWay}">
                                    <i:Icon Value="mdi-view-grid" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                </ToggleButton>
                            </Grid>

                            <Grid Grid.Row="1">
                                <!-- Media content -->
                                <Grid IsVisible="{Binding IsMediaTabSelected}">
                                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                        <Grid>
                                            <!-- Grouped view (by directory) -->
                                            <ItemsControl ItemsSource="{Binding Media.Groups}" IsVisible="{Binding Media.IsGroupedView}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:MediaFolderGroupViewModel">
                                                        <StackPanel Spacing="8" Margin="0,0,0,12">
                                                            <TextBlock Text="{Binding DisplayHeader}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />

                                                            <ItemsControl ItemsSource="{Binding Items}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>

                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate x:DataType="vm:MediaItemViewModel" x:CompileBindings="False">
                                                                        <Button Background="Transparent"
                                                                                BorderThickness="0"
                                                                                Padding="0"
                                                                                Command="{Binding DataContext.SelectMediaItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                CommandParameter="{Binding .}">
                                                                            <ToolTip.Tip>
                                                                                <StackPanel Spacing="4">
                                                                                    <TextBlock Text="{Binding DisplayName}" TextWrapping="NoWrap" />
                                                                                    <TextBlock Text="{Binding PixelSizeText}" IsVisible="{Binding HasPixelSize}" TextWrapping="NoWrap" />
                                                                                    <TextBlock Text="{Binding FileSizeText}" IsVisible="{Binding HasFileSize}" TextWrapping="NoWrap" />
                                                                                </StackPanel>
                                                                            </ToolTip.Tip>
                                                                                <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="8" Width="140" Height="140">
                                                                                    <Grid>
                                                                                        <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                                                                        <Border IsVisible="{Binding IsVideo}"
                                                                                                Background="#88000000"
                                                                                                CornerRadius="999"
                                                                                                HorizontalAlignment="Center"
                                                                                                VerticalAlignment="Center"
                                                                                                Padding="8">
                                                                                            <i:Icon Value="mdi-play" FontSize="20" Foreground="White" />
                                                                                        </Border>
                                                                                    </Grid>
                                                                                </Border>
                                                                        </Button>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Flat view (no directory separation) -->
                                            <ItemsControl ItemsSource="{Binding Media.Items}" IsVisible="{Binding Media.IsFlatView}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel ItemSpacing="10" LineSpacing="10" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:MediaItemViewModel" x:CompileBindings="False">
                                                        <Button Background="Transparent"
                                                                BorderThickness="0"
                                                                Padding="0"
                                                                Command="{Binding DataContext.SelectMediaItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding .}">
                                                            <ToolTip.Tip>
                                                                <StackPanel Spacing="4">
                                                                    <TextBlock Text="{Binding DisplayName}" TextWrapping="NoWrap" />
                                                                    <TextBlock Text="{Binding PixelSizeText}" IsVisible="{Binding HasPixelSize}" TextWrapping="NoWrap" />
                                                                    <TextBlock Text="{Binding FileSizeText}" IsVisible="{Binding HasFileSize}" TextWrapping="NoWrap" />
                                                                </StackPanel>
                                                            </ToolTip.Tip>
                                                            <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="8" Width="140" Height="140">
                                                                <Grid>
                                                                    <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                                                    <Border IsVisible="{Binding IsVideo}"
                                                                            Background="#88000000"
                                                                            CornerRadius="999"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Padding="8">
                                                                        <i:Icon Value="mdi-play" FontSize="20" Foreground="White" />
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </ScrollViewer>

                                    <!-- Empty state helper text -->
                                    <Border IsVisible="{Binding Media.HasNoMedia}"
                                            Background="#0A0F18"
                                            BorderBrush="{DynamicResource ScryBorder}"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="16"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            MaxWidth="560">
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="No Media Imported" FontWeight="SemiBold" />
                                            <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="8" RowDefinitions="Auto">
                                                <TextBlock Grid.Column="0"
                                                           Text="Click"
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           VerticalAlignment="Center" />

                                                <Button Grid.Column="1"
                                                        Classes="circleSmall"
                                                        Click="OnImportMediaFolder"
                                                        i:Attached.Icon="mdi-folder-plus"
                                                        VerticalAlignment="Center"
                                                        ToolTip.Tip="Add Folder" />

                                                <TextBlock Grid.Column="2"
                                                           Text="to add a directory with your images and videos."
                                                           Foreground="{DynamicResource ScryTextMuted}"
                                                           VerticalAlignment="Center"
                                                           TextWrapping="Wrap" />
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Apps content -->
                                <Grid IsVisible="{Binding IsAppsTabSelected}">
                                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                                  VerticalScrollBarVisibility="Auto">
                                        <ItemsControl>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" ItemSpacing="12" LineSpacing="12" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <Button Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="0"
                                                    Command="{Binding SelectInitiativeTrackerAppCommand}"
                                                    ToolTip.Tip="Track the player and monster turn order for your game!">
                                                <Border Background="#0A0F18"
                                                        BorderBrush="{DynamicResource ScryBorder}"
                                                        BorderThickness="1"
                                                        CornerRadius="10"
                                                        Padding="8"
                                                        Width="140"
                                                        Height="140">
                                                    <Grid>
                                                        <!-- watermark icon -->
                                                        <i:Icon Value="mdi-sword-cross"
                                                                FontSize="110"
                                                                Foreground="{DynamicResource ScryTextMuted}"
                                                                Opacity="0.12"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center" />

                                                        <!-- centered title -->
                                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="2">
                                                            <TextBlock Text="Initiative"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold"
                                                                       HorizontalAlignment="Center"
                                                                       TextAlignment="Center" />
                                                            <TextBlock Text="Tracker"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold"
                                                                       HorizontalAlignment="Center"
                                                                       TextAlignment="Center" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </Button>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Bottom: Inspector / Controls -->
        <Border Grid.Row="3"
                IsVisible="{Binding IsControlsSectionVisible}"
                Background="{DynamicResource ScryBg0}"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="0,1,0,0"
                Padding="12,10">
            <Grid>
                <!-- Media controls (default) -->
                <Border Classes="card" Padding="10" IsVisible="{Binding IsMediaTabSelected}">
                    <Grid ColumnDefinitions="Auto,Auto,Auto,*" ColumnSpacing="12" RowDefinitions="Auto">
                        <!-- Selected image (left) -->
                        <Border Background="#0A0F18"
                                BorderBrush="{DynamicResource ScryBorder}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="6"
                                Width="170"
                                Height="100">
                            <Image Source="{Binding Media.SelectedItem.Thumbnail}" Stretch="Uniform" />
                        </Border>

                        <!-- Assign to portals (middle) -->
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Assign to Portals" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" Margin="0,0,0,6" />
                            <ItemsControl ItemsSource="{Binding Portals}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:PortalRowViewModel" x:CompileBindings="False">
                                        <ToggleButton Classes="circleSmall"
                                                      Margin="0,0,8,8"
                                                      Content="{Binding PortalNumber}"
                                                      ToolTip.Tip="Show Image on this Portal"
                                                      IsChecked="{Binding IsSelectedForCurrentMedia}"
                                                      Command="{Binding DataContext.ToggleSelectedMediaForPortalCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding .}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Alignment (right) -->
                        <StackPanel Grid.Column="2" Spacing="4" VerticalAlignment="Top">
                            <TextBlock Text="Alignment" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" Margin="0,0,0,6" />

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <ToggleButton Classes="circleSmall"
                                              IsChecked="{Binding IsFillHeight, Mode=OneWay}"
                                              Command="{Binding SetScaleFillHeightCommand}"
                                              ToolTip.Tip="Fill Height (Crops Left/Right)">
                                    <svg:Svg Path="/Assets/Icons/fit_height.svg" Width="18" Height="18" />
                                </ToggleButton>

                                <ToggleButton Classes="circleSmall"
                                              IsChecked="{Binding IsFillWidth, Mode=OneWay}"
                                              Command="{Binding SetScaleFillWidthCommand}"
                                              ToolTip.Tip="Fill Width (Crops Top/Bottom)">
                                    <svg:Svg Path="/Assets/Icons/fit_width.svg" Width="18" Height="18" />
                                </ToggleButton>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <!-- For Fill Width (W): vertical align (Top/Center/Bottom) -->
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillWidth}"
                                              IsChecked="{Binding IsAlignStart, Mode=OneWay}"
                                              Command="{Binding SetAlignStartCommand}"
                                              ToolTip.Tip="Top">
                                    <svg:Svg Path="/Assets/Icons/align_top.svg" Width="18" Height="18" />
                                </ToggleButton>
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillWidth}"
                                              IsChecked="{Binding IsAlignCenter, Mode=OneWay}"
                                              Command="{Binding SetAlignCenterCommand}"
                                              ToolTip.Tip="Center">
                                    <svg:Svg Path="/Assets/Icons/align_v_center.svg" Width="18" Height="18" />
                                </ToggleButton>
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillWidth}"
                                              IsChecked="{Binding IsAlignEnd, Mode=OneWay}"
                                              Command="{Binding SetAlignEndCommand}"
                                              ToolTip.Tip="Bottom">
                                    <svg:Svg Path="/Assets/Icons/align_bottom.svg" Width="18" Height="18" />
                                </ToggleButton>

                                <!-- For Fill Height (H): horizontal align (Left/Center/Right) -->
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillHeight}"
                                              IsChecked="{Binding IsAlignStart, Mode=OneWay}"
                                              Command="{Binding SetAlignStartCommand}"
                                              ToolTip.Tip="Left">
                                    <svg:Svg Path="/Assets/Icons/align_left.svg" Width="18" Height="18" />
                                </ToggleButton>
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillHeight}"
                                              IsChecked="{Binding IsAlignCenter, Mode=OneWay}"
                                              Command="{Binding SetAlignCenterCommand}"
                                              ToolTip.Tip="Center">
                                    <svg:Svg Path="/Assets/Icons/align_h_center.svg" Width="18" Height="18" />
                                </ToggleButton>
                                <ToggleButton Classes="circleSmall"
                                              IsVisible="{Binding IsFillHeight}"
                                              IsChecked="{Binding IsAlignEnd, Mode=OneWay}"
                                              Command="{Binding SetAlignEndCommand}"
                                              ToolTip.Tip="Right">
                                    <svg:Svg Path="/Assets/Icons/align_right.svg" Width="18" Height="18" />
                                </ToggleButton>
                            </StackPanel>

                            <!-- Video options -->
                            <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding IsSelectedMediaVideo}" Margin="0,6,0,0">
                                <ToggleButton Classes="circleSmall"
                                              IsChecked="{Binding IsVideoLoop, Mode=TwoWay}"
                                              ToolTip.Tip="Loop">
                                    <i:Icon Value="mdi-repeat" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                </ToggleButton>
                            </StackPanel>
                        </StackPanel>

                        <!-- Effects (right fill) -->
                        <StackPanel Grid.Column="3"
                                    Spacing="6"
                                    VerticalAlignment="Top"
                                    IsVisible="{Binding Media.SelectedItem.IsImage}">
                            <TextBlock Text="Effects" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" Margin="0,0,0,6" />

                            <!-- Rain -->
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                              IsChecked="{Binding Media.SelectedItem.RainEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Rain">
                                    <i:Icon Value="mdi-weather-rainy" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <Slider Classes="portalTimeline"
                                        Width="160"
                                        Minimum="0" Maximum="1"
                                        Value="{Binding Media.SelectedItem.RainIntensity, Mode=TwoWay}"
                                        IsEnabled="{Binding Media.SelectedItem.RainEnabled}"
                                        VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Fog -->
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                              IsChecked="{Binding Media.SelectedItem.FogEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Fog">
                                    <i:Icon Value="mdi-weather-fog" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <Slider Classes="portalTimeline"
                                        Width="160"
                                        Minimum="0" Maximum="1"
                                        Value="{Binding Media.SelectedItem.FogIntensity, Mode=TwoWay}"
                                        IsEnabled="{Binding Media.SelectedItem.FogEnabled}"
                                        VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Smoke -->
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                              IsChecked="{Binding Media.SelectedItem.SmokeEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Smoke">
                                    <i:Icon Value="mdi-smoke" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <Slider Classes="portalTimeline"
                                        Width="160"
                                        Minimum="0" Maximum="1"
                                        Value="{Binding Media.SelectedItem.SmokeIntensity, Mode=TwoWay}"
                                        IsEnabled="{Binding Media.SelectedItem.SmokeEnabled}"
                                        VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Snow -->
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                              IsChecked="{Binding Media.SelectedItem.SnowEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Snow">
                                    <i:Icon Value="mdi-weather-snowy" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <Slider Classes="portalTimeline"
                                        Width="160"
                                        Minimum="0" Maximum="1"
                                        Value="{Binding Media.SelectedItem.SnowIntensity, Mode=TwoWay}"
                                        IsEnabled="{Binding Media.SelectedItem.SnowEnabled}"
                                        VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Lightning -->
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ToggleButton Classes="circleSmall effectToggle"
                                              IsChecked="{Binding Media.SelectedItem.LightningEnabled, Mode=TwoWay}"
                                              ToolTip.Tip="Lightning">
                                    <i:Icon Value="mdi-weather-lightning" FontSize="18"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                </ToggleButton>
                                <Slider Classes="portalTimeline"
                                        Width="160"
                                        Minimum="0" Maximum="1"
                                        Value="{Binding Media.SelectedItem.LightningIntensity, Mode=TwoWay}"
                                        IsEnabled="{Binding Media.SelectedItem.LightningEnabled}"
                                        VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Apps controls (Initiative Tracker) -->
                <Border Classes="card" Padding="10" IsVisible="{Binding IsAppsTabSelected}">
                    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="10">
                        <Grid ColumnDefinitions="Auto,Auto,*,Auto" ColumnSpacing="12" VerticalAlignment="Center">
                            <TextBlock Text="Assign to Portals" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />

                            <ItemsControl Grid.Column="1" ItemsSource="{Binding Portals}" HorizontalAlignment="Left">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel ItemSpacing="8" LineSpacing="8" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:PortalRowViewModel" x:CompileBindings="False">
                                        <ToggleButton Classes="circleSmall"
                                                      Content="{Binding PortalNumber}"
                                                      ToolTip.Tip="Show Initiative Tracker on this Portal"
                                                      IsChecked="{Binding IsSelectedForInitiative, Mode=OneWay}"
                                                      Command="{Binding DataContext.ToggleInitiativeForPortalCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding .}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                                <Button Background="#0A0F18"
                                        BorderBrush="{DynamicResource ScryBorder}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12,6"
                                        Command="{Binding InitiativeTracker.SortCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                        <i:Icon Value="mdi-sort" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
                                        <TextBlock Text="Sort by Init" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <Button Background="#0A0F18"
                                        BorderBrush="{DynamicResource ScryBorder}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12,6"
                                        Click="OnLoadInitiativeConfig"
                                        ToolTip.Tip="Load Initiative JSON">
                                    <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                        <i:Icon Value="mdi-folder-open" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
                                        <TextBlock Text="Load" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <Button Background="#0A0F18"
                                        BorderBrush="{DynamicResource ScryBorder}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12,6"
                                        Click="OnSaveInitiativeConfig"
                                        ToolTip.Tip="Save Initiative JSON">
                                    <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                        <i:Icon Value="mdi-content-save" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
                                        <TextBlock Text="Save" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <Grid Grid.Column="3" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" VerticalAlignment="Center">
                                <TextBlock Grid.Column="0" Text="Turn" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.PreviousTurnCommand}" ToolTip.Tip="Previous Turn">
                                        <i:Icon Value="mdi-chevron-left" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                    </Button>
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.NextTurnCommand}" ToolTip.Tip="Next Turn">
                                        <i:Icon Value="mdi-chevron-right" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                    </Button>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="Round" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

                                <TextBlock Grid.Column="3"
                                           Text="{Binding InitiativeTracker.Round}"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource ScryAccent}" />

                                <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.IncrementRoundCommand}" ToolTip.Tip="Increment Round">
                                        <i:Icon Value="mdi-plus" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                    </Button>
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.DecrementRoundCommand}" ToolTip.Tip="Decrement Round">
                                        <i:Icon Value="mdi-minus" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                    </Button>
                                    <Button Classes="circleSmall" Command="{Binding InitiativeTracker.ResetRoundCommand}" ToolTip.Tip="Reset Round">
                                        <i:Icon Value="mdi-restore" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
                                    </Button>
                                </StackPanel>

                                <TextBlock Grid.Column="5" Text="Overlay" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

                                <Grid Grid.Column="6" ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="6" VerticalAlignment="Center">
                                    <TextBlock Text="0%" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
                                    <Slider Grid.Column="1"
                                        Classes="portalTimeline"
                                        Width="96"
                                        Minimum="0"
                                        Maximum="1"
                                        Value="{Binding InitiativeTracker.OverlayOpacity, Mode=TwoWay}" />
                                    <TextBlock Grid.Column="2" Text="100%" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
                                </Grid>

                                <TextBlock Grid.Column="7" Text="Font" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

                                <ComboBox Grid.Column="8"
                                          MinWidth="96"
                                          MaxWidth="110"
                                          Height="36"
                                          VerticalAlignment="Center"
                                          FontSize="12"
                                          ItemsSource="{Binding InitiativeTracker.PortalFontSizes}"
                                          SelectedItem="{Binding InitiativeTracker.PortalFontSize, Mode=TwoWay}" />
                            </Grid>
                        </Grid>

                        <Border Grid.Row="1" Height="1" Background="{DynamicResource ScryBorder}" Opacity="0.6" />

                        <views:InitiativeTrackerView Grid.Row="2" DataContext="{Binding InitiativeTracker}" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>

</Window>
