<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.InitiativeTrackerPortalView"
             x:DataType="vm:InitiativePortalViewModel">

  <UserControl.Styles>
    <Style Selector="TextBlock.entry">
      <Setter Property="FontSize" Value="60" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="TextWrapping" Value="NoWrap" />
      <Setter Property="TextAlignment" Value="Left" />
    </Style>

    <Style Selector="TextBlock.init">
      <Setter Property="FontSize" Value="64" />
      <Setter Property="FontWeight" Value="Black" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="TextWrapping" Value="NoWrap" />
      <Setter Property="TextAlignment" Value="Right" />
    </Style>

    <Style Selector="TextBlock.mod">
      <Setter Property="FontSize" Value="44" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="TextWrapping" Value="NoWrap" />
      <Setter Property="TextAlignment" Value="Left" />
    </Style>

    <Style Selector="TextBlock.round">
      <Setter Property="FontSize" Value="48" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="TextAlignment" Value="Center" />
    </Style>
  </UserControl.Styles>

  <Grid Background="Transparent">
    <!-- Soft dimmer over the background media to keep text readable. -->
    <Border Background="#40000000" />

    <Grid RowDefinitions="*,Auto" Margin="32">
      <!-- Row 0 takes remaining space; center the whole table vertically in it. -->
      <Border VerticalAlignment="Center"
              HorizontalAlignment="Stretch"
              MaxWidth="1400"
              Background="#8A000000"
              CornerRadius="18"
              Padding="28,22">
        <ItemsControl ItemsSource="{Binding Entries}" HorizontalAlignment="Stretch">
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:InitiativePortalEntryViewModel">
              <Grid Margin="0,0,0,14"
                ColumnDefinitions="320,*"
                    ColumnSpacing="22"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch">

                    <!-- Initiative group (initiative + mod + diamond), right-aligned so digits stay column-aligned -->
                    <Grid ColumnDefinitions="Auto,Auto,Auto"
                  ColumnSpacing="14"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center">

                  <!-- Initiative number (white) + gold glow when active -->
                  <Grid Grid.Column="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <TextBlock Classes="init"
                               Text="{Binding InitiativeDisplay}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />

                    <TextBlock Classes="init"
                               Text="{Binding InitiativeDisplay}"
                               Foreground="#FFFFFF"
                               IsVisible="{Binding IsActive}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#D4AF37"
                                          BlurRadius="56"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.95" />
                      </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Classes="init"
                               Text="{Binding InitiativeDisplay}"
                               Foreground="#FFFFFF"
                               IsVisible="{Binding IsActive}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD36A"
                                          BlurRadius="26"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.90" />
                      </TextBlock.Effect>
                    </TextBlock>
                  </Grid>

                  <!-- Mod (white) + gold glow when active; whole block hidden when no mod -->
                  <Grid Grid.Column="1"
                        IsVisible="{Binding HasMod}"
                        VerticalAlignment="Center">
                    <TextBlock Classes="mod"
                               Text="{Binding ModDisplay}"
                               VerticalAlignment="Center" />

                    <TextBlock Classes="mod"
                               Text="{Binding ModDisplay}"
                               Foreground="#FFFFFF"
                               IsVisible="{Binding IsActive}"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#D4AF37"
                                          BlurRadius="56"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.95" />
                      </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Classes="mod"
                               Text="{Binding ModDisplay}"
                               Foreground="#FFFFFF"
                               IsVisible="{Binding IsActive}"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD36A"
                                          BlurRadius="26"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.90" />
                      </TextBlock.Effect>
                    </TextBlock>
                  </Grid>

                  <!-- Diamond marker placeholder (always reserves space; image only visible when active) -->
                  <Border Grid.Column="2"
                      Width="36"
                      Height="36"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <Image Source="avares://ScryScreen.App/Assets/Images/Gem Transparent.png"
                       Stretch="Uniform"
                       IsVisible="{Binding IsActive}" />
                  </Border>
                </Grid>

                <!-- Name (column-aligned) -->
                <Grid Grid.Column="1"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center">
                  <!-- Base name (always visible, keeps high contrast) -->
                  <TextBlock Classes="entry"
                             Text="{Binding Name}"
                             TextTrimming="CharacterEllipsis"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center" />

                  <!-- Active glow overlay (golden glow) -->
                  <TextBlock Classes="entry"
                             Text="{Binding Name}"
                             TextTrimming="CharacterEllipsis"
                             Foreground="#FFFFFF"
                             IsVisible="{Binding IsActive}"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center">
                    <TextBlock.Effect>
                      <DropShadowEffect Color="#D4AF37"
                                        BlurRadius="56"
                                        OffsetX="0"
                                        OffsetY="0"
                                        Opacity="0.95" />
                    </TextBlock.Effect>
                  </TextBlock>

                  <!-- Extra inner glow layer to make the gold aura punchier (still white text) -->
                  <TextBlock Classes="entry"
                             Text="{Binding Name}"
                             TextTrimming="CharacterEllipsis"
                             Foreground="#FFFFFF"
                             IsVisible="{Binding IsActive}"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center">
                    <TextBlock.Effect>
                      <DropShadowEffect Color="#FFD36A"
                                        BlurRadius="26"
                                        OffsetX="0"
                                        OffsetY="0"
                                        Opacity="0.90" />
                    </TextBlock.Effect>
                  </TextBlock>
                </Grid>
              </Grid>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </Border>

      <Border Grid.Row="1"
              HorizontalAlignment="Center"
              Margin="0,20,0,0"
              Background="#8A000000"
              CornerRadius="18"
              Padding="24,14">
        <StackPanel Orientation="Vertical"
                    Spacing="6"
                    HorizontalAlignment="Center">
          <TextBlock IsVisible="{Binding HasAdditionalEntries}"
                     Text="{Binding AdditionalEntriesCount, StringFormat=â€¦{0} more}"
                     FontSize="32"
                     FontWeight="SemiBold"
                     Foreground="#FFFFFF"
                     TextAlignment="Center"
                     HorizontalAlignment="Center" />

          <TextBlock Classes="round"
                     Text="{Binding Round, StringFormat=Round {0}}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center" />
        </StackPanel>
      </Border>
    </Grid>
  </Grid>
</UserControl>
