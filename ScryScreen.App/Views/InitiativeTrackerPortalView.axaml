<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.InitiativeTrackerPortalView"
             x:DataType="vm:InitiativePortalViewModel">

  <UserControl.Styles>
    <Style Selector="TextBlock.entry">
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="TextWrapping" Value="NoWrap" />
      <Setter Property="TextAlignment" Value="Left" />
    </Style>

    <Style Selector="TextBlock.init">
      <Setter Property="FontWeight" Value="Black" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="TextWrapping" Value="NoWrap" />
      <Setter Property="TextAlignment" Value="Right" />
    </Style>

    <Style Selector="TextBlock.mod">
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="TextWrapping" Value="NoWrap" />
      <Setter Property="TextAlignment" Value="Left" />
    </Style>

    <Style Selector="TextBlock.round">
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="TextAlignment" Value="Center" />
    </Style>
  </UserControl.Styles>

  <Grid Background="Transparent">
    <!-- Soft dimmer over the background media to keep text readable. -->
    <Border Background="#000000" Opacity="{Binding OverlayScrimOpacity}" />

    <Grid RowDefinitions="*,Auto" Margin="32,32,32,6">
      <!-- Row 0 takes remaining space; center the whole table vertically in it. -->
      <Border VerticalAlignment="Center"
              HorizontalAlignment="Stretch"
              MaxWidth="1400"
              Background="Transparent"
              CornerRadius="18">
        <Grid>
          <!-- Background-only layer: opacity does NOT affect text. -->
          <Border Background="#000000"
                  Opacity="{Binding OverlayPanelOpacity}"
                  CornerRadius="18"
                  IsHitTestVisible="False" />

          <ItemsControl ItemsSource="{Binding Entries}" HorizontalAlignment="Stretch" Margin="28,22">
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:InitiativePortalEntryViewModel" x:CompileBindings="False">
              <Grid Margin="0,0,0,8"
                ColumnDefinitions="320,*"
                    ColumnSpacing="22"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch">

                    <!-- Initiative group (initiative + mod + diamond), right-aligned so digits stay column-aligned -->
                    <Grid ColumnDefinitions="Auto,Auto,Auto"
                  ColumnSpacing="14"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center">

                  <!-- Initiative number (white) + gold glow when active -->
                  <Grid Grid.Column="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <TextBlock Classes="init"
                               Text="{Binding InitiativeDisplay}"
                           FontSize="{Binding DataContext.InitFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />

                    <TextBlock Classes="init"
                               Text="{Binding InitiativeDisplay}"
                               Foreground="#FFFFFF"
                               IsVisible="{Binding IsActive}"
                               FontSize="{Binding DataContext.InitFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#D4AF37"
                                          BlurRadius="56"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.95" />
                      </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Classes="init"
                               Text="{Binding InitiativeDisplay}"
                               Foreground="#FFFFFF"
                               IsVisible="{Binding IsActive}"
                               FontSize="{Binding DataContext.InitFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD36A"
                                          BlurRadius="26"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.90" />
                      </TextBlock.Effect>
                    </TextBlock>
                  </Grid>

                  <!-- Mod (white) + gold glow when active; whole block hidden when no mod -->
                  <Grid Grid.Column="1"
                        IsVisible="{Binding HasMod}"
                        VerticalAlignment="Center">
                    <TextBlock Classes="mod"
                               Text="{Binding ModDisplay}"
                           FontSize="{Binding DataContext.ModFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               VerticalAlignment="Center" />

                    <TextBlock Classes="mod"
                               Text="{Binding ModDisplay}"
                               Foreground="#FFFFFF"
                               IsVisible="{Binding IsActive}"
                               FontSize="{Binding DataContext.ModFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#D4AF37"
                                          BlurRadius="56"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.95" />
                      </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Classes="mod"
                               Text="{Binding ModDisplay}"
                               Foreground="#FFFFFF"
                               IsVisible="{Binding IsActive}"
                               FontSize="{Binding DataContext.ModFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD36A"
                                          BlurRadius="26"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.90" />
                      </TextBlock.Effect>
                    </TextBlock>
                  </Grid>

                  <!-- Diamond marker placeholder (always reserves space; image only visible when active) -->
                  <Border Grid.Column="2"
                      Width="36"
                      Height="36"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <Image Source="avares://ScryScreen.App/Assets/Images/Gem Transparent.png"
                       Stretch="Uniform"
                       IsVisible="{Binding IsActive}" />
                  </Border>
                </Grid>

                <!-- Name + conditions (inline; wraps if needed) -->
                <Grid Grid.Column="1"
                      ColumnDefinitions="Auto,*"
                      ColumnSpacing="18"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center">
                  <Grid Grid.Column="0">
                    <!-- Base name (always visible, keeps high contrast) -->
                    <TextBlock Classes="entry"
                               Text="{Binding Name}"
                               TextTrimming="CharacterEllipsis"
                               Foreground="{Binding NameBrush}"
                               TextDecorations="{Binding NameDecorations}"
                               FontSize="{Binding DataContext.EntryFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />

                    <!-- Active glow overlay (golden glow) -->
                    <TextBlock Classes="entry"
                               Text="{Binding Name}"
                               TextTrimming="CharacterEllipsis"
                               Foreground="{Binding NameBrush}"
                               TextDecorations="{Binding NameDecorations}"
                               IsVisible="{Binding IsActive}"
                               FontSize="{Binding DataContext.EntryFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#D4AF37"
                                          BlurRadius="56"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.95" />
                      </TextBlock.Effect>
                    </TextBlock>

                    <!-- Extra inner glow layer to make the gold aura punchier -->
                    <TextBlock Classes="entry"
                               Text="{Binding Name}"
                               TextTrimming="CharacterEllipsis"
                               Foreground="{Binding NameBrush}"
                               TextDecorations="{Binding NameDecorations}"
                               IsVisible="{Binding IsActive}"
                               FontSize="{Binding DataContext.EntryFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">
                      <TextBlock.Effect>
                        <DropShadowEffect Color="#FFD36A"
                                          BlurRadius="26"
                                          OffsetX="0"
                                          OffsetY="0"
                                          Opacity="0.90" />
                      </TextBlock.Effect>
                    </TextBlock>
                  </Grid>

                  <ItemsControl Grid.Column="1" ItemsSource="{Binding Conditions}" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                      <ItemsPanelTemplate>
                        <WrapPanel ItemSpacing="10" LineSpacing="8" />
                      </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                      <DataTemplate x:DataType="vm:InitiativePortalConditionTagViewModel" x:CompileBindings="False">
                        <Border Background="#000000" Opacity="0.85" CornerRadius="10" Padding="10,4">
                          <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{Binding Name}"
                                       Foreground="{Binding Brush}"
                                       FontWeight="SemiBold"
                                       FontSize="{Binding DataContext.MoreFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            <Border IsVisible="{Binding HasTimer}" Background="{Binding Brush}" CornerRadius="8" Padding="6,0">
                              <TextBlock Text="{Binding RoundsRemaining}"
                                         Foreground="#000000"
                                         FontWeight="Black"
                                         FontSize="{Binding DataContext.MoreFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            </Border>
                          </StackPanel>
                        </Border>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>
                </Grid>
              </Grid>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
          </ItemsControl>
        </Grid>
      </Border>

      <Border Grid.Row="1"
              HorizontalAlignment="Center"
              Margin="0,6,0,0"
              Background="Transparent"
              CornerRadius="18">
        <Grid>
          <!-- Background-only layer: opacity does NOT affect text. -->
          <Border Background="#000000"
                  Opacity="{Binding OverlayPanelOpacity}"
                  CornerRadius="18"
                  IsHitTestVisible="False" />

          <StackPanel Orientation="Vertical"
                      Spacing="6"
                      HorizontalAlignment="Center"
                      Margin="22,12">
            <TextBlock IsVisible="{Binding HasAdditionalEntries}"
                       Text="{Binding AdditionalEntriesCount, StringFormat=â€¦{0} more}"
                       FontSize="{Binding MoreFontSize}"
                       FontWeight="SemiBold"
                       Foreground="#FFFFFF"
                       TextAlignment="Center"
                       HorizontalAlignment="Center" />

            <TextBlock Classes="round"
                       Text="{Binding Round, StringFormat=Round {0}}"
                       FontSize="{Binding RoundFontSize}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Grid>
      </Border>
    </Grid>
  </Grid>
</UserControl>
