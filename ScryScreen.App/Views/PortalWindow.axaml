<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ScryScreen.App.ViewModels"
        mc:Ignorable="d"
        x:Class="ScryScreen.App.Views.PortalWindow"
        x:DataType="vm:PortalWindowViewModel"
        Title="ScryPortal"
        Background="Black"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        WindowStartupLocation="Manual">

  <Grid>
    <!-- Player-facing content area -->
    <Border Background="Black">
      <Grid>
        <TextBlock Text="{Binding ContentTitle}"
                   IsVisible="{Binding IsContentVisible}"
                   Foreground="White"
                   FontSize="48"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <TextBlock Text="Idle / Hidden"
                   IsVisible="{Binding !IsContentVisible}"
                   Foreground="#B0FFFFFF"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <!-- Small corner label for debugging/setup -->
        <Border Background="#66000000"
                CornerRadius="6"
                Padding="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="16">
          <StackPanel>
            <TextBlock Text="{Binding ScreenName}" Foreground="#DFFFFFFF" FontSize="16" />
            <TextBlock Text="Portal {Binding PortalNumber}" Foreground="White" FontSize="18" FontWeight="Bold" />
          </StackPanel>
        </Border>
      </Grid>
    </Border>

    <!-- Identify overlay -->
    <Border IsVisible="{Binding IsIdentifyOverlayVisible}"
            Background="#AA000000">
      <TextBlock Text="{Binding PortalNumber}"
                 Foreground="White"
                 FontSize="220"
                 FontWeight="Black"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center" />
    </Border>
  </Grid>
</Window>
