<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ScryScreen.App.ViewModels"
        mc:Ignorable="d"
        x:Class="ScryScreen.App.Views.PortalWindow"
        x:DataType="vm:PortalWindowViewModel"
        Title="ScryPortal"
        Background="Black"
  Topmost="False"
  ShowActivated="False"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        WindowStartupLocation="Manual">

  <Grid>
    <!-- Player-facing content area -->
    <Border Background="Black">
      <Grid>
        <TextBlock Text="{Binding ContentTitle}"
                   IsVisible="{Binding IsContentVisible}"
                   Foreground="White"
                   FontSize="48"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <TextBlock Text="Idle / Hidden"
                   IsVisible="{Binding !IsContentVisible}"
                   Foreground="#B0FFFFFF"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <!-- Small corner label for debugging/setup -->
        <Border Background="#4D000000"
                CornerRadius="10"
                Padding="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="16">
          <StackPanel>
            <TextBlock Text="{Binding PortalNumber, StringFormat='Portal {0}'}" Foreground="White" FontSize="16" FontWeight="SemiBold" />
            <TextBlock Text="{Binding ScreenName}" Foreground="#BFFFFFFF" FontSize="12" />
          </StackPanel>
        </Border>
      </Grid>
    </Border>

    <!-- Setup mode: persistent until first show/assignment -->
    <Border IsVisible="{Binding IsSetup}"
            Background="#CC000000">
      <Border CornerRadius="16" Background="#141B26" BorderBrush="#2A3A52" BorderThickness="1"
              Padding="22" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="620">
        <StackPanel Spacing="10" HorizontalAlignment="Center">
          <TextBlock Text="{Binding PortalNumber, StringFormat='Portal {0}'}"
                     Foreground="White"
                     FontSize="72"
                     FontWeight="Black"
                     HorizontalAlignment="Center" />
          <TextBlock Text="{Binding ScreenName}"
                     Foreground="#DFFFFFFF"
                     FontSize="20"
                     HorizontalAlignment="Center" />
          <TextBlock Text="Setup Mode â€” assign content from ScryMaster"
                     Foreground="#BFFFFFFF"
                     FontSize="16"
                     HorizontalAlignment="Center" />
        </StackPanel>
      </Border>
    </Border>

    <!-- Identify overlay -->
    <Border IsVisible="{Binding IsIdentifyOverlayVisible}"
            Background="#AA000000">
      <TextBlock Text="{Binding PortalNumber}"
                 Foreground="White"
                 FontSize="220"
                 FontWeight="Black"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center" />
    </Border>
  </Grid>
</Window>
