<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ScryScreen.App.ViewModels"
        mc:Ignorable="d"
        x:Class="ScryScreen.App.Views.PortalWindow"
        x:DataType="vm:PortalWindowViewModel"
        Title="ScryPortal"
        Background="Black"
  Topmost="False"
  ShowActivated="False"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        WindowStartupLocation="Manual">

  <Grid>
    <!-- Base black background (always) -->
    <Border Background="Black" />

    <!-- All portal output (hidden => true blackout) -->
    <Grid IsVisible="{Binding IsContentVisible}">
      <!-- Assigned content (only after setup) -->
      <TextBlock Text="{Binding ContentTitle}"
                 IsVisible="{Binding !IsSetup}"
                 Foreground="White"
                 FontSize="48"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center" />

      <!-- Setup mode: persistent until first assignment -->
      <Border IsVisible="{Binding IsSetup}"
              Background="#CC000000">
        <Border CornerRadius="16" Background="#141B26" BorderBrush="#2A3A52" BorderThickness="1"
                Padding="22" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="620">
          <StackPanel Spacing="10" HorizontalAlignment="Center">
            <TextBlock Text="{Binding PortalNumber, StringFormat='Portal {0}'}"
                       Foreground="White"
                       FontSize="72"
                       FontWeight="Black"
                       HorizontalAlignment="Center" />
            <TextBlock Text="{Binding ScreenName}"
                       Foreground="#DFFFFFFF"
                       FontSize="20"
                       HorizontalAlignment="Center" />
            <TextBlock Text="Setup Mode â€” assign content from ScryMaster"
                       Foreground="#BFFFFFFF"
                       FontSize="16"
                       HorizontalAlignment="Center" />
          </StackPanel>
        </Border>
      </Border>

      <!-- Identify overlay -->
      <Border IsVisible="{Binding IsIdentifyOverlayVisible}"
              Background="#AA000000">
        <TextBlock Text="{Binding PortalNumber}"
                   Foreground="White"
                   FontSize="220"
                   FontWeight="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
      </Border>
    </Grid>
  </Grid>
</Window>
