<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:views="using:ScryScreen.App.Views"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        x:Class="ScryScreen.App.Views.AboutWindow"
  x:DataType="views:AboutWindow"
  Title="About ScryScreen"
        Background="{DynamicResource ScryBg0}"
        SizeToContent="WidthAndHeight"
        CanResize="False"
  WindowStartupLocation="CenterScreen"
  SystemDecorations="None">

  <Border Background="{DynamicResource ScryBg1}"
          BorderBrush="{DynamicResource ScryBorder}"
          BorderThickness="1"
          CornerRadius="12"
          Padding="16">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10" Width="520">
      <!-- Header -->
      <Grid RowDefinitions="Auto" ColumnDefinitions="*,Auto" ColumnSpacing="12">
        <StackPanel Spacing="2">
          <TextBlock Text="ScryScreen" FontSize="20" FontWeight="SemiBold" />
          <TextBlock Text="ScryMaster" Foreground="{DynamicResource ScryTextMuted}" />
          <TextBlock Text="{Binding VersionText}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />
        </StackPanel>

        <Button Grid.Column="1" Classes="circleSmall" ToolTip.Tip="Close" Click="OnClose">
          <i:Icon Value="mdi-close" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
      </Grid>

      <!-- Credits -->
      <StackPanel Grid.Row="1" Spacing="6">
        <TextBlock Text="Created by Lance Larsen" />

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Website:" Foreground="{DynamicResource ScryTextMuted}" />
          <Button Background="Transparent"
                  BorderThickness="0"
                  Padding="0"
                  Cursor="Hand"
                  Click="OnOpenLanceSite">
            <TextBlock Text="LanceLarsen.com"
                       Foreground="{DynamicResource ScryAccent}"
                       TextDecorations="Underline" />
          </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Source:" Foreground="{DynamicResource ScryTextMuted}" />
          <Button Background="Transparent"
                  BorderThickness="0"
                  Padding="0"
                  Cursor="Hand"
                  Click="OnOpenGitHub">
            <TextBlock Text="ScryScreen is an open source project located on GitHub"
                       Foreground="{DynamicResource ScryAccent}"
                       TextDecorations="Underline"
                       TextWrapping="Wrap" />
          </Button>
        </StackPanel>
      </StackPanel>

      <!-- Description -->
      <Border Grid.Row="2"
              Background="#0A0F18"
              BorderBrush="{DynamicResource ScryBorder}"
              BorderThickness="1"
              CornerRadius="10"
              Padding="12">
        <TextBlock TextWrapping="Wrap"
                   Foreground="{DynamicResource ScryTextMuted}">
          ScryScreen is a tabletop game companion that lets you quickly assign images, videos, and animated effects to one or more “portal” displays.
          Use it to run battle maps, scene art, ambient loops, and dramatic overlays (rain, fog, lightning, etc.) across your monitors with minimal fuss.
        </TextBlock>
      </Border>

      <!-- Footer -->
      <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
        <Button Background="#0A0F18"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12,6"
                Click="OnClose">
          <TextBlock Text="OK" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
      </StackPanel>
    </Grid>
  </Border>
</Window>
