<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:views="using:ScryScreen.App.Views"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        x:Class="ScryScreen.App.Views.AboutWindow"
  x:DataType="views:AboutWindow"
  Title="About ScryScreen"
  Background="Transparent"
  TransparencyLevelHint="Transparent"
        SizeToContent="WidthAndHeight"
        CanResize="False"
  WindowStartupLocation="CenterScreen"
  SystemDecorations="None">

  <Border Background="{DynamicResource ScryBg1}"
          BorderBrush="{DynamicResource ScryBorder}"
          BorderThickness="1"
          CornerRadius="12"
          Padding="16">
    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10" Width="520">
      <!-- Header -->
      <Grid RowDefinitions="Auto" ColumnDefinitions="*,Auto" ColumnSpacing="12">
        <StackPanel Spacing="2">
          <TextBlock Text="ScryScreen" FontSize="20" FontWeight="SemiBold" />
          <TextBlock Text="{Binding VersionText, StringFormat='Version: {0}'}" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />
        </StackPanel>

        <Button Grid.Column="1" Classes="circleSmall" ToolTip.Tip="Close" Click="OnClose">
          <i:Icon Value="mdi-close" FontSize="18" Foreground="{DynamicResource ScryTextMuted}" />
        </Button>
      </Grid>

      <!-- Credits -->
      <StackPanel Grid.Row="1" Spacing="6">
        <TextBlock Text="Created by Lance Larsen" />

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Website:" Foreground="{DynamicResource ScryTextMuted}" />
          <Button Background="Transparent"
                  BorderThickness="0"
                  Padding="0"
                  Cursor="Hand"
                  Click="OnOpenLanceSite">
            <TextBlock Text="LanceLarsen.com"
                       Foreground="{DynamicResource ScryAccent}"
                       TextDecorations="Underline" />
          </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Email:" Foreground="{DynamicResource ScryTextMuted}" />
          <Button Background="Transparent"
                  BorderThickness="0"
                  Padding="0"
                  Cursor="Hand"
                  Click="OnEmailLance">
            <TextBlock Text="lance@lancelarsen.com"
                       Foreground="{DynamicResource ScryAccent}"
                       TextDecorations="Underline" />
          </Button>
          <TextBlock Text="Suggestions? Wants? Issues? Email me!" Foreground="{DynamicResource ScryTextMuted}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Code:" Foreground="{DynamicResource ScryTextMuted}" />
          <Button Background="Transparent"
                  BorderThickness="0"
                  Padding="0"
                  Cursor="Hand"
                  Click="OnOpenGitHub">
            <TextBlock Text="Open Source on GitHub"
                       Foreground="{DynamicResource ScryAccent}"
                       TextDecorations="Underline"
                       TextWrapping="Wrap" />
          </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Error Logs:" Foreground="{DynamicResource ScryTextMuted}" />
          <Button Background="Transparent"
                  BorderThickness="0"
                  Padding="0"
                  Cursor="Hand"
                  Click="OnOpenLogsFolder">
            <TextBlock Text="Open Folder"
                       Foreground="{DynamicResource ScryAccent}"
                       TextDecorations="Underline" />
          </Button>
        </StackPanel>
      </StackPanel>

      <!-- Description -->
      <Border Grid.Row="2"
              Background="#0A0F18"
              BorderBrush="{DynamicResource ScryBorder}"
              BorderThickness="1"
              CornerRadius="10"
              Padding="12">
        <TextBlock TextWrapping="Wrap"
                   Foreground="{DynamicResource ScryTextMuted}">
          ScryScreen is a tabletop game companion that lets you quickly assign images, videos, and animated effects to one or more “portal” displays.
          Use it to run battle maps, scene art, ambient loops, and dramatic overlays (rain, fog, lightning, etc.) across your monitors with minimal fuss.
        </TextBlock>
      </Border>
    </Grid>
  </Border>
</Window>
