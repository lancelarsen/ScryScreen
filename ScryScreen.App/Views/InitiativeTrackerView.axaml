<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.InitiativeTrackerView"
             x:DataType="vm:InitiativeTrackerViewModel">

  <Grid RowDefinitions="Auto,*,Auto" RowSpacing="10">
    <TextBlock Text="Initiative Tracker" FontSize="16" FontWeight="SemiBold" />

    <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="12">
      <!-- Entries list -->
      <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="10">
        <Grid RowDefinitions="Auto,*" RowSpacing="8">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Sort" Command="{Binding SortCommand}" />
            <Button Content="Prev" Command="{Binding PreviousTurnCommand}" />
            <Button Content="Next" Command="{Binding NextTurnCommand}" />
            <Button Content="Set Active" Command="{Binding SetActiveToSelectedCommand}" />
            <Button Content="Reset Round" Command="{Binding ResetRoundCommand}" />
          </StackPanel>

          <Grid Grid.Row="1" ColumnDefinitions="*" RowDefinitions="Auto,*" RowSpacing="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <TextBlock Text="Round" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
              <NumericUpDown Width="80" Minimum="1" Value="{Binding Round, Mode=TwoWay}" />
            </StackPanel>

            <ListBox Grid.Row="1" ItemsSource="{Binding Entries}" SelectedItem="{Binding SelectedEntry, Mode=TwoWay}">
              <ListBox.ItemTemplate>
                <DataTemplate x:DataType="vm:InitiativeEntryViewModel">
                  <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                    <TextBlock Text="{Binding Initiative}" Width="36" HorizontalAlignment="Right" />
                    <StackPanel Grid.Column="1" Spacing="2">
                      <TextBox Text="{Binding Name, Mode=TwoWay}" Watermark="Name" />
                      <TextBox Text="{Binding Notes, Mode=TwoWay}" Watermark="Notes (optional)" FontSize="11" />
                    </StackPanel>
                    <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsHidden, Mode=TwoWay}" Content="Hidden" />
                  </Grid>
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
          </Grid>
        </Grid>
      </Border>

      <!-- Right rail: add/remove + portal text preview -->
      <StackPanel Grid.Column="1" Spacing="10" Width="260">
        <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="10">
          <StackPanel Spacing="8">
            <TextBlock Text="Add" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />
            <TextBox Text="{Binding NewName, Mode=TwoWay}" Watermark="Name" />
            <NumericUpDown Value="{Binding NewInitiative, Mode=TwoWay}" Watermark="Initiative" />
            <ToggleSwitch IsChecked="{Binding NewIsHidden, Mode=TwoWay}" Content="Hidden" />
            <Button Content="Add Entry" Command="{Binding AddEntryCommand}" />
            <Button Content="Remove Selected" Command="{Binding RemoveSelectedCommand}" />
            <Button Content="Clear All" Command="{Binding ClearAllCommand}" />
          </StackPanel>
        </Border>

        <Border Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="10">
          <StackPanel Spacing="6">
            <TextBlock Text="Portal Preview" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />
            <TextBox Text="{Binding PortalText}" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="180" />
          </StackPanel>
        </Border>
      </StackPanel>
    </Grid>

    <TextBlock Grid.Row="2" Text="Tip: enable broadcast in Apps tab to push the tracker to all portals." Foreground="{DynamicResource ScryTextMuted}" FontSize="12" />
  </Grid>
</UserControl>
