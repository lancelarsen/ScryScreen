<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.MapMasterView"
             x:DataType="vm:MapMasterViewModel">

  <Grid RowDefinitions="Auto" ColumnDefinitions="*" RowSpacing="8">
    <Border Background="#0A0F18"
            BorderBrush="{DynamicResource ScryBorder}"
            BorderThickness="1"
            CornerRadius="10"
            Padding="10">
      <StackPanel Spacing="10">
        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" VerticalAlignment="Center">
          <Button Classes="circleSmall"
                  ToolTip.Tip="Reset Mask"
                  Command="{Binding ResetRevealToDefaultCommand}">
            <i:Icon Value="mdi-autorenew" FontSize="18"
                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
          </Button>

          <TextBlock Grid.Column="1"
                     Text="Map Master"
                     Foreground="{DynamicResource ScryTextMuted}"
                     FontSize="12"
                     FontWeight="SemiBold"
                     VerticalAlignment="Center" />
        </Grid>

        <Grid ColumnDefinitions="Auto,*,Auto,Auto,*,Auto" RowDefinitions="Auto" ColumnSpacing="10" RowSpacing="8">
          <TextBlock Grid.Column="0" Text="Eraser" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <Slider Grid.Column="1" Classes="portalTimeline" Minimum="6" Maximum="200" Value="{Binding EraserDiameter, Mode=TwoWay}" />
          <TextBlock Grid.Column="2" Text="{Binding EraserDiameter, StringFormat={}{0:0}px}" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />

          <TextBlock Grid.Column="3" Text="Mask" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <Slider Grid.Column="4" Classes="portalTimeline" Minimum="0" Maximum="1" Value="{Binding OverlayOpacity, Mode=TwoWay}" />
          <TextBlock Grid.Column="5" Text="{Binding OverlayOpacity, StringFormat={}{0:P0}}" Foreground="{DynamicResource ScryTextMuted}" FontSize="10" VerticalAlignment="Center" />
        </Grid>

        <Border x:Name="EditorSurface"
                Height="320"
                Background="#000000"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="10"
                ClipToBounds="True"
                Cursor="Cross"
                PointerEntered="OnEditorPointerEntered"
                PointerExited="OnEditorPointerExited"
                PointerPressed="OnEditorPointerPressed"
                PointerMoved="OnEditorPointerMoved"
                PointerReleased="OnEditorPointerReleased">
          <Grid>
            <Canvas x:Name="PreviewCanvas">
              <!-- We position/scale this image in code-behind to match portal crop settings. -->
              <Image x:Name="PreviewImage" Source="{Binding SourceImage}" Stretch="Fill" />
            </Canvas>

            <!-- Full overlay mask that gets erased with the mouse. -->
            <Image Source="{Binding MaskBitmap}"
                   Opacity="{Binding OverlayOpacity}"
                   Stretch="Fill" />

            <!-- Eraser cursor indicator (GM-only editor). -->
            <Canvas x:Name="EraserCursorLayer" IsHitTestVisible="False">
              <Ellipse x:Name="EraserCursor"
                       Width="{Binding EraserDiameter}"
                       Height="{Binding EraserDiameter}"
                       Stroke="{DynamicResource ScryAccent}"
                       StrokeThickness="2"
                       Fill="#20000000"
                       IsVisible="False" />
            </Canvas>

            <Border IsVisible="{Binding !HasSourceImage}"
                    Background="#AA000000"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
              <TextBlock Text="Select a portal with an image assigned to edit its map."
                         Foreground="{DynamicResource ScryTextMuted}"
                         FontSize="14"
                         TextAlignment="Center"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap" />
            </Border>
          </Grid>
        </Border>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
