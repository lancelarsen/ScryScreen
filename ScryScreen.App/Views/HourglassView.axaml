<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:beh="using:ScryScreen.App.Behaviors"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.HourglassView"
             x:DataType="vm:HourglassViewModel">

  <UserControl.Styles>
    <Style Selector="TextBlock">
      <Setter Property="FontSize" Value="12" />
    </Style>

    <Style Selector="TextBox">
      <Setter Property="FontSize" Value="12" />
      <Setter Property="Background" Value="#0A0F18" />
      <Setter Property="BorderBrush" Value="{DynamicResource ScryBorder}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="8" />
      <Setter Property="Padding" Value="10,4" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
      <Setter Property="Width" Value="64" />
    </Style>

    <Style Selector="TextBox:focus">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
    <Style Selector="TextBox:focus-within">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
    <Style Selector="TextBox:focus /template/ Border">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
    <Style Selector="TextBox:focus-within /template/ Border">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="Auto">
    <Border Grid.Row="0"
            IsVisible="{Binding ShowSandPhysics}"
            Background="#0A0F18"
            BorderBrush="{DynamicResource ScryBorder}"
            BorderThickness="1"
            CornerRadius="10"
            Padding="10">
      <StackPanel Spacing="8">
        <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
          <TextBlock Text="Sand Physics" Foreground="{DynamicResource ScryTextMuted}" FontWeight="SemiBold" />
          <Button Grid.Column="1"
                  Background="#0A0F18"
                  BorderBrush="{DynamicResource ScryBorder}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="10,4"
                  Command="{Binding ResetPhysicsCommand}">
            <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
              <i:Icon Value="mdi-restore" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
              <TextBlock Text="Defaults" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
        </Grid>

        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="8">
          <TextBlock Grid.Row="0" Grid.Column="0" Text="Particles" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="0" Grid.Column="1" Width="84"
                   Text="{Binding ParticleCountText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   beh:NumericTextBoxBehavior.IsNumericOnly="True" />

          <TextBlock Grid.Row="0" Grid.Column="2" Text="Gravity" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="0" Grid.Column="3" Width="84" Text="{Binding GravityText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

          <TextBlock Grid.Row="1" Grid.Column="0" Text="Density" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="1" Grid.Column="1" Width="84" Text="{Binding DensityText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

          <TextBlock Grid.Row="1" Grid.Column="2" Text="Size" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="1" Grid.Column="3" Width="84" Text="{Binding ParticleSizeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

          <TextBlock Grid.Row="2" Grid.Column="0" Text="Flow (grains/sec)" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="2" Grid.Column="1" Width="84" Text="{Binding MaxReleasePerFrameText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>

        <TextBlock Text="Tip: higher density makes steeper piles; Flow controls the steady grains/sec allowed through the slot." Foreground="{DynamicResource ScryTextMuted}" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
