<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:beh="using:ScryScreen.App.Behaviors"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.HourglassView"
             x:DataType="vm:HourglassViewModel">

  <UserControl.Styles>
    <Style Selector="TextBlock">
      <Setter Property="FontSize" Value="12" />
    </Style>

    <Style Selector="TextBox">
      <Setter Property="FontSize" Value="12" />
      <Setter Property="Background" Value="#0A0F18" />
      <Setter Property="BorderBrush" Value="{DynamicResource ScryBorder}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="8" />
      <Setter Property="Padding" Value="10,4" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
      <Setter Property="TextAlignment" Value="Center" />
      <Setter Property="Width" Value="64" />
    </Style>

    <Style Selector="TextBox:focus">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
    <Style Selector="TextBox:focus-within">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
    <Style Selector="TextBox:focus /template/ Border">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
    <Style Selector="TextBox:focus-within /template/ Border">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>

    <Style Selector="Button.infoIcon">
      <Setter Property="Margin" Value="0,0,8,0" />
      <Setter Property="Focusable" Value="False" />
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="Auto">
    <Border Grid.Row="0"
            IsVisible="{Binding ShowSandPhysics}"
            Background="#0A0F18"
            BorderBrush="{DynamicResource ScryBorder}"
            BorderThickness="1"
            CornerRadius="10"
            Padding="10">
      <StackPanel Spacing="8">
        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" VerticalAlignment="Center">
          <Button Classes="circleSmall"
                  ToolTip.Tip="Reset Defaults"
                  Command="{Binding ResetPhysicsCommand}">
              <i:Icon Value="mdi-autorenew" FontSize="18"
                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
          </Button>

          <TextBlock Grid.Column="1"
                     Text="Sand Physics"
                     Foreground="{DynamicResource ScryTextMuted}"
                     FontWeight="SemiBold"
                     VerticalAlignment="Center" />
        </Grid>

        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="8">
          <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Classes="circleSmall infoIcon"
                    ToolTip.Tip="Total grains used in the simulation. Making this too high may impact performance.">
              <i:Icon Value="mdi-lightbulb-outline" FontSize="16" Foreground="{DynamicResource ScryAccent}" />
            </Button>
            <TextBlock Text="Particles" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          </StackPanel>
          <TextBox Grid.Row="0" Grid.Column="1" Width="84"
                   Text="{Binding ParticleCountText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   beh:NumericTextBoxBehavior.IsNumericOnly="True"
                   beh:SelectAllOnFocusBehavior.IsEnabled="True" />

          <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Classes="circleSmall infoIcon"
                    ToolTip.Tip="0â€“10. Higher density reduces sideways slippage, producing steeper piles. Lower density makes sand spread flatter.">
              <i:Icon Value="mdi-lightbulb-outline" FontSize="16" Foreground="{DynamicResource ScryAccent}" />
            </Button>
            <TextBlock Text="Density" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          </StackPanel>
          <TextBox Grid.Row="0" Grid.Column="3" Width="84"
                   Text="{Binding DensityText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   beh:NumericTextBoxBehavior.IsNumericDecimalOnly="True"
                   beh:SelectAllOnFocusBehavior.IsEnabled="True" />

          <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Classes="circleSmall infoIcon"
                    ToolTip.Tip="Grain size in pixels. Smaller looks finer but may make the simulation look less smooth.">
              <i:Icon Value="mdi-lightbulb-outline" FontSize="16" Foreground="{DynamicResource ScryAccent}" />
            </Button>
            <TextBlock Text="Size" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          </StackPanel>
          <TextBox Grid.Row="1" Grid.Column="1" Width="84"
                   Text="{Binding ParticleSizeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   beh:NumericTextBoxBehavior.IsNumericDecimalOnly="True"
                   beh:SelectAllOnFocusBehavior.IsEnabled="True" />

          <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Classes="circleSmall infoIcon"
                    ToolTip.Tip="Auto-calculated (read-only). Set to (ParticleCount / DurationSeconds) so the sand amount matches the timer.">
              <i:Icon Value="mdi-lightbulb-outline" FontSize="16" Foreground="{DynamicResource ScryAccent}" />
            </Button>
            <TextBlock Text="Flow (grains/sec)" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          </StackPanel>
          <TextBox Grid.Row="1" Grid.Column="3" Width="84"
                   IsEnabled="False"
                   Background="{DynamicResource ScryReadOnly}"
                   Text="{Binding MaxReleasePerFrameText, Mode=OneWay}" />
        </Grid>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
