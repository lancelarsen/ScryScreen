<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScryScreen.App.ViewModels"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:beh="using:ScryScreen.App.Behaviors"
             mc:Ignorable="d"
             x:Class="ScryScreen.App.Views.HourglassView"
             x:DataType="vm:HourglassViewModel">

  <UserControl.Styles>
    <Style Selector="TextBlock">
      <Setter Property="FontSize" Value="12" />
    </Style>

    <Style Selector="TextBox">
      <Setter Property="FontSize" Value="12" />
      <Setter Property="Background" Value="#0A0F18" />
      <Setter Property="BorderBrush" Value="{DynamicResource ScryBorder}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="8" />
      <Setter Property="Padding" Value="10,4" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
      <Setter Property="Width" Value="64" />
    </Style>

    <Style Selector="TextBox:focus">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
    <Style Selector="TextBox:focus-within">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
    <Style Selector="TextBox:focus /template/ Border">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
    <Style Selector="TextBox:focus-within /template/ Border">
      <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">
    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" VerticalAlignment="Center">
      <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
        <TextBlock Text="Duration" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />

        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
          <TextBox Text="{Binding DurationMinutesText, Mode=TwoWay}"
                   beh:NumericTextBoxBehavior.IsNumericOnly="True"
                   beh:SelectAllOnFocusBehavior.IsEnabled="True"
                   Watermark="min" />
          <TextBlock Text=":" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Text="{Binding DurationSecondsText, Mode=TwoWay}"
                   beh:NumericTextBoxBehavior.IsNumericOnly="True"
                   beh:SelectAllOnFocusBehavior.IsEnabled="True"
                   Watermark="sec" />
        </StackPanel>

        <TextBlock Text="Remaining" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" Margin="18,0,0,0" />
        <TextBlock Text="{Binding RemainingText}" Foreground="{DynamicResource ScryAccent}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" />
      </StackPanel>

      <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
        <Button Background="#0A0F18"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12,6"
                Command="{Binding StartCommand}"
                IsEnabled="{Binding CanStart}">
          <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
            <i:Icon Value="mdi-play" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
            <TextBlock Text="Play" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
          </StackPanel>
        </Button>

        <Button Background="#0A0F18"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12,6"
                Command="{Binding StopCommand}"
                IsEnabled="{Binding CanStop}">
          <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
            <i:Icon Value="mdi-pause" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
            <TextBlock Text="Pause" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
          </StackPanel>
        </Button>

        <Button Background="#0A0F18"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12,6"
                Command="{Binding ResetCommand}">
          <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
            <i:Icon Value="mdi-restore" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
            <TextBlock Text="Reset" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </StackPanel>
    </Grid>

    <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" VerticalAlignment="Center">
      <TextBlock Text="Overlay" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
      <Slider Grid.Column="1" Classes="portalTimeline" Minimum="0" Maximum="1" Value="{Binding OverlayOpacity, Mode=TwoWay}" />
      <TextBlock Grid.Column="2" Text="{Binding OverlayOpacity, StringFormat={}{0:P0}}" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
    </Grid>

    <Border Grid.Row="2" Background="#0A0F18" BorderBrush="{DynamicResource ScryBorder}" BorderThickness="1" CornerRadius="10" Padding="10">
      <StackPanel Spacing="8">
        <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
          <TextBlock Text="Sand Physics" Foreground="{DynamicResource ScryTextMuted}" FontWeight="SemiBold" />
          <Button Grid.Column="1"
                  Background="#0A0F18"
                  BorderBrush="{DynamicResource ScryBorder}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="10,4"
                  Command="{Binding ResetPhysicsCommand}">
            <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
              <i:Icon Value="mdi-restore" FontSize="16" Foreground="{DynamicResource ScryTextMuted}" />
              <TextBlock Text="Defaults" Foreground="{DynamicResource ScryTextMuted}" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
        </Grid>

        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="8">
          <TextBlock Grid.Row="0" Grid.Column="0" Text="Particles" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="0" Grid.Column="1" Width="84"
                   Text="{Binding ParticleCountText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   beh:NumericTextBoxBehavior.IsNumericOnly="True" />

          <TextBlock Grid.Row="0" Grid.Column="2" Text="Gravity" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="0" Grid.Column="3" Width="84" Text="{Binding GravityText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

          <TextBlock Grid.Row="1" Grid.Column="0" Text="Density" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="1" Grid.Column="1" Width="84" Text="{Binding DensityText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

          <TextBlock Grid.Row="1" Grid.Column="2" Text="Size" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="1" Grid.Column="3" Width="84" Text="{Binding ParticleSizeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

          <TextBlock Grid.Row="2" Grid.Column="0" Text="Flow (grains/sec)" Foreground="{DynamicResource ScryTextMuted}" VerticalAlignment="Center" />
          <TextBox Grid.Row="2" Grid.Column="1" Width="84" Text="{Binding MaxReleasePerFrameText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>

        <TextBlock Text="Tip: higher density makes steeper piles; Flow controls the steady grains/sec allowed through the slot." Foreground="{DynamicResource ScryTextMuted}" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
