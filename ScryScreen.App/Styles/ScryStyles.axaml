<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Palette -->
  <Styles.Resources>
    <Color x:Key="ScryColorBg0">#070A10</Color>
    <Color x:Key="ScryColorBg1">#0B1220</Color>
    <Color x:Key="ScryColorPanel">#0E1829</Color>
    <Color x:Key="ScryColorCard">#0B1627</Color>
    <Color x:Key="ScryColorBorder">#233653</Color>
    <Color x:Key="ScryColorText">#EAF2FF</Color>
    <Color x:Key="ScryColorTextMuted">#A7B6CB</Color>
    <!-- Arcane gold accent -->
    <Color x:Key="ScryColorAccent">#D6B25E</Color>
    <Color x:Key="ScryColorSuccess">#36D477</Color>
    <Color x:Key="ScryColorDanger">#E54848</Color>

    <SolidColorBrush x:Key="ScryBg0" Color="{DynamicResource ScryColorBg0}" />
    <SolidColorBrush x:Key="ScryBg1" Color="{DynamicResource ScryColorBg1}" />
    <SolidColorBrush x:Key="ScryPanel" Color="{DynamicResource ScryColorPanel}" />
    <SolidColorBrush x:Key="ScryCard" Color="{DynamicResource ScryColorCard}" />
    <SolidColorBrush x:Key="ScryBorder" Color="{DynamicResource ScryColorBorder}" />
    <SolidColorBrush x:Key="ScryText" Color="{DynamicResource ScryColorText}" />
    <SolidColorBrush x:Key="ScryTextMuted" Color="{DynamicResource ScryColorTextMuted}" />
    <SolidColorBrush x:Key="ScryAccent" Color="{DynamicResource ScryColorAccent}" />
    <!-- Portal badge outline: match the red underline (danger) exactly -->
    <SolidColorBrush x:Key="ScryBadgeMaroon" Color="{DynamicResource ScryColorDanger}" />
    <SolidColorBrush x:Key="ScrySuccess" Color="{DynamicResource ScryColorSuccess}" />
    <SolidColorBrush x:Key="ScryDanger" Color="{DynamicResource ScryColorDanger}" />

    <Thickness x:Key="ScryPadS">8</Thickness>
    <Thickness x:Key="ScryPadM">12</Thickness>
    <Thickness x:Key="ScryPadL">16</Thickness>
    <CornerRadius x:Key="ScryRadius">10</CornerRadius>

    <!-- ListBox item theme with no selection fill (we draw our own selection via Border.card styles) -->
    <ControlTheme x:Key="ScryListBoxItemTheme" TargetType="ListBoxItem">
      <Setter Property="Padding" Value="0" />
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderBrush" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Template">
        <ControlTemplate>
          <ContentPresenter
              Background="Transparent"
              BorderBrush="Transparent"
              Padding="{TemplateBinding Padding}"
              Content="{TemplateBinding Content}"
              ContentTemplate="{TemplateBinding ContentTemplate}"
              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
        </ControlTemplate>
      </Setter>
    </ControlTheme>
  </Styles.Resources>

  <!-- Typography defaults -->
  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource ScryText}" />
  </Style>

  <!-- Cards -->
  <Style Selector="Border.card">
    <Setter Property="Background" Value="{DynamicResource ScryCard}" />
    <Setter Property="BorderBrush" Value="{DynamicResource ScryBorder}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="{DynamicResource ScryRadius}" />
    <Setter Property="Padding" Value="{DynamicResource ScryPadM}" />
    <Setter Property="BoxShadow" Value="0 10 28 0 #66000000" />
  </Style>

  <!-- Buttons -->
  <Style Selector="Button">
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Padding" Value="12,8" />
  </Style>

  <Style Selector="Button.primary">
    <Setter Property="Background" Value="{DynamicResource ScryAccent}" />
    <Setter Property="Foreground" Value="#1A1200" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="Button.danger">
    <Setter Property="Background" Value="{DynamicResource ScryDanger}" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="Button.subtle">
    <Setter Property="Background" Value="#16263B" />
    <Setter Property="Foreground" Value="{DynamicResource ScryText}" />
  </Style>

  <Style Selector="Button.icon">
    <Setter Property="Background" Value="#16263B" />
    <Setter Property="Foreground" Value="{DynamicResource ScryTextMuted}" />
    <Setter Property="CornerRadius" Value="18" />
    <Setter Property="Width" Value="34" />
    <Setter Property="Height" Value="34" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <!-- Icon-only ToggleButton: fully transparent in all states (no Fluent/OS accent fill) -->
  <Style Selector="ToggleButton.icon">
    <Setter Property="Width" Value="34" />
    <Setter Property="Height" Value="34" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                CornerRadius="18">
          <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>

  <!-- Circle ToggleButton: used for section visibility controls -->
  <Style Selector="ToggleButton.circle">
    <Setter Property="Width" Value="44" />
    <Setter Property="Height" Value="44" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="#0A0F18"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="22">
          <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>

  <!-- Small Circle ToggleButton: used for portal-number target toggles -->
  <Style Selector="ToggleButton.circleSmall">
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="36" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="#0A0F18"
                BorderBrush="{DynamicResource ScryBorder}"
                BorderThickness="1"
                CornerRadius="18">
          <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>

  <!-- Small Circle Button: used for compact icon actions (matches ToggleButton.circleSmall) -->
  <Style Selector="Button.circleSmall">
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="36" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Background" Value="#0A0F18" />
    <Setter Property="BorderBrush" Value="{DynamicResource ScryBorder}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="18" />
    <Setter Property="Foreground" Value="{DynamicResource ScryTextMuted}" />
  </Style>

  <Style Selector="Button.circleSmall:pointerover">
    <Setter Property="Background" Value="#16263B" />
  </Style>

  <Style Selector="Button.circleSmall:pressed">
    <Setter Property="Background" Value="#1B2E47" />
  </Style>

  <!-- Circle Button: used for compact icon actions -->
  <Style Selector="Button.circle">
    <Setter Property="Width" Value="44" />
    <Setter Property="Height" Value="44" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Background" Value="#0A0F18" />
    <Setter Property="BorderBrush" Value="{DynamicResource ScryBorder}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="22" />
    <Setter Property="Foreground" Value="{DynamicResource ScryTextMuted}" />
  </Style>

  <Style Selector="Button.circle:pointerover">
    <Setter Property="Background" Value="#16263B" />
  </Style>

  <Style Selector="Button.circle:pressed">
    <Setter Property="Background" Value="#1B2E47" />
  </Style>

  <Style Selector="ToggleButton.circle:checked /template/ Border">
    <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    <Setter Property="BorderThickness" Value="2" />
  </Style>

  <Style Selector="ToggleButton.circleSmall:checked /template/ Border">
    <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    <Setter Property="BorderThickness" Value="2" />
  </Style>

  <!-- Effect toggles: use accent (yellow) icon when enabled -->
  <Style Selector="ToggleButton.circleSmall.effectToggle">
    <Setter Property="Foreground" Value="{DynamicResource ScryTextMuted}" />
  </Style>

  <Style Selector="ToggleButton.circleSmall.effectToggle:checked">
    <Setter Property="Foreground" Value="{DynamicResource ScryAccent}" />
  </Style>

  <!-- Sound toggles: highlight icon when enabled, but keep a neutral border (use with .noAccent) -->
  <Style Selector="ToggleButton.circleSmall.soundToggle">
    <Setter Property="Foreground" Value="{DynamicResource ScryTextMuted}" />
  </Style>

  <Style Selector="ToggleButton.circleSmall.soundToggle:checked">
    <Setter Property="Foreground" Value="{DynamicResource ScryAccent}" />
  </Style>

  <!-- For icon toggles where "checked" is not a selection (e.g., visibility), keep the neutral border -->
  <Style Selector="ToggleButton.circleSmall.noAccent:checked /template/ Border">
    <Setter Property="BorderBrush" Value="{DynamicResource ScryBorder}" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

  <Style Selector="ToggleButton.circle:pointerover /template/ Border">
    <Setter Property="Background" Value="#16263B" />
  </Style>

  <Style Selector="ToggleButton.circleSmall:pointerover /template/ Border">
    <Setter Property="Background" Value="#16263B" />
  </Style>

  <Style Selector="ToggleButton.circle:pressed /template/ Border">
    <Setter Property="Background" Value="#1B2E47" />
  </Style>

  <Style Selector="ToggleButton.circleSmall:pressed /template/ Border">
    <Setter Property="Background" Value="#1B2E47" />
  </Style>

  <Style Selector="ToggleButton.icon:pointerover">
    <Setter Property="Opacity" Value="0.92" />
  </Style>

  <Style Selector="ToggleButton.icon:pressed">
    <Setter Property="Opacity" Value="0.85" />
  </Style>

  <!-- Selection: accent outline, no full-row fill -->
  <Style Selector="ListBoxItem:selected">
    <Setter Property="Background" Value="Transparent" />
  </Style>

  <!-- Force the ListBoxItem template background to stay transparent (prevents theme selection fill behind our cards) -->
  <Style Selector="ListBoxItem /template/ Border">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
  </Style>

  <Style Selector="ListBoxItem:pointerover /template/ Border">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
  </Style>

  <Style Selector="ListBoxItem:selected /template/ Border">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
  </Style>

  <Style Selector="ListBoxItem:selected:pointerover /template/ Border">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
  </Style>

  <Style Selector="ListBoxItem:selected Border.card">
    <Setter Property="BorderBrush" Value="{DynamicResource ScryAccent}" />
    <Setter Property="BorderThickness" Value="2" />
  </Style>

  <!-- Lists: keep backgrounds transparent so the panel color shows through -->
  <Style Selector="ListBox">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

  <Style Selector="ListBox /template/ ScrollViewer">
    <Setter Property="Background" Value="Transparent" />
  </Style>

  <!-- Inputs -->
  <Style Selector="ComboBox">
    <Setter Property="MinHeight" Value="34" />
  </Style>

  <!-- Small numeric boxes for showing slider bounds (0 / 1) -->
  <Style Selector="TextBox.sliderBound">
    <Setter Property="Width" Value="34" />
    <Setter Property="Height" Value="28" />
    <Setter Property="Padding" Value="6,0" />
    <Setter Property="Background" Value="#0A0F18" />
    <Setter Property="BorderBrush" Value="{DynamicResource ScryBorder}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="FontSize" Value="11" />
    <Setter Property="Foreground" Value="{DynamicResource ScryTextMuted}" />
    <Setter Property="TextAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <!-- Tabs: tighten header sizing/spacing for the Media/Apps strip -->
  <Style Selector="TabControl.tabsTight">
    <Setter Property="Padding" Value="0" />
  </Style>

  <!-- Tabs (inline): used for the Media/Apps strip inside the Media card header -->
  <Style Selector="Button.tabLink">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="Margin" Value="0,0,18,0" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>

  <Style Selector="Button.tabLink:pointerover">
    <Setter Property="Opacity" Value="0.95" />
    <Setter Property="Background" Value="Transparent" />
  </Style>

  <Style Selector="Button.tabLink:pressed">
    <Setter Property="Background" Value="Transparent" />
  </Style>

  <Style Selector="TabControl.tabsTight /template/ Border">
    <Setter Property="Padding" Value="0" />
  </Style>

  <Style Selector="TabControl.tabsTight /template/ ContentPresenter">
    <Setter Property="Padding" Value="0" />
    <Setter Property="Margin" Value="0" />
  </Style>

  <Style Selector="TabControl.tabsTight TabItem">
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Padding" Value="0,0,0,4" />
    <Setter Property="Margin" Value="0,0,18,0" />
  </Style>

  <Style Selector="TabControl.tabsTight TabItem:pointerover">
    <Setter Property="Opacity" Value="0.95" />
  </Style>

  <Style Selector="ToggleSwitch">
    <Setter Property="MinHeight" Value="28" />
  </Style>

  <!-- Compact timeline slider used in portal rows -->
  <Style Selector="Slider.portalTimeline">
    <Setter Property="Height" Value="10" />
    <Setter Property="MinHeight" Value="10" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>

  <!-- Vertical volume slider for effects -->
  <Style Selector="Slider.effectVolume">
    <Setter Property="Width" Value="12" />
    <Setter Property="MinWidth" Value="12" />
    <Setter Property="HorizontalAlignment" Value="Center" />
  </Style>

  <!-- Make the thumb a tiny accent bar instead of a big knob -->
  <Style Selector="Slider.portalTimeline /template/ Thumb">
    <Setter Property="Width" Value="10" />
    <Setter Property="Height" Value="6" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="{DynamicResource ScryAccent}"
                CornerRadius="2" />
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="Slider.effectVolume /template/ Thumb">
    <Setter Property="Width" Value="10" />
    <Setter Property="Height" Value="8" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="{DynamicResource ScryAccent}"
                CornerRadius="2" />
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
